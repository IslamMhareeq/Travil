@{
    ViewData["Title"] = "Discounts & Pricing";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discounts - TRAVIL Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-success: #3fb950;
            --color-success-muted: rgba(63, 185, 80, 0.15);
            --color-warning: #d29922;
            --color-warning-muted: rgba(210, 153, 34, 0.15);
            --color-error: #f85149;
            --color-error-muted: rgba(248, 81, 73, 0.15);
            --color-info: #58a6ff;
            --color-info-muted: rgba(88, 166, 255, 0.15);
            --sidebar-width: 280px;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-full: 9999px;
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
            min-height: 100vh;
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: var(--sidebar-width);
            background: var(--color-navy);
            border-right: 1px solid var(--color-slate);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            z-index: 100;
            transition: transform var(--transition-normal);
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-slate);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

            .sidebar-logo .logo-icon {
                width: 44px;
                height: 44px;
                background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
                border-radius: var(--radius-md);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
                color: var(--color-midnight);
            }

            .sidebar-logo .logo-text {
                display: flex;
                flex-direction: column;
            }

                .sidebar-logo .logo-text span:first-child {
                    font-family: var(--font-display);
                    font-size: 1.5rem;
                    font-weight: 500;
                    color: var(--color-white);
                    letter-spacing: 0.1em;
                }

                .sidebar-logo .logo-text span:last-child {
                    font-size: 0.75rem;
                    color: var(--color-gold);
                    text-transform: uppercase;
                    letter-spacing: 0.1em;
                }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: var(--space-5);
        }

        .nav-section-title {
            font-size: 0.6875rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--color-steel);
            padding: var(--space-2) var(--space-3);
            margin-bottom: var(--space-2);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            color: var(--color-silver);
            text-decoration: none;
            border-radius: var(--radius-md);
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: var(--color-gold-muted);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
                font-size: 0.9375rem;
            }

        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: var(--space-6);
            min-height: 100vh;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: var(--space-5);
            flex-wrap: wrap;
            gap: var(--space-4);
        }

            .page-header h1 {
                font-family: var(--font-display);
                font-size: 2rem;
                font-weight: 500;
                margin-bottom: var(--space-1);
                display: flex;
                align-items: center;
                gap: var(--space-3);
            }

                .page-header h1 i {
                    color: var(--color-gold);
                }

            .page-header p {
                color: var(--color-silver);
            }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--space-4);
            margin-bottom: var(--space-5);
        }

        .stat-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            background: var(--color-gold-muted);
            color: var(--color-gold);
        }

            .stat-icon.scheduled {
                background: var(--color-info-muted);
                color: var(--color-info);
            }

            .stat-icon.savings {
                background: var(--color-success-muted);
                color: var(--color-success);
            }

            .stat-icon.packages {
                background: var(--color-slate);
                color: var(--color-mist);
            }

        .stat-value {
            font-family: var(--font-display);
            font-size: 1.75rem;
            font-weight: 500;
        }

        .stat-label {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        .discount-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
            gap: var(--space-4);
        }

        .discount-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
            transition: all var(--transition-fast);
        }

            .discount-card:hover {
                border-color: var(--color-charcoal);
            }

            .discount-card.expired {
                opacity: 0.6;
            }

        .discount-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: var(--space-4);
            border-bottom: 1px solid var(--color-slate);
        }

            .discount-header h3 {
                font-family: var(--font-display);
                font-size: 1.125rem;
                font-weight: 500;
                display: flex;
                align-items: center;
                gap: var(--space-2);
            }

                .discount-header h3 i {
                    color: var(--color-gold);
                }

        .badge {
            padding: var(--space-1) var(--space-3);
            border-radius: var(--radius-full);
            font-size: 0.6875rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .badge-active {
            background: var(--color-success-muted);
            color: var(--color-success);
        }

        .badge-scheduled {
            background: var(--color-info-muted);
            color: var(--color-info);
        }

        .badge-expired {
            background: var(--color-error-muted);
            color: var(--color-error);
        }

        .discount-body {
            padding: var(--space-4);
        }

        .discount-amount {
            font-family: var(--font-display);
            font-size: 2rem;
            font-weight: 500;
            color: var(--color-gold);
            margin-bottom: var(--space-3);
        }

        .discount-info {
            display: flex;
            flex-direction: column;
            gap: var(--space-2);
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            font-size: 0.875rem;
        }

        .info-label {
            color: var(--color-silver);
        }

        .info-value {
            color: var(--color-mist);
            font-weight: 500;
        }

        .discount-actions {
            display: flex;
            gap: var(--space-3);
            padding: var(--space-4);
            background: var(--color-slate);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-4);
            font-family: var(--font-body);
            font-size: 0.8125rem;
            font-weight: 500;
            border: none;
            border-radius: var(--radius-md);
            cursor: pointer;
            text-decoration: none;
            transition: all var(--transition-fast);
            flex: 1;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(212, 168, 83, 0.3);
            }

        .btn-secondary {
            background: var(--color-charcoal);
            color: var(--color-mist);
        }

            .btn-secondary:hover {
                background: var(--color-steel);
            }

        .btn-danger {
            background: var(--color-error-muted);
            color: var(--color-error);
        }

            .btn-danger:hover {
                background: var(--color-error);
                color: var(--color-white);
            }

        .empty-state {
            text-align: center;
            padding: var(--space-6);
            color: var(--color-silver);
            grid-column: 1 / -1;
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: var(--space-4);
                opacity: 0.5;
            }

            .empty-state h3 {
                font-family: var(--font-display);
                font-size: 1.25rem;
                color: var(--color-white);
                margin-bottom: var(--space-2);
            }

            .empty-state p {
                margin-bottom: var(--space-4);
            }

            .empty-state .btn {
                flex: none;
            }

        .loading {
            text-align: center;
            padding: var(--space-6);
            color: var(--color-silver);
            grid-column: 1 / -1;
        }

        .spinner {
            width: 32px;
            height: 32px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto var(--space-3);
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: all var(--transition-normal);
        }

            .modal-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        .modal {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            width: 90%;
            max-width: 480px;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--space-4);
        }

            .modal-header h3 {
                font-family: var(--font-display);
                font-size: 1.25rem;
                font-weight: 500;
                display: flex;
                align-items: center;
                gap: var(--space-2);
            }

        .modal-close {
            background: none;
            border: none;
            color: var(--color-silver);
            font-size: 1.5rem;
            cursor: pointer;
        }

        .form-group {
            margin-bottom: var(--space-4);
        }

            .form-group label {
                display: block;
                font-size: 0.875rem;
                font-weight: 500;
                color: var(--color-mist);
                margin-bottom: var(--space-2);
            }

        .form-control {
            width: 100%;
            padding: var(--space-3) var(--space-4);
            background: var(--color-slate);
            border: 1px solid var(--color-charcoal);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-family: var(--font-body);
            font-size: 0.9375rem;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: var(--space-4);
        }

        .form-hint {
            font-size: 0.75rem;
            color: var(--color-silver);
            margin-top: var(--space-3);
            display: flex;
            align-items: center;
            gap: var(--space-2);
        }

            .form-hint i {
                color: var(--color-info);
            }

        .modal-actions {
            display: flex;
            gap: var(--space-3);
            margin-top: var(--space-5);
        }

        .toast {
            position: fixed;
            bottom: var(--space-6);
            right: var(--space-6);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            padding: var(--space-4) var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            transform: translateX(calc(100% + var(--space-6)));
            transition: transform var(--transition-normal);
            z-index: 2000;
        }

            .toast.show {
                transform: translateX(0);
            }

            .toast.success {
                border-color: var(--color-success);
            }

                .toast.success i {
                    color: var(--color-success);
                }

            .toast.error {
                border-color: var(--color-error);
            }

                .toast.error i {
                    color: var(--color-error);
                }

        .mobile-menu-btn {
            display: none;
            width: 40px;
            height: 40px;
            background: var(--color-slate);
            border: 1px solid var(--color-charcoal);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-size: 1.125rem;
            cursor: pointer;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 99;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 1200px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: flex;
            }
        }

        @@media (max-width: 768px) {
            .main-content {
                padding: var(--space-4);
            }

            .discount-grid {
                grid-template-columns: 1fr;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .page-header {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="admin-layout">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/admin/dashboard" class="sidebar-logo">
                    <div class="logo-icon"><i class="fas fa-paper-plane"></i></div>
                    <div class="logo-text"><span>TRAVIL</span><span>Admin Panel</span></div>
                </a>
            </div>
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Main</div>
                    <a href="/admin/dashboard" class="nav-item"><i class="fas fa-th-large"></i><span>Dashboard</span></a>
                    <a href="/admin/packages" class="nav-item"><i class="fas fa-suitcase-rolling"></i><span>Packages</span></a>
                    <a href="/admin/bookings" class="nav-item"><i class="fas fa-calendar-check"></i><span>Bookings</span></a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Management</div>
                    <a href="/admin/users" class="nav-item"><i class="fas fa-users"></i><span>Users</span></a>
                    <a href="/admin/reviews" class="nav-item"><i class="fas fa-star"></i><span>Reviews</span></a>
                    <a href="/admin/prices" class="nav-item active"><i class="fas fa-tags"></i><span>Discounts</span></a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Settings</div>
                    <a href="/" class="nav-item"><i class="fas fa-globe"></i><span>View Site</span></a>
                    <a href="#" class="nav-item" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
                </div>
            </nav>
        </aside>
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <main class="main-content">
            <div class="page-header">
                <div>
                    <button class="mobile-menu-btn" id="mobileMenuBtn"><i class="fas fa-bars"></i></button>
                    <h1><i class="fas fa-tags"></i> Discounts & Pricing</h1>
                    <p>Manage package discounts and promotional offers</p>
                </div>
                <button class="btn btn-primary" onclick="openAddModal()"><i class="fas fa-plus"></i> Create Discount</button>
            </div>

            <div class="stats-grid">
                <div class="stat-card"><div class="stat-icon"><i class="fas fa-percent"></i></div><div><div class="stat-value" id="activeDiscounts">0</div><div class="stat-label">Active Discounts</div></div></div>
                <div class="stat-card"><div class="stat-icon scheduled"><i class="fas fa-calendar-alt"></i></div><div><div class="stat-value" id="scheduledDiscounts">0</div><div class="stat-label">Scheduled</div></div></div>
                <div class="stat-card"><div class="stat-icon savings"><i class="fas fa-dollar-sign"></i></div><div><div class="stat-value" id="totalSavings">$0</div><div class="stat-label">Total Savings</div></div></div>
                <div class="stat-card"><div class="stat-icon packages"><i class="fas fa-box"></i></div><div><div class="stat-value" id="packagesWithDiscount">0</div><div class="stat-label">Packages on Sale</div></div></div>
            </div>

            <div class="discount-grid" id="discountGrid"><div class="loading"><div class="spinner"></div><p>Loading discounts...</p></div></div>
        </main>
    </div>

    <div class="modal-overlay" id="discountModal">
        <div class="modal">
            <div class="modal-header"><h3 id="modalTitle"><i class="fas fa-plus-circle" style="color: var(--color-gold);"></i> Create Discount</h3><button class="modal-close" onclick="closeModal()">&times;</button></div>
            <form id="discountForm">
                <input type="hidden" id="discountPackageId" />
                <div class="form-group"><label for="packageSelect">Package *</label><select id="packageSelect" class="form-control" required><option value="">Select a package</option></select></div>
                <div class="form-row">
                    <div class="form-group"><label for="originalPrice">Original Price ($)</label><input type="number" id="originalPrice" class="form-control" readonly /></div>
                    <div class="form-group"><label for="discountedPrice">Discounted Price ($) *</label><input type="number" id="discountedPrice" class="form-control" step="0.01" min="1" required /></div>
                </div>
                <div class="form-row">
                    <div class="form-group"><label for="startDate">Start Date *</label><input type="date" id="startDate" class="form-control" required /></div>
                    <div class="form-group"><label for="endDate">End Date *</label><input type="date" id="endDate" class="form-control" required /></div>
                </div>
                <p class="form-hint"><i class="fas fa-info-circle"></i> Discount can be active for max 7 days</p>
                <div class="modal-actions"><button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button><button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Apply Discount</button></div>
            </form>
        </div>
    </div>

    <div class="modal-overlay" id="deleteModal">
        <div class="modal">
            <div class="modal-header"><h3><i class="fas fa-trash" style="color: var(--color-error);"></i> Remove Discount</h3><button class="modal-close" onclick="closeDeleteModal()">&times;</button></div>
            <p style="color: var(--color-silver); margin-bottom: var(--space-4);">Are you sure you want to remove this discount? The package will return to its original price.</p>
            <input type="hidden" id="deletePackageId" />
            <div class="modal-actions"><button class="btn btn-secondary" onclick="closeDeleteModal()">Cancel</button><button class="btn btn-danger" onclick="confirmDelete()"><i class="fas fa-trash"></i> Remove</button></div>
        </div>
    </div>

    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>

    <script>
        var allPackages = [], discountedPackages = [];

        function logout(e) { e.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href = '/account/login'; }
        function showToast(message, type) { type = type || 'success'; var toast = document.getElementById('toast'); document.getElementById('toastMessage').textContent = message; toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle'; toast.className = 'toast ' + type + ' show'; setTimeout(function() { toast.classList.remove('show'); }, 3000); }
        function formatDate(dateStr) { return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }); }

        document.getElementById('mobileMenuBtn').addEventListener('click', function() { document.getElementById('sidebar').classList.toggle('active'); document.getElementById('sidebarOverlay').classList.toggle('active'); });
        document.getElementById('sidebarOverlay').addEventListener('click', function() { document.getElementById('sidebar').classList.remove('active'); this.classList.remove('active'); });

        function getDiscountStatus(pkg) {
            if (!pkg.discountedPrice) return 'none';
            var now = new Date(), start = new Date(pkg.discountStartDate), end = new Date(pkg.discountEndDate);
            if (now < start) return 'scheduled';
            if (now > end) return 'expired';
            return 'active';
        }

        async function loadData() {
            var token = localStorage.getItem('token');
            try {
                var response = await fetch('/api/packages/all', { headers: { 'Authorization': 'Bearer ' + token } });
                if (response.ok) {
                    var result = await response.json();
                    allPackages = result.data || [];
                    discountedPackages = allPackages.filter(function(p) { return p.discountedPrice && p.discountedPrice > 0; });
                    populatePackageSelect(); updateStats(); renderDiscounts();
                } else { showToast('Failed to load packages', 'error'); }
            } catch (error) { document.getElementById('discountGrid').innerHTML = '<div class="empty-state"><i class="fas fa-exclamation-triangle"></i><h3>Error Loading Data</h3><p>Please try again later</p></div>'; }
        }

        function populatePackageSelect() {
            var select = document.getElementById('packageSelect');
            select.innerHTML = '<option value="">Select a package</option>';
            allPackages.forEach(function(pkg) { var option = document.createElement('option'); option.value = pkg.packageId; option.textContent = pkg.destination + ' - $' + pkg.price; option.dataset.price = pkg.price; select.appendChild(option); });
        }

        function updateStats() {
            var now = new Date();
            var active = discountedPackages.filter(function(p) { return new Date(p.discountStartDate) <= now && new Date(p.discountEndDate) >= now; }).length;
            var scheduled = discountedPackages.filter(function(p) { return new Date(p.discountStartDate) > now; }).length;
            var totalSavings = discountedPackages.reduce(function(sum, p) { return getDiscountStatus(p) === 'active' ? sum + (p.price - p.discountedPrice) : sum; }, 0);
            document.getElementById('activeDiscounts').textContent = active;
            document.getElementById('scheduledDiscounts').textContent = scheduled;
            document.getElementById('totalSavings').textContent = '$' + Math.round(totalSavings).toLocaleString();
            document.getElementById('packagesWithDiscount').textContent = discountedPackages.filter(function(p) { var s = getDiscountStatus(p); return s === 'active' || s === 'scheduled'; }).length;
        }

        function renderDiscounts() {
            var grid = document.getElementById('discountGrid');
            if (discountedPackages.length === 0) { grid.innerHTML = '<div class="empty-state"><i class="fas fa-tags"></i><h3>No Discounts</h3><p>Create your first discount to get started</p><button class="btn btn-primary" onclick="openAddModal()"><i class="fas fa-plus"></i> Create Discount</button></div>'; return; }

            grid.innerHTML = discountedPackages.map(function(pkg) {
                var status = getDiscountStatus(pkg);
                var savings = pkg.price - pkg.discountedPrice;
                var discountPercent = Math.round((savings / pkg.price) * 100);
                return '<div class="discount-card ' + (status === 'expired' ? 'expired' : '') + '"><div class="discount-header"><h3><i class="fas fa-tag"></i> ' + pkg.destination + '</h3><span class="badge badge-' + status + '">' + status + '</span></div><div class="discount-body"><div class="discount-amount">' + discountPercent + '% OFF</div><div class="discount-info"><div class="info-row"><span class="info-label">Original Price</span><span class="info-value">$' + pkg.price.toLocaleString() + '</span></div><div class="info-row"><span class="info-label">Discounted Price</span><span class="info-value" style="color: var(--color-gold);">$' + pkg.discountedPrice.toLocaleString() + '</span></div><div class="info-row"><span class="info-label">Customer Saves</span><span class="info-value" style="color: var(--color-success);">$' + savings.toLocaleString() + '</span></div><div class="info-row"><span class="info-label">Valid Period</span><span class="info-value">' + formatDate(pkg.discountStartDate) + ' - ' + formatDate(pkg.discountEndDate) + '</span></div></div></div><div class="discount-actions"><button class="btn btn-secondary" onclick="editDiscount(' + pkg.packageId + ')"><i class="fas fa-edit"></i> Edit</button><button class="btn btn-danger" onclick="deleteDiscount(' + pkg.packageId + ')"><i class="fas fa-trash"></i> Remove</button></div></div>';
            }).join('');
        }

        function openAddModal() {
            document.getElementById('modalTitle').innerHTML = '<i class="fas fa-plus-circle" style="color: var(--color-gold);"></i> Create Discount';
            document.getElementById('discountPackageId').value = '';
            document.getElementById('discountForm').reset();
            document.getElementById('originalPrice').value = '';
            var today = new Date().toISOString().split('T')[0];
            document.getElementById('startDate').value = today;
            document.getElementById('startDate').min = today;
            document.getElementById('endDate').min = today;
            document.getElementById('discountModal').classList.add('active');
        }

        function editDiscount(packageId) {
            var pkg = allPackages.find(function(p) { return p.packageId === packageId; });
            if (!pkg) return;
            document.getElementById('modalTitle').innerHTML = '<i class="fas fa-edit" style="color: var(--color-gold);"></i> Edit Discount';
            document.getElementById('discountPackageId').value = packageId;
            document.getElementById('packageSelect').value = packageId;
            document.getElementById('originalPrice').value = pkg.price;
            document.getElementById('discountedPrice').value = pkg.discountedPrice || '';
            document.getElementById('startDate').value = pkg.discountStartDate ? pkg.discountStartDate.split('T')[0] : '';
            document.getElementById('endDate').value = pkg.discountEndDate ? pkg.discountEndDate.split('T')[0] : '';
            document.getElementById('discountModal').classList.add('active');
        }

        function closeModal() { document.getElementById('discountModal').classList.remove('active'); }
        function deleteDiscount(packageId) { document.getElementById('deletePackageId').value = packageId; document.getElementById('deleteModal').classList.add('active'); }
        function closeDeleteModal() { document.getElementById('deleteModal').classList.remove('active'); }

        async function confirmDelete() {
            var packageId = parseInt(document.getElementById('deletePackageId').value);
            var token = localStorage.getItem('token');
            try {
                var response = await fetch('/api/packages/' + packageId + '/discount', { method: 'DELETE', headers: { 'Authorization': 'Bearer ' + token } });
                if (response.ok) { showToast('Discount removed successfully'); loadData(); } else { var result = await response.json(); showToast(result.message || 'Failed to remove discount', 'error'); }
            } catch (error) { showToast('An error occurred', 'error'); }
            closeDeleteModal();
        }

        document.getElementById('packageSelect').addEventListener('change', function() { var selected = this.options[this.selectedIndex]; document.getElementById('originalPrice').value = selected.dataset.price || ''; });

        document.getElementById('discountForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            var packageId = document.getElementById('discountPackageId').value || document.getElementById('packageSelect').value;
            var discountedPrice = parseFloat(document.getElementById('discountedPrice').value);
            var startDate = document.getElementById('startDate').value;
            var endDate = document.getElementById('endDate').value;
            var originalPrice = parseFloat(document.getElementById('originalPrice').value);

            if (!packageId) { showToast('Please select a package', 'error'); return; }
            if (discountedPrice >= originalPrice) { showToast('Discounted price must be less than original price', 'error'); return; }

            var token = localStorage.getItem('token');
            try {
                var response = await fetch('/api/packages/' + packageId + '/discount', { method: 'POST', headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + token }, body: JSON.stringify({ discountedPrice: discountedPrice, startDate: startDate, endDate: endDate }) });
                var result = await response.json();
                if (response.ok && result.success) { showToast('Discount applied successfully'); closeModal(); loadData(); } else { showToast(result.message || 'Failed to apply discount', 'error'); }
            } catch (error) { showToast('An error occurred', 'error'); }
        });

        document.addEventListener('DOMContentLoaded', function() { var token = localStorage.getItem('token'); if (!token) { window.location.href = '/account/login'; return; } loadData(); });
    </script>
