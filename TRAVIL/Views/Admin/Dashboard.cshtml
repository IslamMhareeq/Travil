@{
    ViewData["Title"] = "Admin Dashboard - TRAVIL";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        .dashboard-layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 260px;
            background: var(--color-navy);
            border-right: 1px solid var(--color-border);
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            z-index: 100;
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-border);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--color-white);
        }

            .sidebar-logo i {
                color: var(--color-gold);
            }

        .admin-badge {
            background: var(--color-gold);
            color: var(--color-bg);
            font-size: 0.625rem;
            padding: 2px 6px;
            border-radius: var(--radius-sm);
            font-weight: 600;
            margin-left: var(--space-2);
        }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: var(--space-6);
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--color-muted);
            margin-bottom: var(--space-3);
            padding: 0 var(--space-3);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            border-radius: var(--radius-md);
            color: var(--color-silver);
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: rgba(212, 168, 83, 0.1);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        .sidebar-footer {
            padding: var(--space-4);
            border-top: 1px solid var(--color-border);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: var(--radius-full);
            background: var(--color-gold);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--color-bg);
        }

        .user-details {
            flex: 1;
            min-width: 0;
        }

        .user-name {
            font-weight: 500;
            color: var(--color-white);
        }

        .user-role {
            font-size: 0.8125rem;
            color: var(--color-gold);
        }

        .main-content {
            flex: 1;
            margin-left: 260px;
            padding: var(--space-6);
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: var(--space-6);
        }

            .page-header h1 {
                font-size: 1.75rem;
                font-weight: 600;
                color: var(--color-white);
            }

            .page-header .subtitle {
                color: var(--color-silver);
                font-size: 0.875rem;
                margin-top: var(--space-1);
            }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: var(--space-5);
            margin-bottom: var(--space-8);
        }

        .stat-card {
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-4);
            transition: all var(--transition-normal);
        }

            .stat-card:hover {
                border-color: var(--color-gold);
                transform: translateY(-2px);
            }

        .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

            .stat-icon.packages {
                background: rgba(212, 168, 83, 0.15);
                color: var(--color-gold);
            }

            .stat-icon.bookings {
                background: rgba(16, 185, 129, 0.15);
                color: var(--color-success);
            }

            .stat-icon.users {
                background: rgba(59, 130, 246, 0.15);
                color: #3b82f6;
            }

            .stat-icon.revenue {
                background: rgba(168, 85, 247, 0.15);
                color: #a855f7;
            }

            .stat-icon.reviews {
                background: rgba(245, 158, 11, 0.15);
                color: var(--color-warning);
            }

            .stat-icon.waiting {
                background: rgba(239, 68, 68, 0.15);
                color: var(--color-error);
            }

        .stat-content {
            flex: 1;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--color-white);
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--color-silver);
        }

        .content-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: var(--space-6);
        }

        .card {
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            overflow: hidden;
        }

        .card-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-border);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .card-header h3 {
                font-size: 1.125rem;
                font-weight: 600;
                color: var(--color-white);
            }

        .card-body {
            padding: var(--space-5);
        }

        .recent-item {
            display: flex;
            align-items: center;
            gap: var(--space-4);
            padding: var(--space-3) 0;
            border-bottom: 1px solid var(--color-border);
        }

            .recent-item:last-child {
                border-bottom: none;
            }

        .recent-item-icon {
            width: 40px;
            height: 40px;
            border-radius: var(--radius-md);
            background: var(--color-slate);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--color-gold);
        }

        .recent-item-info {
            flex: 1;
            min-width: 0;
        }

        .recent-item-title {
            font-weight: 500;
            color: var(--color-white);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .recent-item-meta {
            font-size: 0.8125rem;
            color: var(--color-muted);
        }

        .recent-item-badge {
            padding: var(--space-1) var(--space-2);
            border-radius: var(--radius-sm);
            font-size: 0.75rem;
            font-weight: 600;
        }

            .recent-item-badge.confirmed {
                background: rgba(16, 185, 129, 0.15);
                color: var(--color-success);
            }

            .recent-item-badge.pending {
                background: rgba(245, 158, 11, 0.15);
                color: var(--color-warning);
            }

        .quick-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: var(--space-3);
        }

        .quick-action {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-5);
            background: var(--color-slate);
            border-radius: var(--radius-md);
            color: var(--color-silver);
            transition: all var(--transition-fast);
            text-align: center;
        }

            .quick-action:hover {
                background: var(--color-midnight);
                color: var(--color-gold);
            }

            .quick-action i {
                font-size: 1.5rem;
            }

            .quick-action span {
                font-size: 0.8125rem;
                font-weight: 500;
            }

        .mobile-menu-btn {
            display: none;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 99;
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform var(--transition-normal);
            }

                .sidebar.open {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 40px;
                height: 40px;
                background: var(--color-slate);
                border: none;
                border-radius: var(--radius-md);
                color: var(--color-pearl);
                cursor: pointer;
                margin-right: var(--space-4);
            }

            .content-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-logo"><i class="fas fa-compass"></i> TRAVIL <span class="admin-badge">ADMIN</span></a>
            </div>
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Overview</div>
                    <a href="/admin/dashboard" class="nav-item active"><i class="fas fa-th-large"></i> Dashboard</a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Management</div>
                    <a href="/admin/packages" class="nav-item"><i class="fas fa-suitcase"></i> Packages</a>
                    <a href="/admin/bookings" class="nav-item"><i class="fas fa-calendar-check"></i> Bookings</a>
                    <a href="/admin/users" class="nav-item"><i class="fas fa-users"></i> Users</a>
                    <a href="/admin/reviews" class="nav-item"><i class="fas fa-star"></i> Reviews</a>
                    <a href="/admin/waiting-list" class="nav-item"><i class="fas fa-clock"></i> Waiting List</a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Settings</div>
                    <a href="/admin/settings" class="nav-item"><i class="fas fa-cog"></i> Settings</a>
                    <a href="/" class="nav-item"><i class="fas fa-globe"></i> View Site</a>
                    <a href="#" onclick="logout(event)" class="nav-item"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </nav>
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar" id="userAvatar">A</div>
                    <div class="user-details">
                        <div class="user-name" id="userName">Admin</div>
                        <div class="user-role">Administrator</div>
                    </div>
                </div>
            </div>
        </aside>

        <main class="main-content">
            <div class="page-header">
                <div style="display: flex; align-items: center;">
                    <button class="mobile-menu-btn" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
                    <div>
                        <h1>Dashboard</h1>
                        <p class="subtitle">Welcome back! Here's what's happening today.</p>
                    </div>
                </div>
                <a href="/admin/packages/create" class="btn btn-primary"><i class="fas fa-plus"></i> Add Package</a>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon packages"><i class="fas fa-suitcase"></i></div>
                    <div class="stat-content"><div class="stat-value" id="statPackages">0</div><div class="stat-label">Total Packages</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon bookings"><i class="fas fa-calendar-check"></i></div>
                    <div class="stat-content"><div class="stat-value" id="statBookings">0</div><div class="stat-label">Total Bookings</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon users"><i class="fas fa-users"></i></div>
                    <div class="stat-content"><div class="stat-value" id="statUsers">0</div><div class="stat-label">Registered Users</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon revenue"><i class="fas fa-dollar-sign"></i></div>
                    <div class="stat-content"><div class="stat-value" id="statRevenue">$0</div><div class="stat-label">Total Revenue</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon reviews"><i class="fas fa-star"></i></div>
                    <div class="stat-content"><div class="stat-value" id="statReviews">0</div><div class="stat-label">Reviews</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon waiting"><i class="fas fa-clock"></i></div>
                    <div class="stat-content"><div class="stat-value" id="statWaiting">0</div><div class="stat-label">On Waiting List</div></div>
                </div>
            </div>

            <div class="content-grid">
                <div class="card">
                    <div class="card-header">
                        <h3>Recent Bookings</h3>
                        <a href="/admin/bookings" class="btn btn-outline btn-sm">View All</a>
                    </div>
                    <div class="card-body" id="recentBookings">
                        <div class="loading"><div class="spinner"></div><p>Loading...</p></div>
                    </div>
                </div>

                <div style="display: flex; flex-direction: column; gap: var(--space-6);">
                    <div class="card">
                        <div class="card-header"><h3>Quick Actions</h3></div>
                        <div class="card-body">
                            <div class="quick-actions">
                                <a href="/admin/packages/create" class="quick-action"><i class="fas fa-plus-circle"></i><span>Add Package</span></a>
                                <a href="/admin/bookings" class="quick-action"><i class="fas fa-eye"></i><span>View Bookings</span></a>
                                <a href="/admin/users" class="quick-action"><i class="fas fa-user-plus"></i><span>Manage Users</span></a>
                                <a href="/admin/reviews" class="quick-action"><i class="fas fa-comments"></i><span>Reviews</span></a>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header"><h3>Recent Reviews</h3></div>
                        <div class="card-body" id="recentReviews">
                            <div class="loading"><div class="spinner"></div></div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        var token = localStorage.getItem('token');
        var user = localStorage.getItem('user');
        if (!token || !user) window.location.href = '/account/login';

        var userData = null;
        try { userData = JSON.parse(user); } catch (e) { window.location.href = '/account/login'; }

        // Check if admin
        if (userData.role !== 0 && userData.role !== '0' && userData.role !== 'Admin') {
            window.location.href = '/account/dashboard';
        }

        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('open'); document.getElementById('sidebarOverlay').classList.toggle('active'); }
        function logout(e) { e.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href = '/'; }
        function formatDate(d) { if (!d) return ''; return new Date(d).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }); }

        function updateUserInfo() {
            if (!userData) return;
            var initials = ((userData.firstName || 'A')[0] + (userData.lastName || '')[0]).toUpperCase();
            document.getElementById('userAvatar').textContent = initials;
            document.getElementById('userName').textContent = userData.firstName + ' ' + (userData.lastName || '');
        }

        async function loadDashboardStats() {
            try {
                // Load packages
                var pkgRes = await fetch('/api/packages');
                var packages = await pkgRes.json();
                document.getElementById('statPackages').textContent = (packages.data || packages || []).length;

                // Load bookings
                var bookRes = await fetch('/api/booking/all', { headers: { 'Authorization': 'Bearer ' + token } });
                var bookings = await bookRes.json();
                var bookingsList = bookings.data || bookings || [];
                document.getElementById('statBookings').textContent = bookingsList.length;

                // Calculate revenue
                var revenue = bookingsList.reduce(function(sum, b) { return sum + (b.totalPrice || 0); }, 0);
                document.getElementById('statRevenue').textContent = '$' + Math.round(revenue).toLocaleString();

                // Load users
                var usersRes = await fetch('/api/admin/users', { headers: { 'Authorization': 'Bearer ' + token } });
                var users = await usersRes.json();
                document.getElementById('statUsers').textContent = (users.data || users || []).length;

                // Load reviews
                var reviewsRes = await fetch('/api/review/site');
                var reviews = await reviewsRes.json();
                document.getElementById('statReviews').textContent = (reviews.data || reviews || []).length;

                // Render recent bookings
                renderRecentBookings(bookingsList.slice(0, 5));

            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        function renderRecentBookings(bookings) {
            var el = document.getElementById('recentBookings');
            if (bookings.length === 0) {
                el.innerHTML = '<div class="empty-state" style="padding: var(--space-4);"><p>No bookings yet</p></div>';
                return;
            }
            var html = '';
            bookings.forEach(function(b) {
                var pkg = b.package || {};
                var statusClass = b.status === 'Confirmed' ? 'confirmed' : 'pending';
                html += '<div class="recent-item">' +
                    '<div class="recent-item-icon"><i class="fas fa-suitcase"></i></div>' +
                    '<div class="recent-item-info">' +
                        '<div class="recent-item-title">' + (pkg.destination || 'Trip') + ' - ' + (b.userName || 'User') + '</div>' +
                        '<div class="recent-item-meta">$' + Math.round(b.totalPrice || 0) + ' • ' + formatDate(b.createdAt) + '</div>' +
                    '</div>' +
                    '<span class="recent-item-badge ' + statusClass + '">' + (b.status || 'Pending') + '</span>' +
                '</div>';
            });
            el.innerHTML = html;
        }

        async function loadRecentReviews() {
            try {
                var res = await fetch('/api/review/site');
                var data = await res.json();
                var reviews = (data.data || data || []).slice(0, 3);
                var el = document.getElementById('recentReviews');

                if (reviews.length === 0) {
                    el.innerHTML = '<p style="color: var(--color-muted); text-align: center;">No reviews yet</p>';
                    return;
                }

                var html = '';
                reviews.forEach(function(r) {
                    html += '<div class="recent-item">' +
                        '<div class="recent-item-icon"><i class="fas fa-star"></i></div>' +
                        '<div class="recent-item-info">' +
                            '<div class="recent-item-title">' + (r.userName || 'Anonymous') + '</div>' +
                            '<div class="recent-item-meta">' + (r.rating || 5) + ' stars</div>' +
                        '</div>' +
                    '</div>';
                });
                el.innerHTML = html;
            } catch (e) { console.error('Error:', e); }
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateUserInfo();
            loadDashboardStats();
            loadRecentReviews();
        });
    </script>
</body>
</html>
