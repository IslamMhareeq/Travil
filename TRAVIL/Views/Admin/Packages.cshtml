@{
    ViewData["Title"] = "Manage Packages - TRAVIL Admin";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        .dashboard-layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 260px;
            background: var(--color-navy);
            border-right: 1px solid var(--color-border);
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            z-index: 100;
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-border);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--color-white);
        }

            .sidebar-logo i {
                color: var(--color-gold);
            }

        .admin-badge {
            background: var(--color-gold);
            color: var(--color-bg);
            font-size: 0.625rem;
            padding: 2px 6px;
            border-radius: var(--radius-sm);
            font-weight: 600;
            margin-left: var(--space-2);
        }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: var(--space-6);
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--color-muted);
            margin-bottom: var(--space-3);
            padding: 0 var(--space-3);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            border-radius: var(--radius-md);
            color: var(--color-silver);
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: rgba(212, 168, 83, 0.1);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        .main-content {
            flex: 1;
            margin-left: 260px;
            padding: var(--space-6);
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: var(--space-6);
        }

            .page-header h1 {
                font-size: 1.75rem;
                font-weight: 600;
                color: var(--color-white);
            }

        .filters-bar {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-6);
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 250px;
            position: relative;
        }

            .search-box input {
                width: 100%;
                padding: var(--space-3) var(--space-4) var(--space-3) 44px;
                background: var(--color-charcoal);
                border: 1px solid var(--color-border);
                border-radius: var(--radius-md);
                color: var(--color-pearl);
            }

            .search-box i {
                position: absolute;
                left: var(--space-4);
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-muted);
            }

        .filter-select {
            padding: var(--space-3) var(--space-4);
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            color: var(--color-pearl);
            min-width: 150px;
        }

        .packages-table {
            width: 100%;
            border-collapse: collapse;
        }

            .packages-table th, .packages-table td {
                padding: var(--space-4);
                text-align: left;
                border-bottom: 1px solid var(--color-border);
            }

            .packages-table th {
                background: var(--color-charcoal);
                color: var(--color-silver);
                font-weight: 600;
                font-size: 0.8125rem;
                text-transform: uppercase;
            }

            .packages-table tr:hover {
                background: var(--color-slate);
            }

        .package-cell {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .package-thumb {
            width: 60px;
            height: 40px;
            border-radius: var(--radius-sm);
            object-fit: cover;
        }

        .package-name {
            font-weight: 500;
            color: var(--color-white);
        }

        .package-location {
            font-size: 0.8125rem;
            color: var(--color-muted);
        }

        .price-cell {
            font-weight: 600;
            color: var(--color-gold);
        }

            .price-cell .original {
                font-size: 0.8125rem;
                color: var(--color-muted);
                text-decoration: line-through;
                display: block;
            }

        .status-badge {
            padding: var(--space-1) var(--space-2);
            border-radius: var(--radius-sm);
            font-size: 0.75rem;
            font-weight: 600;
        }

            .status-badge.active {
                background: rgba(16, 185, 129, 0.15);
                color: var(--color-success);
            }

            .status-badge.sold-out {
                background: rgba(239, 68, 68, 0.15);
                color: var(--color-error);
            }

        .actions-cell {
            display: flex;
            gap: var(--space-2);
        }

        .action-btn {
            padding: var(--space-2);
            background: var(--color-slate);
            border: none;
            border-radius: var(--radius-sm);
            color: var(--color-silver);
            cursor: pointer;
            transition: all var(--transition-fast);
        }

            .action-btn:hover {
                color: var(--color-gold);
            }

            .action-btn.delete:hover {
                color: var(--color-error);
            }

        .card {
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            overflow: hidden;
        }

        .mobile-menu-btn {
            display: none;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 99;
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9000;
            opacity: 0;
            visibility: hidden;
            transition: all var(--transition-normal);
            padding: var(--space-6);
        }

            .modal-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        .modal {
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            width: 100%;
            max-width: 700px;
            max-height: 90vh;
            overflow-y: auto;
        }

        .modal-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-border);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            background: var(--color-charcoal);
            z-index: 1;
        }

            .modal-header h3 {
                font-size: 1.25rem;
                font-weight: 600;
                color: var(--color-white);
            }

        .modal-close {
            background: none;
            border: none;
            color: var(--color-silver);
            font-size: 1.5rem;
            cursor: pointer;
        }

        .modal-body {
            padding: var(--space-5);
        }

        .modal-footer {
            padding: var(--space-5);
            border-top: 1px solid var(--color-border);
            display: flex;
            justify-content: flex-end;
            gap: var(--space-3);
            position: sticky;
            bottom: 0;
            background: var(--color-charcoal);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: var(--space-4);
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform var(--transition-normal);
            }

                .sidebar.open {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: flex;
            }

            .packages-table {
                display: block;
                overflow-x: auto;
            }

            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header"><a href="/" class="sidebar-logo"><i class="fas fa-compass"></i> TRAVIL <span class="admin-badge">ADMIN</span></a></div>
            <nav class="sidebar-nav">
                <div class="nav-section"><div class="nav-section-title">Overview</div><a href="/admin/dashboard" class="nav-item"><i class="fas fa-th-large"></i> Dashboard</a></div>
                <div class="nav-section"><div class="nav-section-title">Management</div><a href="/admin/packages" class="nav-item active"><i class="fas fa-suitcase"></i> Packages</a><a href="/admin/bookings" class="nav-item"><i class="fas fa-calendar-check"></i> Bookings</a><a href="/admin/users" class="nav-item"><i class="fas fa-users"></i> Users</a><a href="/admin/reviews" class="nav-item"><i class="fas fa-star"></i> Reviews</a></div>
                <div class="nav-section"><div class="nav-section-title">Settings</div><a href="/" class="nav-item"><i class="fas fa-globe"></i> View Site</a><a href="#" onclick="logout(event)" class="nav-item"><i class="fas fa-sign-out-alt"></i> Logout</a></div>
            </nav>
        </aside>
        <main class="main-content">
            <div class="page-header">
                <div style="display: flex; align-items: center;"><button class="mobile-menu-btn" onclick="toggleSidebar()" style="margin-right: var(--space-4);"><i class="fas fa-bars"></i></button><h1>Manage Packages</h1></div>
                <button class="btn btn-primary" onclick="openCreateModal()"><i class="fas fa-plus"></i> Add Package</button>
            </div>
            <div class="filters-bar">
                <div class="search-box"><i class="fas fa-search"></i><input type="text" id="searchInput" placeholder="Search packages..." oninput="filterPackages()" /></div>
                <select class="filter-select" id="categoryFilter" onchange="filterPackages()"><option value="">All Categories</option><option value="0">Family</option><option value="1">Honeymoon</option><option value="2">Adventure</option><option value="3">Cruise</option><option value="4">Luxury</option><option value="5">Budget</option><option value="6">Cultural</option><option value="7">Beach</option></select>
            </div>
            <div class="card">
                <table class="packages-table">
                    <thead><tr><th>Package</th><th>Category</th><th>Price</th><th>Rooms</th><th>Dates</th><th>Status</th><th>Actions</th></tr></thead>
                    <tbody id="packagesTable"><tr><td colspan="7" style="text-align: center; padding: var(--space-8);"><div class="loading"><div class="spinner"></div></div></td></tr></tbody>
                </table>
            </div>
        </main>
    </div>
    <div class="modal-overlay" id="packageModal">
        <div class="modal">
            <div class="modal-header"><h3 id="modalTitle">Add New Package</h3><button class="modal-close" onclick="closeModal()">&times;</button></div>
            <div class="modal-body">
                <form id="packageForm">
                    <input type="hidden" id="packageId" />
                    <div class="form-row"><div class="form-group"><label class="form-label">Destination *</label><input type="text" class="form-control" id="destination" required /></div><div class="form-group"><label class="form-label">Country *</label><input type="text" class="form-control" id="country" required /></div></div>
                    <div class="form-group"><label class="form-label">Description</label><textarea class="form-control" id="description" rows="3"></textarea></div>
                    <div class="form-row"><div class="form-group"><label class="form-label">Price ($) *</label><input type="number" class="form-control" id="price" required min="0" step="0.01" /></div><div class="form-group"><label class="form-label">Discounted Price ($)</label><input type="number" class="form-control" id="discountedPrice" min="0" step="0.01" /></div></div>
                    <div class="form-row"><div class="form-group"><label class="form-label">Start Date *</label><input type="date" class="form-control" id="startDate" required /></div><div class="form-group"><label class="form-label">End Date *</label><input type="date" class="form-control" id="endDate" required /></div></div>
                    <div class="form-row"><div class="form-group"><label class="form-label">Available Rooms *</label><input type="number" class="form-control" id="availableRooms" required min="0" /></div><div class="form-group"><label class="form-label">Age Restriction</label><input type="number" class="form-control" id="ageRestriction" min="0" /></div></div>
                    <div class="form-group"><label class="form-label">Category *</label><select class="form-control" id="packageType" required><option value="0">Family</option><option value="1">Honeymoon</option><option value="2">Adventure</option><option value="3">Cruise</option><option value="4">Luxury</option><option value="5">Budget</option><option value="6">Cultural</option><option value="7">Beach</option></select></div>
                    <div class="form-group"><label class="form-label">Image URLs (comma separated)</label><input type="text" class="form-control" id="images" /></div>
                </form>
            </div>
            <div class="modal-footer"><button class="btn btn-outline" onclick="closeModal()">Cancel</button><button class="btn btn-primary" onclick="savePackage()"><i class="fas fa-save"></i> Save</button></div>
        </div>
    </div>
    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>
    <script>
        var token = localStorage.getItem('token'), user = localStorage.getItem('user');
        if (!token || !user) window.location.href = '/account/login';
        var userData = null; try { userData = JSON.parse(user); } catch (e) { window.location.href = '/account/login'; }
        if (userData.role !== 0 && userData.role !== '0' && userData.role !== 'Admin') window.location.href = '/account/dashboard';
        var allPackages = [], categoryNames = ['Family', 'Honeymoon', 'Adventure', 'Cruise', 'Luxury', 'Budget', 'Cultural', 'Beach'];
        function showToast(msg, type) { type = type || 'success'; var t = document.getElementById('toast'); document.getElementById('toastMessage').textContent = msg; t.className = 'toast ' + type; t.classList.add('show'); setTimeout(function() { t.classList.remove('show'); }, 3000); }
        function formatDate(d) { if (!d) return ''; return new Date(d).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }); }
        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('open'); document.getElementById('sidebarOverlay').classList.toggle('active'); }
        function logout(e) { e.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href = '/'; }
        async function loadPackages() { try { var res = await fetch('/api/packages'); allPackages = await res.json(); if (allPackages.data) allPackages = allPackages.data; renderPackages(allPackages); } catch (e) { console.error(e); } }
        function renderPackages(packages) {
            var tbody = document.getElementById('packagesTable');
            if (packages.length === 0) { tbody.innerHTML = '<tr><td colspan="7" style="text-align:center;padding:var(--space-8);"><p>No packages found</p></td></tr>'; return; }
            var html = '';
            packages.forEach(function(pkg) {
                var hasDis = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
                var img = pkg.images && pkg.images.length > 0 ? (pkg.images[0].startsWith('http') ? pkg.images[0] : '/images/travel-packages/' + pkg.images[0]) : 'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=100&q=80';
                var status = pkg.availableRooms > 0 ? 'active' : 'sold-out', statusText = pkg.availableRooms > 0 ? 'Available' : 'Sold Out';
                html += '<tr><td><div class="package-cell"><img src="' + img + '" class="package-thumb" /><div><div class="package-name">' + (pkg.destination || '') + '</div><div class="package-location">' + (pkg.country || '') + '</div></div></div></td><td>' + categoryNames[pkg.packageType] + '</td><td class="price-cell">' + (hasDis ? '<span class="original">$' + Math.round(pkg.price) + '</span>' : '') + '$' + Math.round(hasDis ? pkg.discountedPrice : pkg.price) + '</td><td>' + (pkg.availableRooms || 0) + '</td><td>' + formatDate(pkg.startDate) + ' - ' + formatDate(pkg.endDate) + '</td><td><span class="status-badge ' + status + '">' + statusText + '</span></td><td class="actions-cell"><button class="action-btn" onclick="editPackage(' + pkg.packageId + ')"><i class="fas fa-edit"></i></button><button class="action-btn delete" onclick="deletePackage(' + pkg.packageId + ')"><i class="fas fa-trash"></i></button></td></tr>';
            });
            tbody.innerHTML = html;
        }
        function filterPackages() { var search = document.getElementById('searchInput').value.toLowerCase(), category = document.getElementById('categoryFilter').value; var filtered = allPackages.filter(function(pkg) { var matchSearch = !search || (pkg.destination || '').toLowerCase().includes(search) || (pkg.country || '').toLowerCase().includes(search); var matchCategory = !category || pkg.packageType == category; return matchSearch && matchCategory; }); renderPackages(filtered); }
        function openCreateModal() { document.getElementById('modalTitle').textContent = 'Add New Package'; document.getElementById('packageForm').reset(); document.getElementById('packageId').value = ''; document.getElementById('packageModal').classList.add('active'); }
        function closeModal() { document.getElementById('packageModal').classList.remove('active'); }
        function editPackage(id) { var pkg = allPackages.find(function(p) { return p.packageId === id; }); if (!pkg) return; document.getElementById('modalTitle').textContent = 'Edit Package'; document.getElementById('packageId').value = pkg.packageId; document.getElementById('destination').value = pkg.destination || ''; document.getElementById('country').value = pkg.country || ''; document.getElementById('description').value = pkg.description || ''; document.getElementById('price').value = pkg.price || ''; document.getElementById('discountedPrice').value = pkg.discountedPrice || ''; document.getElementById('startDate').value = pkg.startDate ? pkg.startDate.split('T')[0] : ''; document.getElementById('endDate').value = pkg.endDate ? pkg.endDate.split('T')[0] : ''; document.getElementById('availableRooms').value = pkg.availableRooms || 0; document.getElementById('ageRestriction').value = pkg.ageRestriction || ''; document.getElementById('packageType').value = pkg.packageType || 0; document.getElementById('images').value = (pkg.images || []).join(', '); document.getElementById('packageModal').classList.add('active'); }
        async function savePackage() { var id = document.getElementById('packageId').value; var data = { destination: document.getElementById('destination').value, country: document.getElementById('country').value, description: document.getElementById('description').value, price: parseFloat(document.getElementById('price').value), discountedPrice: document.getElementById('discountedPrice').value ? parseFloat(document.getElementById('discountedPrice').value) : null, startDate: document.getElementById('startDate').value, endDate: document.getElementById('endDate').value, availableRooms: parseInt(document.getElementById('availableRooms').value), ageRestriction: document.getElementById('ageRestriction').value ? parseInt(document.getElementById('ageRestriction').value) : null, packageType: parseInt(document.getElementById('packageType').value), images: document.getElementById('images').value.split(',').map(function(s) { return s.trim(); }).filter(function(s) { return s; }) }; try { var url = id ? '/api/packages/' + id : '/api/packages', method = id ? 'PUT' : 'POST'; var res = await fetch(url, { method: method, headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' }, body: JSON.stringify(data) }); if (res.ok) { showToast(id ? 'Package updated!' : 'Package created!'); closeModal(); loadPackages(); } else { showToast('Failed to save', 'error'); } } catch (e) { showToast('Error', 'error'); } }
        async function deletePackage(id) { if (!confirm('Delete this package?')) return; try { var res = await fetch('/api/packages/' + id, { method: 'DELETE', headers: { 'Authorization': 'Bearer ' + token } }); if (res.ok) { showToast('Deleted'); loadPackages(); } else { showToast('Failed', 'error'); } } catch (e) { showToast('Error', 'error'); } }
        document.addEventListener('DOMContentLoaded', loadPackages);
    </script>
</body>
</html>
