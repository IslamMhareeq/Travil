@{
    ViewData["Title"] = "Manage Packages";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Packages - TRAVIL Admin</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-success: #3fb950;
            --color-success-muted: rgba(63, 185, 80, 0.15);
            --color-warning: #d29922;
            --color-warning-muted: rgba(210, 153, 34, 0.15);
            --color-error: #f85149;
            --color-error-muted: rgba(248, 81, 73, 0.15);
            --sidebar-width: 280px;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-full: 9999px;
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
            --shadow-gold: 0 4px 20px rgba(212, 168, 83, 0.3);
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
            min-height: 100vh;
        }

        .page-transition {
            position: fixed;
            inset: 0;
            background: var(--color-midnight);
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all var(--transition-normal);
        }

            .page-transition.active {
                opacity: 1;
                visibility: visible;
            }

        .loader {
            width: 48px;
            height: 48px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--color-navy);
            border-right: 1px solid var(--color-slate);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            z-index: 100;
            transition: transform var(--transition-normal);
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-slate);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

            .sidebar-logo .logo-icon {
                width: 44px;
                height: 44px;
                background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%);
                border-radius: var(--radius-md);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
                color: var(--color-midnight);
            }

            .sidebar-logo .logo-text {
                display: flex;
                flex-direction: column;
            }

                .sidebar-logo .logo-text span:first-child {
                    font-family: var(--font-display);
                    font-size: 1.5rem;
                    font-weight: 500;
                    color: var(--color-white);
                    letter-spacing: 0.1em;
                }

                .sidebar-logo .logo-text span:last-child {
                    font-size: 0.75rem;
                    color: var(--color-gold);
                    text-transform: uppercase;
                    letter-spacing: 0.1em;
                }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: var(--space-5);
        }

        .nav-section-title {
            font-size: 0.6875rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--color-steel);
            padding: var(--space-2) var(--space-3);
            margin-bottom: var(--space-2);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            color: var(--color-silver);
            text-decoration: none;
            border-radius: var(--radius-md);
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: var(--color-gold-muted);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
                font-size: 0.9375rem;
            }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: var(--space-6);
            min-height: 100vh;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: var(--space-5);
            flex-wrap: wrap;
            gap: var(--space-4);
        }

            .page-header h1 {
                font-family: var(--font-display);
                font-size: 2rem;
                font-weight: 500;
                margin-bottom: var(--space-1);
                display: flex;
                align-items: center;
                gap: var(--space-3);
            }

                .page-header h1 i {
                    color: var(--color-gold);
                }

            .page-header p {
                color: var(--color-silver);
            }

        /* Buttons */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-5);
            font-family: var(--font-body);
            font-size: 0.875rem;
            font-weight: 500;
            border: none;
            border-radius: var(--radius-md);
            cursor: pointer;
            transition: all var(--transition-normal);
            text-decoration: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%);
            color: var(--color-midnight);
            box-shadow: var(--shadow-gold);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 24px rgba(212, 168, 83, 0.4);
            }

        .btn-secondary {
            background: var(--color-slate);
            color: var(--color-mist);
            border: 1px solid var(--color-charcoal);
        }

            .btn-secondary:hover {
                background: var(--color-charcoal);
            }

        .btn-danger {
            background: var(--color-error-muted);
            color: var(--color-error);
            border: 1px solid transparent;
        }

            .btn-danger:hover {
                background: var(--color-error);
                color: var(--color-white);
            }

        .btn-icon {
            padding: var(--space-2);
            width: 36px;
            height: 36px;
        }

        /* Toolbar */
        .toolbar {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-5);
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 280px;
            position: relative;
        }

            .search-box i {
                position: absolute;
                left: var(--space-4);
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-steel);
            }

            .search-box input {
                width: 100%;
                padding: var(--space-3) var(--space-4) var(--space-3) 44px;
                background: var(--color-navy);
                border: 1px solid var(--color-slate);
                border-radius: var(--radius-md);
                color: var(--color-white);
                font-family: var(--font-body);
                font-size: 0.9375rem;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: var(--color-gold);
                }

                .search-box input::placeholder {
                    color: var(--color-steel);
                }

        .filter-select {
            padding: var(--space-3) var(--space-4);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-family: var(--font-body);
            font-size: 0.875rem;
            cursor: pointer;
            min-width: 140px;
        }

            .filter-select:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        /* Card & Table */
        .card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

            .data-table th, .data-table td {
                padding: var(--space-4);
                text-align: left;
                border-bottom: 1px solid var(--color-slate);
            }

            .data-table th {
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                color: var(--color-silver);
                font-weight: 500;
                background: var(--color-slate);
            }

            .data-table td {
                font-size: 0.875rem;
            }

            .data-table tr:last-child td {
                border-bottom: none;
            }

            .data-table tr:hover td {
                background: rgba(255, 255, 255, 0.02);
            }

        .package-info {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .package-img {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-sm);
            object-fit: cover;
        }

        .package-name {
            font-weight: 500;
            margin-bottom: 2px;
        }

        .package-country {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: var(--space-1) var(--space-3);
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 500;
        }

            .status-badge.active {
                background: var(--color-success-muted);
                color: var(--color-success);
            }

            .status-badge.inactive {
                background: var(--color-error-muted);
                color: var(--color-error);
            }

        .actions {
            display: flex;
            gap: var(--space-2);
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: var(--space-4) var(--space-5);
            border-top: 1px solid var(--color-slate);
        }

        .pagination-info {
            font-size: 0.875rem;
            color: var(--color-silver);
        }

        .pagination-btns {
            display: flex;
            gap: var(--space-2);
        }

            .pagination-btns button:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: var(--space-6);
        }

            .empty-state i {
                font-size: 3rem;
                color: var(--color-silver);
                margin-bottom: var(--space-4);
                opacity: 0.5;
            }

            .empty-state p {
                color: var(--color-silver);
                margin-bottom: var(--space-4);
            }

        /* Mobile */
        .mobile-menu-btn {
            display: none;
            width: 40px;
            height: 40px;
            background: var(--color-slate);
            border: 1px solid var(--color-charcoal);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-size: 1.125rem;
            cursor: pointer;
            align-items: center;
            justify-content: center;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 99;
        }

        /* Toast */
        .toast {
            position: fixed;
            bottom: var(--space-6);
            right: var(--space-6);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            padding: var(--space-4) var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            transform: translateX(calc(100% + var(--space-6)));
            transition: transform var(--transition-normal);
            z-index: 2000;
        }

            .toast.show {
                transform: translateX(0);
            }

            .toast.success {
                border-color: var(--color-success);
            }

                .toast.success i {
                    color: var(--color-success);
                }

            .toast.error {
                border-color: var(--color-error);
            }

                .toast.error i {
                    color: var(--color-error);
                }

        /* Responsive */
        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: flex;
            }
        }

        @@media (max-width: 768px) {
            .main-content {
                padding: var(--space-4);
            }

            .toolbar {
                flex-direction: column;
            }

            .search-box {
                min-width: 100%;
            }

            .data-table {
                font-size: 0.8125rem;
            }

            .hide-mobile {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="page-transition" id="pageTransition"><div class="loader"></div></div>

    <div class="admin-layout">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/admin/dashboard" class="sidebar-logo">
                    <div class="logo-icon"><i class="fas fa-paper-plane"></i></div>
                    <div class="logo-text"><span>TRAVIL</span><span>Admin Panel</span></div>
                </a>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Main</div>
                    <a href="/admin/dashboard" class="nav-item"><i class="fas fa-th-large"></i><span>Dashboard</span></a>
                    <a href="/admin/packages" class="nav-item active"><i class="fas fa-suitcase-rolling"></i><span>Packages</span></a>
                    <a href="/admin/bookings" class="nav-item"><i class="fas fa-calendar-check"></i><span>Bookings</span></a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Management</div>
                    <a href="/admin/users" class="nav-item"><i class="fas fa-users"></i><span>Users</span></a>
                    <a href="/admin/reviews" class="nav-item"><i class="fas fa-star"></i><span>Reviews</span></a>
                    <a href="/admin/prices" class="nav-item"><i class="fas fa-tags"></i><span>Discounts</span></a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Settings</div>
                    <a href="/" class="nav-item"><i class="fas fa-globe"></i><span>View Site</span></a>
                    <a href="#" class="nav-item" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
                </div>
            </nav>
        </aside>

        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <main class="main-content">
            <div class="page-header">
                <div>
                    <button class="mobile-menu-btn" id="mobileMenuBtn"><i class="fas fa-bars"></i></button>
                    <h1><i class="fas fa-suitcase-rolling"></i> Manage Packages</h1>
                    <p>Create, edit and manage travel packages</p>
                </div>
                <a href="/admin/packages/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Package
                </a>
            </div>

            <div class="toolbar">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Search packages..." oninput="filterPackages()" />
                </div>
                <select class="filter-select" id="statusFilter" onchange="filterPackages()">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
                <select class="filter-select" id="typeFilter" onchange="filterPackages()">
                    <option value="">All Types</option>
                    <option value="0">Adventure</option>
                    <option value="1">Beach</option>
                    <option value="2">Cultural</option>
                    <option value="3">Cruise</option>
                    <option value="4">Safari</option>
                    <option value="5">Ski</option>
                    <option value="6">City Break</option>
                    <option value="7">Honeymoon</option>
                    <option value="8">Family</option>
                    <option value="9">Luxury</option>
                </select>
            </div>

            <div class="card">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Package</th>
                            <th class="hide-mobile">Type</th>
                            <th>Price</th>
                            <th class="hide-mobile">Rooms</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="packagesTableBody">
                        <tr>
                            <td colspan="6">
                                <div class="empty-state">
                                    <i class="fas fa-spinner fa-spin"></i>
                                    <p>Loading packages...</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="pagination" id="pagination" style="display: none;">
                    <span class="pagination-info" id="paginationInfo">Showing 1-10 of 50 packages</span>
                    <div class="pagination-btns">
                        <button class="btn btn-secondary btn-icon" id="prevBtn" onclick="prevPage()"><i class="fas fa-chevron-left"></i></button>
                        <button class="btn btn-secondary btn-icon" id="nextBtn" onclick="nextPage()"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <div class="toast" id="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Success!</span>
    </div>

    <script>
        var allPackages = [];
        var filteredPackages = [];
        var currentPage = 1;
        var itemsPerPage = 10;
        var packageTypes = ['Adventure', 'Beach', 'Cultural', 'Cruise', 'Safari', 'Ski', 'City Break', 'Honeymoon', 'Family', 'Luxury'];

        function navigateTo(url, event) {
            if (event) event.preventDefault();
            document.getElementById('pageTransition').classList.add('active');
            setTimeout(function() { window.location.href = url; }, 300);
        }

        function logout(event) {
            if (event) event.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            navigateTo('/account/login');
        }

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.className = 'toast ' + type + ' show';
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('sidebarOverlay').classList.toggle('active');
        });

        document.getElementById('sidebarOverlay').addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('active');
            this.classList.remove('active');
        });

        async function loadPackages() {
            var token = localStorage.getItem('token');
            try {
                var response = await fetch('/api/packages/all', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (response.status === 401) {
                    showToast('Session expired. Please login again.', 'error');
                    setTimeout(function() { navigateTo('/account/login'); }, 2000);
                    return;
                }

                if (response.ok) {
                    var result = await response.json();
                    allPackages = result.data || [];
                    filteredPackages = allPackages.slice();
                    renderPackages();
                } else {
                    showToast('Failed to load packages', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Error loading packages', 'error');
            }
        }

        function renderPackages() {
            var tbody = document.getElementById('packagesTableBody');
            var startIndex = (currentPage - 1) * itemsPerPage;
            var endIndex = startIndex + itemsPerPage;
            var pagePackages = filteredPackages.slice(startIndex, endIndex);

            if (filteredPackages.length === 0) {
                showEmptyState('No packages found');
                return;
            }

            tbody.innerHTML = pagePackages.map(function(pkg) {
                var typeName = packageTypes[pkg.packageType] || 'Unknown';
                var statusClass = pkg.isActive ? 'active' : 'inactive';
                var statusText = pkg.isActive ? 'Active' : 'Inactive';
                var imgSrc = pkg.imageUrl || 'https://via.placeholder.com/48?text=No+Image';

                return '<tr>' +
                    '<td><div class="package-info">' +
                        '<img src="' + imgSrc + '" alt="' + pkg.destination + '" class="package-img" onerror="this.src=\'https://via.placeholder.com/48?text=No+Image\'" />' +
                        '<div><div class="package-name">' + pkg.destination + '</div><div class="package-country">' + pkg.country + '</div></div>' +
                    '</div></td>' +
                    '<td class="hide-mobile">' + typeName + '</td>' +
                    '<td>$' + (pkg.price || 0).toLocaleString() + '</td>' +
                    '<td class="hide-mobile">' + (pkg.availableRooms || 0) + '</td>' +
                    '<td><span class="status-badge ' + statusClass + '">' + statusText + '</span></td>' +
                    '<td><div class="actions">' +
                        '<a href="/admin/packages/edit/' + pkg.packageId + '" class="btn btn-secondary btn-icon" title="Edit"><i class="fas fa-edit"></i></a>' +
                        '<button class="btn btn-danger btn-icon" onclick="deletePackage(' + pkg.packageId + ')" title="Delete"><i class="fas fa-trash"></i></button>' +
                    '</div></td>' +
                    '</tr>';
            }).join('');

            var totalPages = Math.ceil(filteredPackages.length / itemsPerPage);
            document.getElementById('pagination').style.display = 'flex';
            document.getElementById('paginationInfo').textContent = 'Showing ' + (startIndex + 1) + '-' + Math.min(endIndex, filteredPackages.length) + ' of ' + filteredPackages.length + ' packages';
            document.getElementById('prevBtn').disabled = currentPage === 1;
            document.getElementById('nextBtn').disabled = currentPage >= totalPages;
        }

        function showEmptyState(message) {
            var tbody = document.getElementById('packagesTableBody');
            tbody.innerHTML = '<tr><td colspan="6"><div class="empty-state"><i class="fas fa-suitcase"></i><p>' + message + '</p><a href="/admin/packages/create" class="btn btn-primary"><i class="fas fa-plus"></i> Add Package</a></div></td></tr>';
            document.getElementById('pagination').style.display = 'none';
        }

        function filterPackages() {
            var searchTerm = document.getElementById('searchInput').value.toLowerCase();
            var statusFilter = document.getElementById('statusFilter').value;
            var typeFilter = document.getElementById('typeFilter').value;

            filteredPackages = allPackages.filter(function(pkg) {
                var matchesSearch = pkg.destination.toLowerCase().includes(searchTerm) || pkg.country.toLowerCase().includes(searchTerm);
                var matchesStatus = !statusFilter || (statusFilter === 'active' && pkg.isActive) || (statusFilter === 'inactive' && !pkg.isActive);
                var matchesType = !typeFilter || pkg.packageType.toString() === typeFilter;
                return matchesSearch && matchesStatus && matchesType;
            });

            currentPage = 1;
            renderPackages();
        }

        function prevPage() { if (currentPage > 1) { currentPage--; renderPackages(); } }
        function nextPage() {
            var totalPages = Math.ceil(filteredPackages.length / itemsPerPage);
            if (currentPage < totalPages) { currentPage++; renderPackages(); }
        }

        async function deletePackage(id) {
            if (!confirm('Are you sure you want to delete this package?')) return;

            var token = localStorage.getItem('token');
            try {
                var response = await fetch('/api/packages/' + id, {
                    method: 'DELETE',
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (response.ok) {
                    showToast('Package deleted successfully');
                    loadPackages();
                } else {
                    var result = await response.json();
                    showToast(result.message || 'Failed to delete package', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Error deleting package', 'error');
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');

            if (!token || !user) { navigateTo('/account/login'); return; }

            try {
                var userData = JSON.parse(user);
                if (userData.role !== 0 && userData.role !== 'Admin') {
                    showToast('Access denied. Admin only.', 'error');
                    setTimeout(function() { navigateTo('/'); }, 2000);
                    return;
                }
            } catch (e) { console.error('Error:', e); }

            loadPackages();
        });

        window.addEventListener('pageshow', function() {
            document.getElementById('pageTransition').classList.remove('active');
        });
    </script>
</body>
