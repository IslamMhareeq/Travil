@{
    ViewData["Title"] = "Create Package";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Package - TRAVIL Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-bg: #0a0a0f;
            --color-surface: #12121a;
            --color-surface-2: #1a1a24;
            --color-border: #2a2a3a;
            --color-gold: #d4a853;
            --color-gold-hover: #e4b863;
            --color-white: #ffffff;
            --color-silver: #a0a0b0;
            --color-success: #3fb950;
            --color-danger: #f85149;
            --font-main: 'Plus Jakarta Sans', sans-serif;
            --sidebar-width: 260px;
            --radius-sm: 6px;
            --radius-md: 10px;
            --radius-lg: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-main);
            background: var(--color-bg);
            color: var(--color-white);
            min-height: 100vh;
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--color-surface);
            border-right: 1px solid var(--color-border);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 100;
        }

        .sidebar-header {
            padding: 24px;
            border-bottom: 1px solid var(--color-border);
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .sidebar-header .logo {
                width: 40px;
                height: 40px;
                background: linear-gradient(135deg, var(--color-gold), #b8943f);
                border-radius: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
            }

            .sidebar-header h1 {
                font-size: 1.25rem;
                font-weight: 700;
                color: var(--color-gold);
            }

            .sidebar-header span {
                font-size: 0.75rem;
                color: var(--color-silver);
            }

        .nav-section {
            padding: 16px;
        }

        .nav-section-title {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--color-silver);
            margin-bottom: 12px;
            padding-left: 12px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            border-radius: var(--radius-md);
            color: var(--color-silver);
            text-decoration: none;
            transition: all 0.2s;
            margin-bottom: 4px;
        }

            .nav-item:hover {
                background: var(--color-surface-2);
                color: var(--color-white);
            }

            .nav-item.active {
                background: rgba(212, 168, 83, 0.15);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            min-height: 100vh;
        }

        .header {
            padding: 24px 32px;
            border-bottom: 1px solid var(--color-border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header h2 {
                font-size: 1.5rem;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 12px;
            }

        .subtitle {
            color: var(--color-silver);
            font-size: 0.875rem;
            margin-top: 4px;
        }

        .content {
            padding: 32px;
            max-width: 900px;
        }

        /* Form Styles */
        .form-section {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: 24px;
            margin-bottom: 24px;
        }

        .form-section-title {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .form-group {
            margin-bottom: 16px;
        }

            .form-group.full-width {
                grid-column: 1 / -1;
            }

            .form-group label {
                display: block;
                font-size: 0.875rem;
                font-weight: 500;
                color: var(--color-silver);
                margin-bottom: 8px;
            }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            background: var(--color-surface-2);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-size: 0.9rem;
            font-family: var(--font-main);
            transition: all 0.2s;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--color-gold);
                box-shadow: 0 0 0 3px rgba(212, 168, 83, 0.15);
            }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        select.form-control {
            cursor: pointer;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .checkbox-group input[type="checkbox"] {
                width: 20px;
                height: 20px;
                accent-color: var(--color-gold);
            }

        /* Image Upload */
        .image-upload-area {
            border: 2px dashed var(--color-border);
            border-radius: var(--radius-md);
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s;
        }

            .image-upload-area:hover {
                border-color: var(--color-gold);
                background: rgba(212, 168, 83, 0.05);
            }

            .image-upload-area.dragover {
                border-color: var(--color-gold);
                background: rgba(212, 168, 83, 0.1);
            }

            .image-upload-area i {
                font-size: 2.5rem;
                color: var(--color-silver);
                margin-bottom: 12px;
            }

            .image-upload-area p {
                color: var(--color-silver);
                font-size: 0.875rem;
            }

            .image-upload-area .supported {
                font-size: 0.75rem;
                color: var(--color-silver);
                opacity: 0.7;
                margin-top: 8px;
            }

        /* Image Preview */
        .image-preview-container {
            margin-top: 20px;
        }

        .uploaded-images {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
        }

        .image-preview-item {
            position: relative;
            width: 120px;
            height: 120px;
            border-radius: var(--radius-md);
            overflow: hidden;
            border: 1px solid var(--color-border);
        }

            .image-preview-item img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .image-preview-item .remove-btn {
                position: absolute;
                top: 4px;
                right: 4px;
                width: 24px;
                height: 24px;
                background: rgba(248, 81, 73, 0.9);
                border: none;
                border-radius: 50%;
                color: white;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 0.75rem;
            }

            .image-preview-item .primary-badge {
                position: absolute;
                bottom: 4px;
                left: 4px;
                padding: 2px 8px;
                background: var(--color-gold);
                color: var(--color-bg);
                font-size: 0.65rem;
                font-weight: 600;
                border-radius: 4px;
            }

        .uploading-indicator {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px;
            background: rgba(212, 168, 83, 0.1);
            border-radius: var(--radius-md);
            margin-top: 12px;
        }

            .uploading-indicator .spinner {
                width: 16px;
                height: 16px;
                border: 2px solid var(--color-border);
                border-top-color: var(--color-gold);
                border-radius: 50%;
                animation: spin 0.8s linear infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Buttons */
        .form-actions {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
            padding-top: 20px;
            border-top: 1px solid var(--color-border);
            margin-top: 20px;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px 24px;
            border-radius: var(--radius-md);
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--color-gold);
            color: var(--color-bg);
        }

            .btn-primary:hover {
                background: var(--color-gold-hover);
            }

            .btn-primary:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .btn-secondary {
            background: var(--color-surface-2);
            color: var(--color-silver);
            border: 1px solid var(--color-border);
        }

            .btn-secondary:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--color-surface-2);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            padding: 16px 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s;
            z-index: 2000;
        }

            .toast.show {
                transform: translateY(0);
                opacity: 1;
            }

            .toast.success i {
                color: var(--color-success);
            }

            .toast.error i {
                color: var(--color-danger);
            }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
            }

            .content {
                padding: 16px;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo"><i class="fas fa-compass"></i></div>
                <div>
                    <h1>TRAVIL</h1>
                    <span>Admin Panel</span>
                </div>
            </div>

            <nav class="nav-section">
                <div class="nav-section-title">Main</div>
                <a href="/admin/dashboard" class="nav-item"><i class="fas fa-th-large"></i><span>Dashboard</span></a>
                <a href="/admin/packages" class="nav-item active"><i class="fas fa-suitcase"></i><span>Packages</span></a>
                <a href="/admin/bookings" class="nav-item"><i class="fas fa-calendar-check"></i><span>Bookings</span></a>
            </nav>

            <nav class="nav-section">
                <div class="nav-section-title">Management</div>
                <a href="/admin/users" class="nav-item"><i class="fas fa-users"></i><span>Users</span></a>
                <a href="/admin/reviews" class="nav-item"><i class="fas fa-star"></i><span>Reviews</span></a>
            </nav>

            <nav class="nav-section">
                <div class="nav-section-title">Settings</div>
                <a href="/" class="nav-item"><i class="fas fa-globe"></i><span>View Site</span></a>
                <a href="#" class="nav-item" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="header">
                <div>
                    <h2><i class="fas fa-plus-circle" style="color: var(--color-gold);"></i>Create New Package</h2>
                    <p class="subtitle">Add a new travel package with images stored in MongoDB</p>
                </div>
            </div>

            <div class="content">
                <form id="packageForm">
                    <!-- Basic Information -->
                    <div class="form-section">
                        <h3 class="form-section-title"><i class="fas fa-info-circle" style="color: var(--color-gold);"></i>Basic Information</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="destination">Destination *</label>
                                <input type="text" id="destination" class="form-control" placeholder="e.g., Paris" required />
                            </div>
                            <div class="form-group">
                                <label for="country">Country *</label>
                                <input type="text" id="country" class="form-control" placeholder="e.g., France" required />
                            </div>
                            <div class="form-group full-width">
                                <label for="description">Description *</label>
                                <textarea id="description" class="form-control" placeholder="Describe the travel package..." required></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Dates & Pricing -->
                    <div class="form-section">
                        <h3 class="form-section-title"><i class="fas fa-calendar-alt" style="color: var(--color-gold);"></i>Dates & Pricing</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="startDate">Start Date *</label>
                                <input type="date" id="startDate" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="endDate">End Date *</label>
                                <input type="date" id="endDate" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="price">Price (USD) *</label>
                                <input type="number" id="price" class="form-control" placeholder="1299" min="1" step="0.01" required />
                            </div>
                            <div class="form-group">
                                <label for="availableRooms">Available Rooms *</label>
                                <input type="number" id="availableRooms" class="form-control" placeholder="10" min="1" required />
                            </div>
                        </div>
                    </div>

                    <!-- Package Details -->
                    <div class="form-section">
                        <h3 class="form-section-title"><i class="fas fa-cog" style="color: var(--color-gold);"></i>Package Details</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="packageType">Package Type</label>
                                <select id="packageType" class="form-control">
                                    <option value="0">Adventure</option>
                                    <option value="1">Beach</option>
                                    <option value="2">Cultural</option>
                                    <option value="3">Cruise</option>
                                    <option value="4">Safari</option>
                                    <option value="5">Ski</option>
                                    <option value="6">City Break</option>
                                    <option value="7">Honeymoon</option>
                                    <option value="8">Family</option>
                                    <option value="9">Luxury</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="minimumAge">Minimum Age</label>
                                <input type="number" id="minimumAge" class="form-control" placeholder="0" min="0" />
                            </div>
                            <div class="form-group">
                                <label for="maximumAge">Maximum Age</label>
                                <input type="number" id="maximumAge" class="form-control" placeholder="100" min="0" />
                            </div>
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <div class="checkbox-group">
                                    <input type="checkbox" id="isActive" checked />
                                    <label for="isActive" style="margin-bottom: 0;">Package is Active</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Images (MongoDB Upload) -->
                    <div class="form-section">
                        <h3 class="form-section-title"><i class="fas fa-images" style="color: var(--color-gold);"></i>Package Images (MongoDB Storage)</h3>

                        <div class="image-upload-area" id="dropZone" onclick="document.getElementById('imageInput').click()">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <p>Click or drag images here to upload to MongoDB</p>
                            <span class="supported">Supported: JPG, PNG, GIF, WEBP (Max 10MB each)</span>
                        </div>
                        <input type="file" id="imageInput" multiple accept="image/*" style="display: none;" />

                        <div id="uploadingIndicator" class="uploading-indicator" style="display: none;">
                            <div class="spinner"></div>
                            <span>Uploading images to MongoDB...</span>
                        </div>

                        <div class="image-preview-container">
                            <div class="uploaded-images" id="uploadedImages"></div>
                        </div>

                        <!-- Hidden field to store the primary image URL -->
                        <input type="hidden" id="imageUrl" />
                        <input type="hidden" id="imageUrls" />
                    </div>

                    <!-- Itinerary -->
                    <div class="form-section">
                        <h3 class="form-section-title"><i class="fas fa-route" style="color: var(--color-gold);"></i>Itinerary</h3>
                        <div class="form-group full-width">
                            <label for="itinerary">Travel Itinerary</label>
                            <textarea id="itinerary" class="form-control" placeholder="Day 1: Arrival...&#10;Day 2: City tour...&#10;Day 3: Free time..." rows="6"></textarea>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="form-actions">
                        <a href="/admin/packages" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="fas fa-save"></i> Create Package
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <!-- Toast -->
    <div class="toast" id="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Success</span>
    </div>

    <script>
        // Store uploaded image URLs
        var uploadedImageUrls = [];

        function logout(event) {
            if (event) event.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            window.location.href = '/account/login';
        }

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            var icon = toast.querySelector('i');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            icon.className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        // Set minimum dates
        var today = new Date().toISOString().split('T')[0];
        document.getElementById('startDate').min = today;
        document.getElementById('endDate').min = today;

        // Image Upload Handlers
        var dropZone = document.getElementById('dropZone');
        var imageInput = document.getElementById('imageInput');

        dropZone.addEventListener('dragover', function(e) {
            e.preventDefault();
            dropZone.classList.add('dragover');
        });

        dropZone.addEventListener('dragleave', function(e) {
            e.preventDefault();
            dropZone.classList.remove('dragover');
        });

        dropZone.addEventListener('drop', function(e) {
            e.preventDefault();
            dropZone.classList.remove('dragover');
            var files = e.dataTransfer.files;
            if (files.length > 0) {
                uploadImages(files);
            }
        });

        imageInput.addEventListener('change', function(e) {
            if (e.target.files.length > 0) {
                uploadImages(e.target.files);
            }
        });

        // Upload images to MongoDB
        async function uploadImages(files) {
            var token = localStorage.getItem('token');
            var indicator = document.getElementById('uploadingIndicator');

            indicator.style.display = 'flex';

            for (var i = 0; i < files.length; i++) {
                var file = files[i];

                // Validate file type
                if (!file.type.startsWith('image/')) {
                    showToast(file.name + ' is not an image', 'error');
                    continue;
                }

                // Validate file size (10MB)
                if (file.size > 10 * 1024 * 1024) {
                    showToast(file.name + ' exceeds 10MB limit', 'error');
                    continue;
                }

                try {
                    var formData = new FormData();
                    formData.append('file', file);

                    var response = await fetch('/api/images/upload', {
                        method: 'POST',
                        headers: {
                            'Authorization': 'Bearer ' + token
                        },
                        body: formData
                    });

                    var result = await response.json();

                    if (result.success) {
                        uploadedImageUrls.push(result.data.imageUrl);
                        addImagePreview(result.data.imageUrl, result.data.fileName);
                        updateHiddenFields();
                        showToast('Image uploaded to MongoDB!', 'success');
                    } else {
                        showToast(result.message || 'Upload failed', 'error');
                    }
                } catch (error) {
                    console.error('Upload error:', error);
                    showToast('Error uploading ' + file.name, 'error');
                }
            }

            indicator.style.display = 'none';
            imageInput.value = '';
        }

        // Add image preview
        function addImagePreview(imageUrl, fileName) {
            var container = document.getElementById('uploadedImages');
            var div = document.createElement('div');
            div.className = 'image-preview-item';
            div.dataset.url = imageUrl;

            var isPrimary = uploadedImageUrls.length === 1;

            div.innerHTML =
                '<img src="' + imageUrl + '" alt="' + fileName + '" />' +
                '<button type="button" class="remove-btn" onclick="removeImage(this)"><i class="fas fa-times"></i></button>' +
                (isPrimary ? '<span class="primary-badge">Primary</span>' : '');

            container.appendChild(div);
        }

        // Remove image
        function removeImage(btn) {
            var item = btn.closest('.image-preview-item');
            var url = item.dataset.url;

            var index = uploadedImageUrls.indexOf(url);
            if (index > -1) {
                uploadedImageUrls.splice(index, 1);
            }

            item.remove();
            updateHiddenFields();
            updatePrimaryBadge();
        }

        // Update primary badge
        function updatePrimaryBadge() {
            var items = document.querySelectorAll('.image-preview-item');
            items.forEach(function(item, idx) {
                var badge = item.querySelector('.primary-badge');
                if (idx === 0 && !badge) {
                    var span = document.createElement('span');
                    span.className = 'primary-badge';
                    span.textContent = 'Primary';
                    item.appendChild(span);
                } else if (idx !== 0 && badge) {
                    badge.remove();
                }
            });
        }

        // Update hidden fields with image URLs
        function updateHiddenFields() {
            document.getElementById('imageUrl').value = uploadedImageUrls[0] || '';
            document.getElementById('imageUrls').value = JSON.stringify(uploadedImageUrls);
        }

        // Form submission
        document.getElementById('packageForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            var token = localStorage.getItem('token');
            var submitBtn = document.getElementById('submitBtn');

            // Validate at least one image
            if (uploadedImageUrls.length === 0) {
                showToast('Please upload at least one image', 'error');
                return;
            }

            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creating...';

            try {
                var packageData = {
                    destination: document.getElementById('destination').value.trim(),
                    country: document.getElementById('country').value.trim(),
                    description: document.getElementById('description').value.trim(),
                    startDate: document.getElementById('startDate').value,
                    endDate: document.getElementById('endDate').value,
                    price: parseFloat(document.getElementById('price').value),
                    availableRooms: parseInt(document.getElementById('availableRooms').value),
                    packageType: parseInt(document.getElementById('packageType').value),
                    minimumAge: parseInt(document.getElementById('minimumAge').value) || null,
                    maximumAge: parseInt(document.getElementById('maximumAge').value) || null,
                    itinerary: document.getElementById('itinerary').value.trim(),
                    imageUrl: uploadedImageUrls[0],  // Primary image from MongoDB
                    imageUrls: uploadedImageUrls,     // All images from MongoDB
                    isActive: document.getElementById('isActive').checked
                };

                console.log('Creating package with data:', packageData);

                var response = await fetch('/api/packages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify(packageData)
                });

                var result = await response.json();

                if (response.ok && result.success) {
                    showToast('Package created successfully!', 'success');
                    setTimeout(function() {
                        window.location.href = '/admin/packages';
                    }, 1500);
                } else {
                    showToast(result.message || 'Failed to create package', 'error');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-save"></i> Create Package';
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-save"></i> Create Package';
            }
        });

        // Check auth on load
        document.addEventListener('DOMContentLoaded', function() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');

            if (!token || !user) {
                window.location.href = '/account/login';
                return;
            }

            try {
                var userData = JSON.parse(user);
                if (userData.role !== 0 && userData.role !== 'Admin') {
                    showToast('Access denied', 'error');
                    setTimeout(function() { window.location.href = '/'; }, 1500);
                }
            } catch (e) {
                console.error('Error:', e);
            }
        });
    </script>
</body>
