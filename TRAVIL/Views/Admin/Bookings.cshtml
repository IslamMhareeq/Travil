@{
    ViewData["Title"] = "Manage Bookings";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bookings - TRAVIL Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-success: #3fb950;
            --color-success-muted: rgba(63, 185, 80, 0.15);
            --color-warning: #d29922;
            --color-warning-muted: rgba(210, 153, 34, 0.15);
            --color-error: #f85149;
            --color-error-muted: rgba(248, 81, 73, 0.15);
            --color-info: #58a6ff;
            --color-info-muted: rgba(88, 166, 255, 0.15);
            --sidebar-width: 280px;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-full: 9999px;
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
            min-height: 100vh;
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--color-navy);
            border-right: 1px solid var(--color-slate);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            z-index: 100;
            transition: transform var(--transition-normal);
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-slate);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

            .sidebar-logo .logo-icon {
                width: 44px;
                height: 44px;
                background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
                border-radius: var(--radius-md);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
                color: var(--color-midnight);
            }

            .sidebar-logo .logo-text {
                display: flex;
                flex-direction: column;
            }

                .sidebar-logo .logo-text span:first-child {
                    font-family: var(--font-display);
                    font-size: 1.5rem;
                    font-weight: 500;
                    color: var(--color-white);
                    letter-spacing: 0.1em;
                }

                .sidebar-logo .logo-text span:last-child {
                    font-size: 0.75rem;
                    color: var(--color-gold);
                    text-transform: uppercase;
                    letter-spacing: 0.1em;
                }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: var(--space-5);
        }

        .nav-section-title {
            font-size: 0.6875rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--color-steel);
            padding: var(--space-2) var(--space-3);
            margin-bottom: var(--space-2);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            color: var(--color-silver);
            text-decoration: none;
            border-radius: var(--radius-md);
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: var(--color-gold-muted);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
                font-size: 0.9375rem;
            }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: var(--space-6);
            min-height: 100vh;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: var(--space-5);
            flex-wrap: wrap;
            gap: var(--space-4);
        }

            .page-header h1 {
                font-family: var(--font-display);
                font-size: 2rem;
                font-weight: 500;
                margin-bottom: var(--space-1);
                display: flex;
                align-items: center;
                gap: var(--space-3);
            }

                .page-header h1 i {
                    color: var(--color-gold);
                }

            .page-header p {
                color: var(--color-silver);
            }

        /* Stats */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--space-4);
            margin-bottom: var(--space-5);
        }

        .stat-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }

            .stat-icon.pending {
                background: var(--color-warning-muted);
                color: var(--color-warning);
            }

            .stat-icon.confirmed {
                background: var(--color-success-muted);
                color: var(--color-success);
            }

            .stat-icon.cancelled {
                background: var(--color-error-muted);
                color: var(--color-error);
            }

            .stat-icon.revenue {
                background: var(--color-gold-muted);
                color: var(--color-gold);
            }

        .stat-value {
            font-family: var(--font-display);
            font-size: 1.75rem;
            font-weight: 500;
        }

        .stat-label {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        /* Filters */
        .filters {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-5);
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 280px;
            position: relative;
        }

            .search-box i {
                position: absolute;
                left: var(--space-4);
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-steel);
            }

            .search-box input {
                width: 100%;
                padding: var(--space-3) var(--space-4) var(--space-3) 44px;
                background: var(--color-navy);
                border: 1px solid var(--color-slate);
                border-radius: var(--radius-md);
                color: var(--color-white);
                font-family: var(--font-body);
                font-size: 0.9375rem;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: var(--color-gold);
                }

                .search-box input::placeholder {
                    color: var(--color-steel);
                }

        .filter-select {
            padding: var(--space-3) var(--space-4);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-family: var(--font-body);
            font-size: 0.875rem;
            cursor: pointer;
            min-width: 140px;
        }

            .filter-select:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        /* Table */
        .card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

            .data-table th, .data-table td {
                padding: var(--space-4);
                text-align: left;
                border-bottom: 1px solid var(--color-slate);
            }

            .data-table th {
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                color: var(--color-silver);
                font-weight: 500;
                background: var(--color-slate);
            }

            .data-table td {
                font-size: 0.875rem;
            }

            .data-table tr:last-child td {
                border-bottom: none;
            }

            .data-table tr:hover td {
                background: rgba(255, 255, 255, 0.02);
            }

        .booking-ref {
            font-weight: 600;
            color: var(--color-gold);
        }

        .customer-info {
            display: flex;
            flex-direction: column;
        }

        .customer-name {
            font-weight: 500;
        }

        .customer-email {
            font-size: 0.75rem;
            color: var(--color-silver);
        }

        .destination-info {
            display: flex;
            flex-direction: column;
        }

        .destination-name {
            font-weight: 500;
        }

        .travel-date {
            font-size: 0.75rem;
            color: var(--color-silver);
        }

        .price {
            font-weight: 600;
            color: var(--color-gold);
        }

        .status-badge, .payment-badge {
            display: inline-flex;
            align-items: center;
            gap: var(--space-1);
            padding: var(--space-1) var(--space-3);
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 500;
        }

            .status-badge.pending {
                background: var(--color-warning-muted);
                color: var(--color-warning);
            }

            .status-badge.confirmed {
                background: var(--color-success-muted);
                color: var(--color-success);
            }

            .status-badge.cancelled {
                background: var(--color-error-muted);
                color: var(--color-error);
            }

            .payment-badge.paid {
                background: var(--color-success-muted);
                color: var(--color-success);
            }

            .payment-badge.unpaid {
                background: var(--color-warning-muted);
                color: var(--color-warning);
            }

        .actions {
            display: flex;
            gap: var(--space-2);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-2) var(--space-3);
            font-family: var(--font-body);
            font-size: 0.8125rem;
            font-weight: 500;
            border: none;
            border-radius: var(--radius-sm);
            cursor: pointer;
            transition: all var(--transition-fast);
        }

        .btn-sm {
            padding: var(--space-2);
            width: 32px;
            height: 32px;
        }

        .btn-success {
            background: var(--color-success);
            color: var(--color-white);
        }

            .btn-success:hover {
                background: #2ea043;
            }

        .btn-danger {
            background: var(--color-error);
            color: var(--color-white);
        }

            .btn-danger:hover {
                background: #da3633;
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-charcoal);
            color: var(--color-mist);
        }

            .btn-outline:hover {
                background: var(--color-slate);
            }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-4);
        }

            .pagination button {
                width: 36px;
                height: 36px;
                border-radius: var(--radius-sm);
                border: 1px solid var(--color-charcoal);
                background: var(--color-slate);
                color: var(--color-mist);
                cursor: pointer;
                transition: all var(--transition-fast);
            }

                .pagination button:hover {
                    background: var(--color-charcoal);
                }

                .pagination button.active {
                    background: var(--color-gold);
                    color: var(--color-midnight);
                    border-color: var(--color-gold);
                }

        /* Modal */
        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: all var(--transition-normal);
        }

            .modal-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        .modal {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            width: 100%;
            max-width: 420px;
            margin: var(--space-4);
        }

        .modal-title {
            font-family: var(--font-display);
            font-size: 1.25rem;
            font-weight: 500;
            margin-bottom: var(--space-3);
            display: flex;
            align-items: center;
            gap: var(--space-2);
        }

        .modal-message {
            color: var(--color-silver);
            margin-bottom: var(--space-5);
            line-height: 1.6;
        }

        .modal-actions {
            display: flex;
            gap: var(--space-3);
            justify-content: flex-end;
        }

        /* States */
        .loading {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: var(--space-6);
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        .empty-state {
            text-align: center;
            padding: var(--space-6);
            color: var(--color-silver);
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: var(--space-4);
                opacity: 0.5;
            }

            .empty-state h3 {
                font-family: var(--font-display);
                font-size: 1.25rem;
                color: var(--color-white);
                margin-bottom: var(--space-2);
            }

        /* Toast */
        .toast {
            position: fixed;
            bottom: var(--space-6);
            right: var(--space-6);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            padding: var(--space-4) var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            transform: translateX(calc(100% + var(--space-6)));
            transition: transform var(--transition-normal);
            z-index: 2000;
        }

            .toast.show {
                transform: translateX(0);
            }

            .toast.success {
                border-color: var(--color-success);
            }

                .toast.success i {
                    color: var(--color-success);
                }

            .toast.error {
                border-color: var(--color-error);
            }

                .toast.error i {
                    color: var(--color-error);
                }

        /* Mobile */
        .mobile-menu-btn {
            display: none;
            width: 40px;
            height: 40px;
            background: var(--color-slate);
            border: 1px solid var(--color-charcoal);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-size: 1.125rem;
            cursor: pointer;
            align-items: center;
            justify-content: center;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 99;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 1200px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: flex;
            }
        }

        @@media (max-width: 768px) {
            .main-content {
                padding: var(--space-4);
            }

            .filters {
                flex-direction: column;
            }

            .search-box {
                min-width: 100%;
            }

            .hide-mobile {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="admin-layout">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/admin/dashboard" class="sidebar-logo">
                    <div class="logo-icon"><i class="fas fa-paper-plane"></i></div>
                    <div class="logo-text"><span>TRAVIL</span><span>Admin Panel</span></div>
                </a>
            </div>
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Main</div>
                    <a href="/admin/dashboard" class="nav-item"><i class="fas fa-th-large"></i><span>Dashboard</span></a>
                    <a href="/admin/packages" class="nav-item"><i class="fas fa-suitcase-rolling"></i><span>Packages</span></a>
                    <a href="/admin/bookings" class="nav-item active"><i class="fas fa-calendar-check"></i><span>Bookings</span></a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Management</div>
                    <a href="/admin/users" class="nav-item"><i class="fas fa-users"></i><span>Users</span></a>
                    <a href="/admin/reviews" class="nav-item"><i class="fas fa-star"></i><span>Reviews</span></a>
                    <a href="/admin/prices" class="nav-item"><i class="fas fa-tags"></i><span>Discounts</span></a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Settings</div>
                    <a href="/" class="nav-item"><i class="fas fa-globe"></i><span>View Site</span></a>
                    <a href="#" class="nav-item" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
                </div>
            </nav>
        </aside>
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <main class="main-content">
            <div class="page-header">
                <div>
                    <button class="mobile-menu-btn" id="mobileMenuBtn"><i class="fas fa-bars"></i></button>
                    <h1><i class="fas fa-calendar-check"></i> Booking Management</h1>
                    <p>View, confirm, and manage all customer bookings</p>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon pending"><i class="fas fa-clock"></i></div>
                    <div><div class="stat-value" id="pendingCount">0</div><div class="stat-label">Pending Approval</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon confirmed"><i class="fas fa-check-circle"></i></div>
                    <div><div class="stat-value" id="confirmedCount">0</div><div class="stat-label">Confirmed</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon cancelled"><i class="fas fa-times-circle"></i></div>
                    <div><div class="stat-value" id="cancelledCount">0</div><div class="stat-label">Cancelled</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon revenue"><i class="fas fa-dollar-sign"></i></div>
                    <div><div class="stat-value" id="totalRevenue">$0</div><div class="stat-label">Total Revenue</div></div>
                </div>
            </div>

            <div class="filters">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Search by reference, customer, or destination..." />
                </div>
                <select class="filter-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="Pending">Pending</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <select class="filter-select" id="paymentFilter">
                    <option value="">All Payments</option>
                    <option value="Completed">Paid</option>
                    <option value="Pending">Unpaid</option>
                </select>
            </div>

            <div class="card">
                <div class="loading" id="loader"><div class="spinner"></div></div>
                <div class="empty-state" id="emptyState" style="display: none;">
                    <i class="fas fa-calendar-times"></i>
                    <h3>No Bookings Found</h3>
                    <p>There are no bookings matching your criteria.</p>
                </div>
                <table class="data-table" id="bookingsTable" style="display: none;">
                    <thead>
                        <tr>
                            <th>Reference</th>
                            <th>Customer</th>
                            <th class="hide-mobile">Destination</th>
                            <th class="hide-mobile">Rooms</th>
                            <th>Amount</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="bookingsBody"></tbody>
                </table>
                <div class="pagination" id="pagination"></div>
            </div>
        </main>
    </div>

    <!-- Modal -->
    <div class="modal-overlay" id="actionModal">
        <div class="modal">
            <div class="modal-title" id="actionModalTitle"><i class="fas fa-question-circle"></i> Confirm Action</div>
            <p class="modal-message" id="actionModalMessage">Are you sure you want to proceed?</p>
            <input type="hidden" id="actionBookingId" />
            <input type="hidden" id="actionType" />
            <div class="modal-actions">
                <button class="btn btn-outline" onclick="closeModal()">Cancel</button>
                <button class="btn btn-success" id="actionConfirmBtn" onclick="executeAction()">Confirm</button>
            </div>
        </div>
    </div>

    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success</span></div>

    <script>
        var allBookings = [], currentPage = 1, itemsPerPage = 10;

        function logout(event) { if (event) event.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href = '/account/login'; }
        function showToast(message, type) { type = type || 'success'; var toast = document.getElementById('toast'); document.getElementById('toastMessage').textContent = message; toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle'; toast.className = 'toast ' + type + ' show'; setTimeout(function() { toast.classList.remove('show'); }, 3000); }
        function formatDate(d) { if (!d) return 'N/A'; return new Date(d).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }); }
        function formatCurrency(amount) { return '$' + (amount || 0).toLocaleString(); }

        document.getElementById('mobileMenuBtn').addEventListener('click', function() { document.getElementById('sidebar').classList.toggle('active'); document.getElementById('sidebarOverlay').classList.toggle('active'); });
        document.getElementById('sidebarOverlay').addEventListener('click', function() { document.getElementById('sidebar').classList.remove('active'); this.classList.remove('active'); });

        function updateStats() {
            var pending = allBookings.filter(function(b) { return b.status === 'Pending'; }).length;
            var confirmed = allBookings.filter(function(b) { return b.status === 'Confirmed'; }).length;
            var cancelled = allBookings.filter(function(b) { return b.status === 'Cancelled'; }).length;
            var revenue = allBookings.filter(function(b) { return b.status === 'Confirmed' || b.paymentStatus === 'Completed'; }).reduce(function(sum, b) { return sum + (b.totalPrice || 0); }, 0);
            document.getElementById('pendingCount').textContent = pending;
            document.getElementById('confirmedCount').textContent = confirmed;
            document.getElementById('cancelledCount').textContent = cancelled;
            document.getElementById('totalRevenue').textContent = formatCurrency(revenue);
        }

        function getFilteredBookings() {
            var search = document.getElementById('searchInput').value.toLowerCase();
            var status = document.getElementById('statusFilter').value;
            var payment = document.getElementById('paymentFilter').value;
            return allBookings.filter(function(b) {
                var matchesSearch = !search || (b.bookingReference && b.bookingReference.toLowerCase().includes(search)) || (b.userName && b.userName.toLowerCase().includes(search)) || (b.destination && b.destination.toLowerCase().includes(search));
                var matchesStatus = !status || b.status === status;
                var matchesPayment = !payment || b.paymentStatus === payment;
                return matchesSearch && matchesStatus && matchesPayment;
            });
        }

        function getStatusIcon(status) { return status === 'Confirmed' ? 'check-circle' : status === 'Cancelled' ? 'times-circle' : 'clock'; }

        function renderBookings() {
            var filtered = getFilteredBookings();
            var totalPages = Math.ceil(filtered.length / itemsPerPage);
            var start = (currentPage - 1) * itemsPerPage;
            var pageBookings = filtered.slice(start, start + itemsPerPage);

            document.getElementById('loader').style.display = 'none';

            if (filtered.length === 0) {
                document.getElementById('emptyState').style.display = 'block';
                document.getElementById('bookingsTable').style.display = 'none';
                document.getElementById('pagination').innerHTML = '';
                return;
            }

            document.getElementById('emptyState').style.display = 'none';
            document.getElementById('bookingsTable').style.display = 'table';

            var html = '';
            for (var i = 0; i < pageBookings.length; i++) {
                var b = pageBookings[i];
                var statusClass = b.status ? b.status.toLowerCase() : 'pending';
                var paymentClass = b.paymentStatus === 'Completed' ? 'paid' : 'unpaid';
                var paymentText = b.paymentStatus === 'Completed' ? 'Paid' : 'Unpaid';

                html += '<tr>';
                html += '<td><span class="booking-ref">' + (b.bookingReference || 'N/A') + '</span></td>';
                html += '<td><div class="customer-info"><span class="customer-name">' + (b.userName || 'Unknown') + '</span><span class="customer-email">' + (b.userEmail || '') + '</span></div></td>';
                html += '<td class="hide-mobile"><div class="destination-info"><span class="destination-name">' + (b.destination || 'N/A') + '</span><span class="travel-date">' + formatDate(b.startDate) + '</span></div></td>';
                html += '<td class="hide-mobile">' + (b.numberOfRooms || 1) + '</td>';
                html += '<td><span class="price">' + formatCurrency(b.totalPrice) + '</span></td>';
                html += '<td><span class="payment-badge ' + paymentClass + '"><i class="fas fa-' + (paymentClass === 'paid' ? 'check' : 'clock') + '"></i> ' + paymentText + '</span></td>';
                html += '<td><span class="status-badge ' + statusClass + '"><i class="fas fa-' + getStatusIcon(b.status) + '"></i> ' + (b.status || 'Pending') + '</span></td>';
                html += '<td><div class="actions">';
                if (b.status === 'Pending') {
                    html += '<button class="btn btn-success btn-sm" onclick="confirmBooking(' + b.bookingId + ')" title="Confirm"><i class="fas fa-check"></i></button>';
                    html += '<button class="btn btn-danger btn-sm" onclick="cancelBooking(' + b.bookingId + ')" title="Cancel"><i class="fas fa-times"></i></button>';
                } else if (b.status === 'Confirmed') {
                    html += '<button class="btn btn-danger btn-sm" onclick="cancelBooking(' + b.bookingId + ')" title="Cancel"><i class="fas fa-times"></i></button>';
                } else {
                    html += '<span style="color: var(--color-silver); font-size: 0.75rem;">No actions</span>';
                }
                html += '</div></td></tr>';
            }
            document.getElementById('bookingsBody').innerHTML = html;
            renderPagination(totalPages);
        }

        function renderPagination(totalPages) {
            if (totalPages <= 1) { document.getElementById('pagination').innerHTML = ''; return; }
            var html = '';
            for (var i = 1; i <= totalPages; i++) { html += '<button class="' + (i === currentPage ? 'active' : '') + '" onclick="goToPage(' + i + ')">' + i + '</button>'; }
            document.getElementById('pagination').innerHTML = html;
        }

        function goToPage(page) { currentPage = page; renderBookings(); }

        function confirmBooking(bookingId) {
            document.getElementById('actionBookingId').value = bookingId;
            document.getElementById('actionType').value = 'confirm';
            document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-check-circle" style="color: var(--color-success);"></i> Confirm Booking';
            document.getElementById('actionModalMessage').textContent = 'Are you sure you want to confirm this booking? The customer will be notified.';
            document.getElementById('actionConfirmBtn').className = 'btn btn-success';
            document.getElementById('actionConfirmBtn').innerHTML = '<i class="fas fa-check"></i> Confirm';
            document.getElementById('actionModal').classList.add('active');
        }

        function cancelBooking(bookingId) {
            document.getElementById('actionBookingId').value = bookingId;
            document.getElementById('actionType').value = 'cancel';
            document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-exclamation-triangle" style="color: var(--color-error);"></i> Cancel Booking';
            document.getElementById('actionModalMessage').textContent = 'Are you sure you want to cancel this booking? This action cannot be undone.';
            document.getElementById('actionConfirmBtn').className = 'btn btn-danger';
            document.getElementById('actionConfirmBtn').innerHTML = '<i class="fas fa-times"></i> Cancel Booking';
            document.getElementById('actionModal').classList.add('active');
        }

        function closeModal() { document.getElementById('actionModal').classList.remove('active'); }

        async function executeAction() {
            var bookingId = parseInt(document.getElementById('actionBookingId').value);
            var actionType = document.getElementById('actionType').value;
            var token = localStorage.getItem('token');
            var url = actionType === 'confirm' ? '/api/booking/' + bookingId + '/confirm' : '/api/booking/' + bookingId + '/cancel';

            try {
                var response = await fetch(url, { method: 'POST', headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' }, body: actionType === 'cancel' ? JSON.stringify({ reason: 'Cancelled by admin' }) : null });
                var result = await response.json();
                if (response.ok && result.success) { showToast('Booking ' + (actionType === 'confirm' ? 'confirmed' : 'cancelled') + ' successfully!'); closeModal(); await loadBookings(); }
                else { showToast(result.message || 'Action failed', 'error'); }
            } catch (error) { console.error('Error:', error); showToast('An error occurred', 'error'); }
        }

        async function loadBookings() {
            var token = localStorage.getItem('token');
            document.getElementById('loader').style.display = 'flex';
            document.getElementById('bookingsTable').style.display = 'none';
            document.getElementById('emptyState').style.display = 'none';

            try {
                var response = await fetch('/api/booking/all', { headers: { 'Authorization': 'Bearer ' + token } });
                if (response.ok) { var result = await response.json(); allBookings = result.data || []; }
                else if (response.status === 401) { showToast('Session expired', 'error'); setTimeout(function() { window.location.href = '/account/login'; }, 1500); return; }
                else { allBookings = []; }
                updateStats();
                renderBookings();
            } catch (error) { console.error('Error:', error); document.getElementById('loader').style.display = 'none'; document.getElementById('emptyState').style.display = 'block'; showToast('Failed to load bookings', 'error'); }
        }

        document.getElementById('searchInput').addEventListener('input', function() { currentPage = 1; renderBookings(); });
        document.getElementById('statusFilter').addEventListener('change', function() { currentPage = 1; renderBookings(); });
        document.getElementById('paymentFilter').addEventListener('change', function() { currentPage = 1; renderBookings(); });

        document.addEventListener('DOMContentLoaded', function() {
            var token = localStorage.getItem('token'), user = localStorage.getItem('user');
            if (!token || !user) { window.location.href = '/account/login'; return; }
            try { var userData = JSON.parse(user); if (userData.role !== 0 && userData.role !== 'Admin') { showToast('Access denied', 'error'); setTimeout(function() { window.location.href = '/'; }, 1500); return; } } catch (e) {}
            loadBookings();
        });
    </script>
