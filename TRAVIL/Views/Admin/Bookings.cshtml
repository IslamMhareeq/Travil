@{
    ViewData["Title"] = "Manage Bookings";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Bookings - TRAVIL Admin</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="/css/admin.css" rel="stylesheet" />
    
    <style>
        :root {
            --color-midnight: #0d1117; --color-navy: #161b22; --color-slate: #21262d;
            --color-steel: #484f58; --color-silver: #8b949e; --color-white: #ffffff;
            --color-gold: #d4a853; --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --sidebar-width: 280px;
            --space-1: 4px; --space-2: 8px; --space-3: 12px; --space-4: 16px; --space-5: 24px; --space-6: 32px;
            --radius-sm: 6px; --radius-md: 12px; --radius-lg: 16px;
            --transition-fast: 0.15s ease; --transition-normal: 0.3s ease;
            --font-display: 'Cormorant Garamond', serif; --font-body: 'Outfit', sans-serif;
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: var(--font-body); background: var(--color-midnight); color: var(--color-white); }

        .page-transition { position: fixed; inset: 0; background: #0d1117; z-index: 10000; display: flex; align-items: center; justify-content: center; opacity: 0; visibility: hidden; transition: opacity 0.4s ease, visibility 0.4s ease; }
        .page-transition.active { opacity: 1; visibility: visible; }
        .page-transition .loader { width: 48px; height: 48px; border: 3px solid #21262d; border-top-color: #d4a853; border-radius: 50%; animation: spin 0.8s linear infinite; }
        @@keyframes spin { to { transform: rotate(360deg); } }

        .admin-layout { display: flex; min-height: 100vh; }
        .sidebar { width: var(--sidebar-width); background: linear-gradient(180deg, var(--color-navy) 0%, var(--color-midnight) 100%); position: fixed; height: 100vh; overflow-y: auto; z-index: 1000; border-right: 1px solid var(--color-slate); }
        .sidebar-header { padding: var(--space-5); border-bottom: 1px solid var(--color-slate); display: flex; align-items: center; gap: var(--space-3); }
        .sidebar-header .logo { width: 48px; height: 48px; background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; font-size: 1.25rem; color: var(--color-midnight); }
        .sidebar-header h1 { font-family: var(--font-display); font-size: 1.5rem; font-weight: 500; color: var(--color-white); letter-spacing: 0.1em; margin-bottom: 0; }
        .sidebar-header span { font-size: 0.6875rem; color: var(--color-gold); text-transform: uppercase; letter-spacing: 0.15em; }
        .nav-section { padding: var(--space-4) var(--space-3); }
        .nav-section-title { padding: 0 var(--space-3); font-size: 0.6875rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.15em; color: var(--color-steel); margin-bottom: var(--space-3); }
        .nav-item { display: flex; align-items: center; gap: var(--space-3); padding: var(--space-3) var(--space-4); color: var(--color-silver); text-decoration: none; border-radius: var(--radius-md); font-size: 0.875rem; font-weight: 500; transition: all var(--transition-fast); margin-bottom: var(--space-1); border-left: 3px solid transparent; }
        .nav-item i { width: 20px; text-align: center; font-size: 1rem; }
        .nav-item:hover { background: var(--color-slate); color: var(--color-white); }
        .nav-item.active { background: var(--color-gold-muted); color: var(--color-gold); border-left-color: var(--color-gold); }

        .main-content { flex: 1; margin-left: var(--sidebar-width); padding: var(--space-6); }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-6); flex-wrap: wrap; gap: var(--space-4); }
        .header h2 { font-size: 1.75rem; font-weight: 600; }
        .header .subtitle { color: var(--color-silver); font-size: 0.9375rem; margin-top: var(--space-1); }

        .stats-row { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: var(--space-4); margin-bottom: var(--space-6); }
        .stat-card { background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-md); padding: var(--space-5); text-align: center; }
        .stat-card .icon { font-size: 2rem; margin-bottom: var(--space-3); }
        .stat-card .icon.pending { color: #ffa657; }
        .stat-card .icon.confirmed { color: #3fb950; }
        .stat-card .icon.cancelled { color: #f85149; }
        .stat-card .icon.revenue { color: var(--color-gold); }
        .stat-card .value { font-size: 2rem; font-weight: 700; margin-bottom: var(--space-1); }
        .stat-card .label { color: var(--color-silver); font-size: 0.875rem; }

        .filters { display: flex; gap: var(--space-4); margin-bottom: var(--space-5); flex-wrap: wrap; align-items: center; }
        .search-box { flex: 1; min-width: 250px; position: relative; }
        .search-box input { width: 100%; padding: var(--space-3) var(--space-4); padding-left: 44px; background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-md); color: var(--color-white); font-size: 0.9375rem; }
        .search-box input:focus { outline: none; border-color: var(--color-gold); }
        .search-box i { position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: var(--color-steel); }
        .filter-select, .date-filter { padding: var(--space-3) var(--space-4); background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-md); color: var(--color-white); font-size: 0.875rem; }

        .table-container { background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-lg); overflow: hidden; }
        .data-table { width: 100%; border-collapse: collapse; }
        .data-table th, .data-table td { padding: var(--space-4); text-align: left; border-bottom: 1px solid var(--color-slate); }
        .data-table th { background: var(--color-slate); font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; color: var(--color-silver); }
        .data-table tr:hover { background: rgba(212, 168, 83, 0.05); }
        .data-table tr:last-child td { border-bottom: none; }

        .booking-ref { font-family: monospace; font-weight: 600; color: var(--color-gold); font-size: 0.875rem; }
        .customer-info { display: flex; align-items: center; gap: var(--space-3); }
        .customer-avatar { width: 36px; height: 36px; border-radius: 50%; background: var(--color-gold-muted); display: flex; align-items: center; justify-content: center; font-weight: 600; color: var(--color-gold); font-size: 0.875rem; }
        .customer-name { font-weight: 500; }
        .customer-email { font-size: 0.75rem; color: var(--color-silver); }
        .destination-info { display: flex; align-items: center; gap: var(--space-2); }
        .destination-info i { color: var(--color-gold); }
        .price { font-weight: 600; color: var(--color-gold); }

        .badge { display: inline-block; padding: 4px 12px; border-radius: 20px; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; }
        .badge-pending { background: rgba(255, 166, 87, 0.15); color: #ffa657; }
        .badge-confirmed { background: rgba(63, 185, 80, 0.15); color: #3fb950; }
        .badge-cancelled { background: rgba(248, 81, 73, 0.15); color: #f85149; }
        .badge-completed { background: rgba(56, 139, 253, 0.15); color: #58a6ff; }

        .actions { display: flex; gap: var(--space-2); }
        .action-btn { width: 36px; height: 36px; border: none; border-radius: var(--radius-sm); cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all var(--transition-fast); }
        .action-btn.view { background: rgba(56, 139, 253, 0.15); color: #58a6ff; }
        .action-btn.confirm { background: rgba(63, 185, 80, 0.15); color: #3fb950; }
        .action-btn.cancel { background: rgba(248, 81, 73, 0.15); color: #f85149; }
        .action-btn:hover { transform: scale(1.1); }

        .pagination { display: flex; justify-content: center; align-items: center; gap: var(--space-2); padding: var(--space-5); }
        .page-btn { width: 36px; height: 36px; border: 1px solid var(--color-slate); background: transparent; border-radius: var(--radius-sm); color: var(--color-silver); cursor: pointer; transition: all var(--transition-fast); }
        .page-btn:hover, .page-btn.active { background: var(--color-gold); color: var(--color-midnight); border-color: var(--color-gold); }

        .modal-overlay { position: fixed; inset: 0; background: rgba(0, 0, 0, 0.7); display: none; align-items: center; justify-content: center; z-index: 2000; }
        .modal-overlay.active { display: flex; }
        .modal { background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-lg); padding: var(--space-6); max-width: 600px; width: 90%; max-height: 90vh; overflow-y: auto; }
        .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-5); padding-bottom: var(--space-4); border-bottom: 1px solid var(--color-slate); }
        .modal-header h3 { font-size: 1.25rem; }
        .modal-close { background: none; border: none; color: var(--color-silver); font-size: 1.5rem; cursor: pointer; }
        .booking-details { display: grid; gap: var(--space-4); }
        .detail-row { display: flex; justify-content: space-between; padding: var(--space-3) 0; border-bottom: 1px solid var(--color-slate); }
        .detail-row:last-child { border-bottom: none; }
        .detail-label { color: var(--color-silver); }
        .detail-value { font-weight: 500; }
        .modal-actions { display: flex; gap: var(--space-3); justify-content: flex-end; margin-top: var(--space-5); }

        .btn { display: inline-flex; align-items: center; gap: var(--space-2); padding: var(--space-3) var(--space-5); border-radius: var(--radius-md); font-size: 0.875rem; font-weight: 500; cursor: pointer; transition: all var(--transition-fast); text-decoration: none; border: none; }
        .btn-primary { background: var(--color-gold); color: var(--color-midnight); }
        .btn-secondary { background: var(--color-slate); color: var(--color-white); }
        .btn-success { background: #3fb950; color: white; }
        .btn-danger { background: #f85149; color: white; }

        .toast { position: fixed; bottom: 24px; right: 24px; background: #30363d; border: 1px solid #21262d; border-radius: 16px; padding: 16px 24px; display: flex; align-items: center; gap: 12px; color: #ffffff; font-size: 0.9375rem; z-index: 10000; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3); opacity: 0; transform: translateY(20px); transition: all 0.3s ease; }
        .toast.show { opacity: 1; transform: translateY(0); }
        .toast.success i { color: #3fb950; }
        .toast.error i { color: #f85149; }

        .empty-state { text-align: center; padding: 60px 24px; color: var(--color-silver); }
        .empty-state i { font-size: 3rem; opacity: 0.5; margin-bottom: var(--space-4); }
        .loading { display: flex; justify-content: center; padding: 48px; }
        .spinner { width: 32px; height: 32px; border: 3px solid var(--color-slate); border-top-color: var(--color-gold); border-radius: 50%; animation: spin 0.8s linear infinite; }

        @@media (max-width: 1024px) { .sidebar { transform: translateX(-100%); } .sidebar.open { transform: translateX(0); } .main-content { margin-left: 0; } }
        @@media (max-width: 768px) { .data-table { font-size: 0.8125rem; } .data-table th, .data-table td { padding: var(--space-3); } .hide-mobile { display: none; } }
    </style>
</head>
<body>
    <div class="page-transition" id="pageTransition"><div class="loader"></div></div>

    <div class="admin-layout">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo"><i class="fas fa-compass"></i></div>
                <div><h1>TRAVIL</h1><span>Admin Panel</span></div>
            </div>
            <nav class="nav-section">
                <div class="nav-section-title">Main</div>
                <a href="/admin/dashboard" class="nav-item" onclick="navigateTo('/admin/dashboard', event)"><i class="fas fa-th-large"></i><span>Dashboard</span></a>
                <a href="/admin/packages" class="nav-item" onclick="navigateTo('/admin/packages', event)"><i class="fas fa-suitcase"></i><span>Packages</span></a>
                <a href="/admin/bookings" class="nav-item active" onclick="navigateTo('/admin/bookings', event)"><i class="fas fa-calendar-check"></i><span>Bookings</span></a>
            </nav>
            <nav class="nav-section">
                <div class="nav-section-title">Management</div>
                <a href="/admin/users" class="nav-item" onclick="navigateTo('/admin/users', event)"><i class="fas fa-users"></i><span>Users</span></a>
                <a href="/admin/reviews" class="nav-item" onclick="navigateTo('/admin/reviews', event)"><i class="fas fa-star"></i><span>Reviews</span></a>
                <a href="/admin/prices" class="nav-item" onclick="navigateTo('/admin/prices', event)"><i class="fas fa-tags"></i><span>Discounts</span></a>
            </nav>
            <nav class="nav-section">
                <div class="nav-section-title">Settings</div>
                <a href="/admin/profile" class="nav-item" onclick="navigateTo('/admin/profile', event)"><i class="fas fa-user-cog"></i><span>Profile</span></a>
                <a href="/" class="nav-item"><i class="fas fa-globe"></i><span>View Site</span></a>
                <a href="#" class="nav-item" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="main-content">
            <div class="header">
                <div>
                    <h2><i class="fas fa-calendar-check" style="color: var(--color-gold); margin-right: 12px;"></i>Booking Management</h2>
                    <p class="subtitle">View and manage all customer bookings</p>
                </div>
            </div>

            <div class="stats-row">
                <div class="stat-card"><div class="icon pending"><i class="fas fa-clock"></i></div><div class="value" id="pendingCount">--</div><div class="label">Pending</div></div>
                <div class="stat-card"><div class="icon confirmed"><i class="fas fa-check-circle"></i></div><div class="value" id="confirmedCount">--</div><div class="label">Confirmed</div></div>
                <div class="stat-card"><div class="icon cancelled"><i class="fas fa-times-circle"></i></div><div class="value" id="cancelledCount">--</div><div class="label">Cancelled</div></div>
                <div class="stat-card"><div class="icon revenue"><i class="fas fa-dollar-sign"></i></div><div class="value" id="totalRevenue">$--</div><div class="label">Total Revenue</div></div>
            </div>

            <div class="filters">
                <div class="search-box"><i class="fas fa-search"></i><input type="text" id="searchInput" placeholder="Search by reference, customer, or destination..." /></div>
                <select class="filter-select" id="statusFilter"><option value="">All Status</option><option value="Pending">Pending</option><option value="Confirmed">Confirmed</option><option value="Cancelled">Cancelled</option><option value="Completed">Completed</option></select>
                <input type="date" class="date-filter" id="dateFrom" />
                <input type="date" class="date-filter" id="dateTo" />
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr><th>Reference</th><th>Customer</th><th class="hide-mobile">Destination</th><th class="hide-mobile">Date</th><th>Amount</th><th>Status</th><th>Actions</th></tr>
                    </thead>
                    <tbody id="bookingsTableBody"><tr><td colspan="7"><div class="loading"><div class="spinner"></div></div></td></tr></tbody>
                </table>
            </div>
            <div class="pagination" id="pagination"></div>
        </main>
    </div>

    <div class="modal-overlay" id="detailsModal">
        <div class="modal">
            <div class="modal-header"><h3><i class="fas fa-info-circle" style="color: var(--color-gold); margin-right: 8px;"></i>Booking Details</h3><button class="modal-close" onclick="closeDetailsModal()">&times;</button></div>
            <div class="booking-details" id="bookingDetailsContent"></div>
            <div class="modal-actions"><button class="btn btn-secondary" onclick="closeDetailsModal()">Close</button></div>
        </div>
    </div>

    <div class="modal-overlay" id="actionModal">
        <div class="modal">
            <div class="modal-header"><h3 id="actionModalTitle">Confirm Action</h3><button class="modal-close" onclick="closeActionModal()">&times;</button></div>
            <p id="actionModalMessage" style="color: var(--color-silver); margin-bottom: var(--space-5);"></p>
            <input type="hidden" id="actionBookingId" /><input type="hidden" id="actionType" />
            <div class="modal-actions"><button class="btn btn-secondary" onclick="closeActionModal()">Cancel</button><button class="btn" id="actionConfirmBtn" onclick="confirmAction()">Confirm</button></div>
        </div>
    </div>

    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>

    <script>
        let currentPage = 1, pageSize = 10, allBookings = [];

        function navigateTo(url, event) { if (event) event.preventDefault(); document.getElementById('pageTransition').classList.add('active'); setTimeout(() => { window.location.href = url; }, 400); }
        function logout(event) { event.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); navigateTo('/account/login'); }
        function showToast(message, type = 'success') { const toast = document.getElementById('toast'); document.getElementById('toastMessage').textContent = message; toast.className = `toast ${type}`; toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle'; toast.classList.add('show'); setTimeout(() => toast.classList.remove('show'), 3000); }

        async function loadBookings() {
            try {
                const token = localStorage.getItem('token');
                const response = await fetch('/api/bookings', { headers: { 'Authorization': `Bearer ${token}` } });
                if (response.ok) { allBookings = await response.json(); }
                else {
                    allBookings = [
                        { bookingId: 1, bookingReference: 'TRV-A8K2M9', customerName: 'John Smith', customerEmail: 'john@email.com', destination: 'Bali, Indonesia', bookingDate: '2024-12-15', travelDate: '2025-01-10', guests: 2, totalPrice: 2598, status: 'Confirmed' },
                        { bookingId: 2, bookingReference: 'TRV-B3P7Q2', customerName: 'Sarah Johnson', customerEmail: 'sarah@email.com', destination: 'Paris, France', bookingDate: '2024-12-18', travelDate: '2025-02-14', guests: 2, totalPrice: 3198, status: 'Pending' },
                        { bookingId: 3, bookingReference: 'TRV-C5R9T4', customerName: 'Mike Wilson', customerEmail: 'mike@email.com', destination: 'Kyoto, Japan', bookingDate: '2024-12-20', travelDate: '2025-03-20', guests: 4, totalPrice: 4398, status: 'Confirmed' },
                        { bookingId: 4, bookingReference: 'TRV-D7U1W6', customerName: 'Emily Brown', customerEmail: 'emily@email.com', destination: 'Maldives', bookingDate: '2024-12-22', travelDate: '2025-04-05', guests: 2, totalPrice: 6998, status: 'Confirmed' },
                        { bookingId: 5, bookingReference: 'TRV-E9X3Y8', customerName: 'David Lee', customerEmail: 'david@email.com', destination: 'Santorini, Greece', bookingDate: '2024-12-25', travelDate: '2025-05-15', guests: 3, totalPrice: 3998, status: 'Pending' },
                    ];
                }
                updateStats(); renderBookings();
            } catch (error) { console.error('Error loading bookings:', error); showToast('Failed to load bookings', 'error'); }
        }

        function updateStats() {
            document.getElementById('pendingCount').textContent = allBookings.filter(b => b.status === 'Pending').length;
            document.getElementById('confirmedCount').textContent = allBookings.filter(b => b.status === 'Confirmed').length;
            document.getElementById('cancelledCount').textContent = allBookings.filter(b => b.status === 'Cancelled').length;
            const revenue = allBookings.filter(b => b.status === 'Confirmed' || b.status === 'Completed').reduce((sum, b) => sum + b.totalPrice, 0);
            document.getElementById('totalRevenue').textContent = '$' + revenue.toLocaleString();
        }

        function renderBookings() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const dateFrom = document.getElementById('dateFrom').value;
            const dateTo = document.getElementById('dateTo').value;
            let filtered = allBookings.filter(b => {
                const matchesSearch = b.bookingReference.toLowerCase().includes(searchTerm) || b.customerName.toLowerCase().includes(searchTerm) || b.destination.toLowerCase().includes(searchTerm);
                const matchesStatus = !statusFilter || b.status === statusFilter;
                const matchesDateFrom = !dateFrom || new Date(b.bookingDate) >= new Date(dateFrom);
                const matchesDateTo = !dateTo || new Date(b.bookingDate) <= new Date(dateTo);
                return matchesSearch && matchesStatus && matchesDateFrom && matchesDateTo;
            });
            const totalPages = Math.ceil(filtered.length / pageSize);
            const start = (currentPage - 1) * pageSize;
            const paginatedBookings = filtered.slice(start, start + pageSize);
            const tbody = document.getElementById('bookingsTableBody');
            if (paginatedBookings.length === 0) { tbody.innerHTML = `<tr><td colspan="7"><div class="empty-state"><i class="fas fa-calendar-times"></i><p>No bookings found</p></div></td></tr>`; return; }
            tbody.innerHTML = paginatedBookings.map(b => `
                <tr>
                    <td><span class="booking-ref">${b.bookingReference}</span></td>
                    <td><div class="customer-info"><div class="customer-avatar">${b.customerName.split(' ').map(n => n[0]).join('')}</div><div><div class="customer-name">${b.customerName}</div><div class="customer-email">${b.customerEmail}</div></div></div></td>
                    <td class="hide-mobile"><div class="destination-info"><i class="fas fa-map-marker-alt"></i>${b.destination}</div></td>
                    <td class="hide-mobile">${formatDate(b.bookingDate)}</td>
                    <td><span class="price">$${b.totalPrice.toLocaleString()}</span></td>
                    <td><span class="badge badge-${b.status.toLowerCase()}">${b.status}</span></td>
                    <td><div class="actions">
                        <button class="action-btn view" title="View" onclick="viewBooking(${b.bookingId})"><i class="fas fa-eye"></i></button>
                        ${b.status === 'Pending' ? `<button class="action-btn confirm" title="Confirm" onclick="confirmBooking(${b.bookingId})"><i class="fas fa-check"></i></button>` : ''}
                        ${b.status !== 'Cancelled' && b.status !== 'Completed' ? `<button class="action-btn cancel" title="Cancel" onclick="cancelBooking(${b.bookingId})"><i class="fas fa-times"></i></button>` : ''}
                    </div></td>
                </tr>
            `).join('');
            renderPagination(totalPages);
        }

        function renderPagination(totalPages) { const pagination = document.getElementById('pagination'); if (totalPages <= 1) { pagination.innerHTML = ''; return; } let html = ''; for (let i = 1; i <= totalPages; i++) { html += `<button class="page-btn ${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">${i}</button>`; } pagination.innerHTML = html; }
        function goToPage(page) { currentPage = page; renderBookings(); }
        function formatDate(dateStr) { return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }); }

        function viewBooking(bookingId) {
            const b = allBookings.find(x => x.bookingId === bookingId);
            if (b) {
                document.getElementById('bookingDetailsContent').innerHTML = `
                    <div class="detail-row"><span class="detail-label">Reference</span><span class="detail-value booking-ref">${b.bookingReference}</span></div>
                    <div class="detail-row"><span class="detail-label">Customer</span><span class="detail-value">${b.customerName}</span></div>
                    <div class="detail-row"><span class="detail-label">Email</span><span class="detail-value">${b.customerEmail}</span></div>
                    <div class="detail-row"><span class="detail-label">Destination</span><span class="detail-value">${b.destination}</span></div>
                    <div class="detail-row"><span class="detail-label">Booking Date</span><span class="detail-value">${formatDate(b.bookingDate)}</span></div>
                    <div class="detail-row"><span class="detail-label">Travel Date</span><span class="detail-value">${formatDate(b.travelDate)}</span></div>
                    <div class="detail-row"><span class="detail-label">Guests</span><span class="detail-value">${b.guests}</span></div>
                    <div class="detail-row"><span class="detail-label">Total Amount</span><span class="detail-value price">$${b.totalPrice.toLocaleString()}</span></div>
                    <div class="detail-row"><span class="detail-label">Status</span><span class="badge badge-${b.status.toLowerCase()}">${b.status}</span></div>
                `;
                document.getElementById('detailsModal').classList.add('active');
            }
        }
        function closeDetailsModal() { document.getElementById('detailsModal').classList.remove('active'); }

        function confirmBooking(bookingId) { document.getElementById('actionBookingId').value = bookingId; document.getElementById('actionType').value = 'confirm'; document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-check-circle" style="color: #3fb950; margin-right: 8px;"></i>Confirm Booking'; document.getElementById('actionModalMessage').textContent = 'Are you sure you want to confirm this booking?'; document.getElementById('actionConfirmBtn').className = 'btn btn-success'; document.getElementById('actionConfirmBtn').textContent = 'Confirm Booking'; document.getElementById('actionModal').classList.add('active'); }
        function cancelBooking(bookingId) { document.getElementById('actionBookingId').value = bookingId; document.getElementById('actionType').value = 'cancel'; document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-exclamation-triangle" style="color: #f85149; margin-right: 8px;"></i>Cancel Booking'; document.getElementById('actionModalMessage').textContent = 'Are you sure you want to cancel this booking?'; document.getElementById('actionConfirmBtn').className = 'btn btn-danger'; document.getElementById('actionConfirmBtn').textContent = 'Cancel Booking'; document.getElementById('actionModal').classList.add('active'); }
        function closeActionModal() { document.getElementById('actionModal').classList.remove('active'); }

        async function confirmAction() {
            const bookingId = parseInt(document.getElementById('actionBookingId').value);
            const actionType = document.getElementById('actionType').value;
            const newStatus = actionType === 'confirm' ? 'Confirmed' : 'Cancelled';
            const index = allBookings.findIndex(b => b.bookingId === bookingId);
            if (index !== -1) { allBookings[index].status = newStatus; }
            updateStats(); renderBookings();
            showToast(`Booking ${actionType === 'confirm' ? 'confirmed' : 'cancelled'} successfully`);
            closeActionModal();
        }

        document.getElementById('searchInput').addEventListener('input', () => { currentPage = 1; renderBookings(); });
        document.getElementById('statusFilter').addEventListener('change', () => { currentPage = 1; renderBookings(); });
        document.getElementById('dateFrom').addEventListener('change', () => { currentPage = 1; renderBookings(); });
        document.getElementById('dateTo').addEventListener('change', () => { currentPage = 1; renderBookings(); });
        document.addEventListener('DOMContentLoaded', loadBookings);
    </script>
