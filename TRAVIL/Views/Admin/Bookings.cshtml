@{
    ViewData["Title"] = "Manage Bookings - TRAVIL Admin";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        .dashboard-layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 260px;
            background: var(--color-navy);
            border-right: 1px solid var(--color-border);
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            z-index: 100;
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-border);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--color-white);
        }

            .sidebar-logo i {
                color: var(--color-gold);
            }

        .admin-badge {
            background: var(--color-gold);
            color: var(--color-bg);
            font-size: 0.625rem;
            padding: 2px 6px;
            border-radius: var(--radius-sm);
            font-weight: 600;
            margin-left: var(--space-2);
        }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: var(--space-6);
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--color-muted);
            margin-bottom: var(--space-3);
            padding: 0 var(--space-3);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            border-radius: var(--radius-md);
            color: var(--color-silver);
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: rgba(212, 168, 83, 0.1);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        .main-content {
            flex: 1;
            margin-left: 260px;
            padding: var(--space-6);
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: var(--space-6);
        }

            .page-header h1 {
                font-size: 1.75rem;
                font-weight: 600;
                color: var(--color-white);
            }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: var(--space-4);
            margin-bottom: var(--space-6);
        }

        .stat-card {
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            padding: var(--space-4);
        }

        .stat-card-value {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--color-gold);
        }

        .stat-card-label {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        .filters-bar {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-6);
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 250px;
            position: relative;
        }

            .search-box input {
                width: 100%;
                padding: var(--space-3) var(--space-4) var(--space-3) 44px;
                background: var(--color-charcoal);
                border: 1px solid var(--color-border);
                border-radius: var(--radius-md);
                color: var(--color-pearl);
            }

            .search-box i {
                position: absolute;
                left: var(--space-4);
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-muted);
            }

        .filter-select {
            padding: var(--space-3) var(--space-4);
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            color: var(--color-pearl);
            min-width: 150px;
        }

        .bookings-table {
            width: 100%;
            border-collapse: collapse;
        }

            .bookings-table th, .bookings-table td {
                padding: var(--space-4);
                text-align: left;
                border-bottom: 1px solid var(--color-border);
            }

            .bookings-table th {
                background: var(--color-charcoal);
                color: var(--color-silver);
                font-weight: 600;
                font-size: 0.8125rem;
                text-transform: uppercase;
            }

            .bookings-table tr:hover {
                background: var(--color-slate);
            }

        .user-cell {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: var(--radius-full);
            background: var(--color-gold);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--color-bg);
            font-size: 0.8125rem;
        }

        .user-name {
            font-weight: 500;
            color: var(--color-white);
        }

        .user-email {
            font-size: 0.75rem;
            color: var(--color-muted);
        }

        .status-badge {
            padding: var(--space-1) var(--space-2);
            border-radius: var(--radius-sm);
            font-size: 0.75rem;
            font-weight: 600;
        }

            .status-badge.confirmed {
                background: rgba(16, 185, 129, 0.15);
                color: var(--color-success);
            }

            .status-badge.pending {
                background: rgba(245, 158, 11, 0.15);
                color: var(--color-warning);
            }

            .status-badge.cancelled {
                background: rgba(239, 68, 68, 0.15);
                color: var(--color-error);
            }

        .actions-cell {
            display: flex;
            gap: var(--space-2);
        }

        .action-btn {
            padding: var(--space-2);
            background: var(--color-slate);
            border: none;
            border-radius: var(--radius-sm);
            color: var(--color-silver);
            cursor: pointer;
            transition: all var(--transition-fast);
        }

            .action-btn:hover {
                color: var(--color-gold);
            }

            .action-btn.delete:hover {
                color: var(--color-error);
            }

        .card {
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            overflow: hidden;
        }

        .mobile-menu-btn {
            display: none;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 99;
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform var(--transition-normal);
            }

                .sidebar.open {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: flex;
            }

            .bookings-table {
                display: block;
                overflow-x: auto;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header"><a href="/" class="sidebar-logo"><i class="fas fa-compass"></i> TRAVIL <span class="admin-badge">ADMIN</span></a></div>
            <nav class="sidebar-nav">
                <div class="nav-section"><div class="nav-section-title">Overview</div><a href="/admin/dashboard" class="nav-item"><i class="fas fa-th-large"></i> Dashboard</a></div>
                <div class="nav-section"><div class="nav-section-title">Management</div><a href="/admin/packages" class="nav-item"><i class="fas fa-suitcase"></i> Packages</a><a href="/admin/bookings" class="nav-item active"><i class="fas fa-calendar-check"></i> Bookings</a><a href="/admin/users" class="nav-item"><i class="fas fa-users"></i> Users</a><a href="/admin/reviews" class="nav-item"><i class="fas fa-star"></i> Reviews</a></div>
                <div class="nav-section"><div class="nav-section-title">Settings</div><a href="/" class="nav-item"><i class="fas fa-globe"></i> View Site</a><a href="#" onclick="logout(event)" class="nav-item"><i class="fas fa-sign-out-alt"></i> Logout</a></div>
            </nav>
        </aside>
        <main class="main-content">
            <div class="page-header">
                <div style="display: flex; align-items: center;"><button class="mobile-menu-btn" onclick="toggleSidebar()" style="margin-right: var(--space-4);"><i class="fas fa-bars"></i></button><h1>Manage Bookings</h1></div>
            </div>
            <div class="stats-row">
                <div class="stat-card"><div class="stat-card-value" id="totalBookings">0</div><div class="stat-card-label">Total Bookings</div></div>
                <div class="stat-card"><div class="stat-card-value" id="confirmedBookings">0</div><div class="stat-card-label">Confirmed</div></div>
                <div class="stat-card"><div class="stat-card-value" id="pendingBookings">0</div><div class="stat-card-label">Pending</div></div>
                <div class="stat-card"><div class="stat-card-value" id="totalRevenue">$0</div><div class="stat-card-label">Total Revenue</div></div>
            </div>
            <div class="filters-bar">
                <div class="search-box"><i class="fas fa-search"></i><input type="text" id="searchInput" placeholder="Search bookings..." oninput="filterBookings()" /></div>
                <select class="filter-select" id="statusFilter" onchange="filterBookings()"><option value="">All Status</option><option value="Confirmed">Confirmed</option><option value="Pending">Pending</option><option value="Cancelled">Cancelled</option></select>
            </div>
            <div class="card">
                <table class="bookings-table">
                    <thead><tr><th>User</th><th>Package</th><th>Date</th><th>Amount</th><th>Status</th><th>Actions</th></tr></thead>
                    <tbody id="bookingsTable"><tr><td colspan="6" style="text-align: center; padding: var(--space-8);"><div class="loading"><div class="spinner"></div></div></td></tr></tbody>
                </table>
            </div>
        </main>
    </div>
    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>
    <script>
        var token = localStorage.getItem('token'), user = localStorage.getItem('user');
        if (!token || !user) window.location.href = '/account/login';
        var userData = null; try { userData = JSON.parse(user); } catch (e) { window.location.href = '/account/login'; }
        if (userData.role !== 0 && userData.role !== '0' && userData.role !== 'Admin') window.location.href = '/account/dashboard';
        var allBookings = [];
        function showToast(msg, type) { type = type || 'success'; var t = document.getElementById('toast'); document.getElementById('toastMessage').textContent = msg; t.className = 'toast ' + type; t.classList.add('show'); setTimeout(function() { t.classList.remove('show'); }, 3000); }
        function formatDate(d) { if (!d) return ''; return new Date(d).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }); }
        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('open'); document.getElementById('sidebarOverlay').classList.toggle('active'); }
        function logout(e) { e.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href = '/'; }
        async function loadBookings() {
            try {
                var res = await fetch('/api/booking/all', { headers: { 'Authorization': 'Bearer ' + token } });
                allBookings = await res.json();
                if (allBookings.data) allBookings = allBookings.data;
                updateStats();
                renderBookings(allBookings);
            } catch (e) { console.error(e); }
        }
        function updateStats() {
            document.getElementById('totalBookings').textContent = allBookings.length;
            document.getElementById('confirmedBookings').textContent = allBookings.filter(function(b) { return b.status === 'Confirmed'; }).length;
            document.getElementById('pendingBookings').textContent = allBookings.filter(function(b) { return b.status === 'Pending'; }).length;
            var revenue = allBookings.reduce(function(sum, b) { return sum + (b.totalPrice || 0); }, 0);
            document.getElementById('totalRevenue').textContent = '$' + Math.round(revenue).toLocaleString();
        }
        function renderBookings(bookings) {
            var tbody = document.getElementById('bookingsTable');
            if (bookings.length === 0) { tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;padding:var(--space-8);"><p>No bookings found</p></td></tr>'; return; }
            var html = '';
            bookings.forEach(function(b) {
                var pkg = b.package || {};
                var initials = ((b.userName || 'U')[0]).toUpperCase();
                var statusClass = (b.status || 'pending').toLowerCase();
                html += '<tr><td><div class="user-cell"><div class="user-avatar">' + initials + '</div><div><div class="user-name">' + (b.userName || 'User') + '</div><div class="user-email">' + (b.userEmail || '') + '</div></div></div></td><td>' + (pkg.destination || 'Package') + '</td><td>' + formatDate(b.createdAt) + '</td><td style="font-weight:600;color:var(--color-gold);">$' + Math.round(b.totalPrice || 0) + '</td><td><span class="status-badge ' + statusClass + '">' + (b.status || 'Pending') + '</span></td><td class="actions-cell"><button class="action-btn" onclick="viewBooking(' + b.bookingId + ')" title="View"><i class="fas fa-eye"></i></button><button class="action-btn" onclick="updateStatus(' + b.bookingId + ', \'Confirmed\')" title="Confirm"><i class="fas fa-check"></i></button><button class="action-btn delete" onclick="updateStatus(' + b.bookingId + ', \'Cancelled\')" title="Cancel"><i class="fas fa-times"></i></button></td></tr>';
            });
            tbody.innerHTML = html;
        }
        function filterBookings() { var search = document.getElementById('searchInput').value.toLowerCase(), status = document.getElementById('statusFilter').value; var filtered = allBookings.filter(function(b) { var matchSearch = !search || (b.userName || '').toLowerCase().includes(search) || (b.package?.destination || '').toLowerCase().includes(search); var matchStatus = !status || b.status === status; return matchSearch && matchStatus; }); renderBookings(filtered); }
        async function updateStatus(id, status) {
            if (!confirm('Change booking status to ' + status + '?')) return;
            try {
                var res = await fetch('/api/booking/' + id + '/status', { method: 'PUT', headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' }, body: JSON.stringify({ status: status }) });
                if (res.ok) { showToast('Booking ' + status.toLowerCase()); loadBookings(); }
                else { showToast('Failed to update', 'error'); }
            } catch (e) { showToast('Error', 'error'); }
        }
        function viewBooking(id) { window.location.href = '/admin/bookings/' + id; }
        document.addEventListener('DOMContentLoaded', loadBookings);
    </script>
</body>
</html>
