@{
    ViewData["Title"] = "Manage Reviews - TRAVIL Admin";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        .dashboard-layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 260px;
            background: var(--color-navy);
            border-right: 1px solid var(--color-border);
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            z-index: 100;
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-border);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--color-white);
        }

            .sidebar-logo i {
                color: var(--color-gold);
            }

        .admin-badge {
            background: var(--color-gold);
            color: var(--color-bg);
            font-size: 0.625rem;
            padding: 2px 6px;
            border-radius: var(--radius-sm);
            font-weight: 600;
            margin-left: var(--space-2);
        }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: var(--space-6);
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--color-muted);
            margin-bottom: var(--space-3);
            padding: 0 var(--space-3);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            border-radius: var(--radius-md);
            color: var(--color-silver);
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: rgba(212, 168, 83, 0.1);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        .main-content {
            flex: 1;
            margin-left: 260px;
            padding: var(--space-6);
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: var(--space-6);
        }

            .page-header h1 {
                font-size: 1.75rem;
                font-weight: 600;
                color: var(--color-white);
            }

        .tabs {
            display: flex;
            gap: var(--space-2);
            margin-bottom: var(--space-6);
            border-bottom: 1px solid var(--color-border);
        }

        .tab {
            padding: var(--space-3) var(--space-5);
            color: var(--color-silver);
            font-weight: 500;
            cursor: pointer;
            border-bottom: 2px solid transparent;
            margin-bottom: -1px;
            transition: all var(--transition-fast);
        }

            .tab:hover {
                color: var(--color-white);
            }

            .tab.active {
                color: var(--color-gold);
                border-bottom-color: var(--color-gold);
            }

        .reviews-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: var(--space-5);
        }

        .review-card {
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
        }

        .review-card-header {
            display: flex;
            align-items: center;
            gap: var(--space-4);
            margin-bottom: var(--space-4);
        }

        .review-avatar {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-full);
            background: var(--color-gold);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: var(--color-bg);
        }

        .review-user-info {
            flex: 1;
        }

        .review-user-name {
            font-weight: 600;
            color: var(--color-white);
        }

        .review-date {
            font-size: 0.8125rem;
            color: var(--color-muted);
        }

        .review-rating {
            display: flex;
            gap: 2px;
        }

            .review-rating i {
                color: var(--color-gold);
                font-size: 0.875rem;
            }

                .review-rating i.empty {
                    color: var(--color-muted);
                }

        .review-type {
            padding: var(--space-1) var(--space-2);
            border-radius: var(--radius-sm);
            font-size: 0.6875rem;
            font-weight: 600;
            text-transform: uppercase;
        }

            .review-type.site {
                background: rgba(59, 130, 246, 0.2);
                color: #3b82f6;
            }

            .review-type.package {
                background: rgba(16, 185, 129, 0.2);
                color: var(--color-success);
            }

        .review-content {
            color: var(--color-silver);
            margin-bottom: var(--space-4);
            line-height: 1.6;
        }

        .review-package {
            font-size: 0.875rem;
            color: var(--color-muted);
            padding: var(--space-3);
            background: var(--color-slate);
            border-radius: var(--radius-sm);
            margin-bottom: var(--space-4);
        }

            .review-package i {
                color: var(--color-gold);
                margin-right: var(--space-2);
            }

        .review-actions {
            display: flex;
            gap: var(--space-2);
        }

            .review-actions .btn {
                flex: 1;
                padding: var(--space-2);
                font-size: 0.8125rem;
            }

        .mobile-menu-btn {
            display: none;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 99;
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform var(--transition-normal);
            }

                .sidebar.open {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: flex;
            }

            .reviews-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header"><a href="/" class="sidebar-logo"><i class="fas fa-compass"></i> TRAVIL <span class="admin-badge">ADMIN</span></a></div>
            <nav class="sidebar-nav">
                <div class="nav-section"><div class="nav-section-title">Overview</div><a href="/admin/dashboard" class="nav-item"><i class="fas fa-th-large"></i> Dashboard</a></div>
                <div class="nav-section"><div class="nav-section-title">Management</div><a href="/admin/packages" class="nav-item"><i class="fas fa-suitcase"></i> Packages</a><a href="/admin/bookings" class="nav-item"><i class="fas fa-calendar-check"></i> Bookings</a><a href="/admin/users" class="nav-item"><i class="fas fa-users"></i> Users</a><a href="/admin/reviews" class="nav-item active"><i class="fas fa-star"></i> Reviews</a></div>
                <div class="nav-section"><div class="nav-section-title">Settings</div><a href="/" class="nav-item"><i class="fas fa-globe"></i> View Site</a><a href="#" onclick="logout(event)" class="nav-item"><i class="fas fa-sign-out-alt"></i> Logout</a></div>
            </nav>
        </aside>
        <main class="main-content">
            <div class="page-header">
                <div style="display: flex; align-items: center;"><button class="mobile-menu-btn" onclick="toggleSidebar()" style="margin-right: var(--space-4);"><i class="fas fa-bars"></i></button><h1>Manage Reviews</h1></div>
            </div>
            <div class="tabs">
                <div class="tab active" onclick="switchTab('site')">Site Reviews (<span id="siteCount">0</span>)</div>
                <div class="tab" onclick="switchTab('package')">Package Reviews (<span id="packageCount">0</span>)</div>
            </div>
            <div class="reviews-grid" id="reviewsGrid">
                <div class="loading" style="grid-column: 1/-1; text-align: center; padding: var(--space-8);"><div class="spinner"></div></div>
            </div>
        </main>
    </div>
    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>
    <script>
        var token = localStorage.getItem('token'), user = localStorage.getItem('user');
        if (!token || !user) window.location.href = '/account/login';
        var userData = null; try { userData = JSON.parse(user); } catch (e) { window.location.href = '/account/login'; }
        if (userData.role !== 0 && userData.role !== '0' && userData.role !== 'Admin') window.location.href = '/account/dashboard';
        var siteReviews = [], packageReviews = [], currentTab = 'site';
        function showToast(msg, type) { type = type || 'success'; var t = document.getElementById('toast'); document.getElementById('toastMessage').textContent = msg; t.className = 'toast ' + type; t.classList.add('show'); setTimeout(function() { t.classList.remove('show'); }, 3000); }
        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('open'); document.getElementById('sidebarOverlay').classList.toggle('active'); }
        function logout(e) { e.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href = '/'; }
        function formatDate(d) { if (!d) return ''; return new Date(d).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }); }
        function renderStars(rating) { var html = ''; for (var i = 1; i <= 5; i++) { html += '<i class="fas fa-star' + (i <= rating ? '' : ' empty') + '"></i>'; } return html; }
        async function loadReviews() {
            try {
                var siteRes = await fetch('/api/review/site');
                siteReviews = await siteRes.json();
                if (siteReviews.data) siteReviews = siteReviews.data;
                document.getElementById('siteCount').textContent = siteReviews.length;

                var pkgRes = await fetch('/api/review/all', { headers: { 'Authorization': 'Bearer ' + token } });
                packageReviews = await pkgRes.json();
                if (packageReviews.data) packageReviews = packageReviews.data;
                document.getElementById('packageCount').textContent = packageReviews.length;

                renderReviews();
            } catch (e) { console.error(e); }
        }
        function switchTab(tab) {
            currentTab = tab;
            document.querySelectorAll('.tab').forEach(function(t) { t.classList.remove('active'); });
            event.currentTarget.classList.add('active');
            renderReviews();
        }
        function renderReviews() {
            var reviews = currentTab === 'site' ? siteReviews : packageReviews;
            var grid = document.getElementById('reviewsGrid');
            if (reviews.length === 0) { grid.innerHTML = '<p style="grid-column:1/-1;text-align:center;color:var(--color-muted);padding:var(--space-8);">No reviews found</p>'; return; }
            var html = '';
            reviews.forEach(function(r) {
                var initials = ((r.userName || 'A')[0]).toUpperCase();
                var typeClass = currentTab === 'site' ? 'site' : 'package';
                var typeText = currentTab === 'site' ? 'Site Review' : 'Package Review';
                html += '<div class="review-card"><div class="review-card-header"><div class="review-avatar">' + initials + '</div><div class="review-user-info"><div class="review-user-name">' + (r.userName || 'Anonymous') + '</div><div class="review-date">' + formatDate(r.createdAt) + '</div></div><span class="review-type ' + typeClass + '">' + typeText + '</span></div><div class="review-rating">' + renderStars(r.rating || 5) + '</div>';
                if (r.packageName || r.package) { html += '<div class="review-package"><i class="fas fa-suitcase"></i>' + (r.packageName || r.package?.destination || 'Package') + '</div>'; }
                html += '<div class="review-content">' + (r.comment || r.content || 'No comment provided.') + '</div><div class="review-actions"><button class="btn btn-outline delete" onclick="deleteReview(' + r.reviewId + ')" style="color:var(--color-error);border-color:var(--color-error);"><i class="fas fa-trash"></i> Delete</button></div></div>';
            });
            grid.innerHTML = html;
        }
        async function deleteReview(reviewId) {
            if (!confirm('Delete this review?')) return;
            try {
                var res = await fetch('/api/review/' + reviewId, { method: 'DELETE', headers: { 'Authorization': 'Bearer ' + token } });
                if (res.ok) { showToast('Review deleted'); loadReviews(); }
                else { showToast('Failed to delete', 'error'); }
            } catch (e) { showToast('Error', 'error'); }
        }
        document.addEventListener('DOMContentLoaded', loadReviews);
    </script>
</body>
</html>
