@{
    ViewData["Title"] = "Manage Reviews";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Reviews - TRAVIL Admin</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="/css/admin.css" rel="stylesheet" />
    
    <style>
        :root {
            --color-midnight: #0d1117; --color-navy: #161b22; --color-slate: #21262d;
            --color-steel: #484f58; --color-silver: #8b949e; --color-white: #ffffff;
            --color-gold: #d4a853; --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --sidebar-width: 280px;
            --space-1: 4px; --space-2: 8px; --space-3: 12px; --space-4: 16px; --space-5: 24px; --space-6: 32px;
            --radius-sm: 6px; --radius-md: 12px; --radius-lg: 16px;
            --transition-fast: 0.15s ease; --transition-normal: 0.3s ease;
            --font-display: 'Cormorant Garamond', serif; --font-body: 'Outfit', sans-serif;
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: var(--font-body); background: var(--color-midnight); color: var(--color-white); }

        .page-transition { position: fixed; inset: 0; background: #0d1117; z-index: 10000; display: flex; align-items: center; justify-content: center; opacity: 0; visibility: hidden; transition: opacity 0.4s ease, visibility 0.4s ease; }
        .page-transition.active { opacity: 1; visibility: visible; }
        .page-transition .loader { width: 48px; height: 48px; border: 3px solid #21262d; border-top-color: #d4a853; border-radius: 50%; animation: spin 0.8s linear infinite; }
        @@keyframes spin { to { transform: rotate(360deg); } }

        .admin-layout { display: flex; min-height: 100vh; }
        .sidebar { width: var(--sidebar-width); background: linear-gradient(180deg, var(--color-navy) 0%, var(--color-midnight) 100%); position: fixed; height: 100vh; overflow-y: auto; z-index: 1000; border-right: 1px solid var(--color-slate); }
        .sidebar-header { padding: var(--space-5); border-bottom: 1px solid var(--color-slate); display: flex; align-items: center; gap: var(--space-3); }
        .sidebar-header .logo { width: 48px; height: 48px; background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center; font-size: 1.25rem; color: var(--color-midnight); }
        .sidebar-header h1 { font-family: var(--font-display); font-size: 1.5rem; font-weight: 500; color: var(--color-white); letter-spacing: 0.1em; margin-bottom: 0; }
        .sidebar-header span { font-size: 0.6875rem; color: var(--color-gold); text-transform: uppercase; letter-spacing: 0.15em; }
        .nav-section { padding: var(--space-4) var(--space-3); }
        .nav-section-title { padding: 0 var(--space-3); font-size: 0.6875rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.15em; color: var(--color-steel); margin-bottom: var(--space-3); }
        .nav-item { display: flex; align-items: center; gap: var(--space-3); padding: var(--space-3) var(--space-4); color: var(--color-silver); text-decoration: none; border-radius: var(--radius-md); font-size: 0.875rem; font-weight: 500; transition: all var(--transition-fast); margin-bottom: var(--space-1); border-left: 3px solid transparent; }
        .nav-item i { width: 20px; text-align: center; font-size: 1rem; }
        .nav-item:hover { background: var(--color-slate); color: var(--color-white); }
        .nav-item.active { background: var(--color-gold-muted); color: var(--color-gold); border-left-color: var(--color-gold); }

        .main-content { flex: 1; margin-left: var(--sidebar-width); padding: var(--space-6); }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-6); flex-wrap: wrap; gap: var(--space-4); }
        .header h2 { font-size: 1.75rem; font-weight: 600; }
        .header .subtitle { color: var(--color-silver); font-size: 0.9375rem; margin-top: var(--space-1); }

        .stats-row { display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: var(--space-4); margin-bottom: var(--space-6); }
        .stat-card { background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-md); padding: var(--space-5); text-align: center; }
        .stat-card .icon { font-size: 2rem; margin-bottom: var(--space-3); }
        .stat-card .icon.pending { color: #ffa657; }
        .stat-card .icon.approved { color: #3fb950; }
        .stat-card .icon.rating { color: var(--color-gold); }
        .stat-card .value { font-size: 2rem; font-weight: 700; margin-bottom: var(--space-1); }
        .stat-card .label { color: var(--color-silver); font-size: 0.875rem; }

        .filters { display: flex; gap: var(--space-4); margin-bottom: var(--space-5); flex-wrap: wrap; align-items: center; }
        .search-box { flex: 1; min-width: 250px; position: relative; }
        .search-box input { width: 100%; padding: var(--space-3) var(--space-4); padding-left: 44px; background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-md); color: var(--color-white); font-size: 0.9375rem; }
        .search-box input:focus { outline: none; border-color: var(--color-gold); }
        .search-box i { position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: var(--color-steel); }
        .filter-select { padding: var(--space-3) var(--space-4); background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-md); color: var(--color-white); font-size: 0.875rem; cursor: pointer; }

        .reviews-grid { display: grid; gap: var(--space-4); }
        .review-card { background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-lg); padding: var(--space-5); }
        .review-card.pending { border-left: 4px solid #ffa657; }
        .review-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: var(--space-4); flex-wrap: wrap; gap: var(--space-3); }
        .reviewer-info { display: flex; align-items: center; gap: var(--space-3); }
        .reviewer-avatar { width: 48px; height: 48px; border-radius: 50%; background: var(--color-gold-muted); display: flex; align-items: center; justify-content: center; font-weight: 600; color: var(--color-gold); font-size: 1.125rem; }
        .reviewer-name { font-weight: 600; margin-bottom: 2px; }
        .reviewer-email { font-size: 0.8125rem; color: var(--color-silver); }
        .review-meta { text-align: right; }
        .review-date { font-size: 0.8125rem; color: var(--color-silver); margin-bottom: var(--space-2); }
        .review-rating { display: flex; gap: 2px; }
        .review-rating i { color: var(--color-gold); }
        .review-rating i.empty { color: var(--color-steel); }

        .review-package { display: flex; align-items: center; gap: var(--space-2); font-size: 0.875rem; color: var(--color-silver); margin-bottom: var(--space-3); padding: var(--space-3); background: var(--color-slate); border-radius: var(--radius-sm); }
        .review-package i { color: var(--color-gold); }
        .review-content { line-height: 1.6; margin-bottom: var(--space-4); color: var(--color-silver); }
        .review-actions { display: flex; gap: var(--space-3); flex-wrap: wrap; }

        .badge { display: inline-block; padding: 4px 12px; border-radius: 20px; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; }
        .badge-pending { background: rgba(255, 166, 87, 0.15); color: #ffa657; }
        .badge-approved { background: rgba(63, 185, 80, 0.15); color: #3fb950; }
        .badge-rejected { background: rgba(248, 81, 73, 0.15); color: #f85149; }

        .btn { display: inline-flex; align-items: center; gap: var(--space-2); padding: var(--space-3) var(--space-4); border-radius: var(--radius-md); font-size: 0.875rem; font-weight: 500; cursor: pointer; transition: all var(--transition-fast); text-decoration: none; border: none; }
        .btn-primary { background: var(--color-gold); color: var(--color-midnight); }
        .btn-primary:hover { background: var(--color-gold-dark); }
        .btn-secondary { background: var(--color-slate); color: var(--color-white); }
        .btn-success { background: rgba(63, 185, 80, 0.15); color: #3fb950; border: 1px solid #3fb950; }
        .btn-success:hover { background: #3fb950; color: white; }
        .btn-danger { background: rgba(248, 81, 73, 0.15); color: #f85149; border: 1px solid #f85149; }
        .btn-danger:hover { background: #f85149; color: white; }

        .modal-overlay { position: fixed; inset: 0; background: rgba(0, 0, 0, 0.7); display: none; align-items: center; justify-content: center; z-index: 2000; }
        .modal-overlay.active { display: flex; }
        .modal { background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-lg); padding: var(--space-6); max-width: 500px; width: 90%; }
        .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-5); padding-bottom: var(--space-4); border-bottom: 1px solid var(--color-slate); }
        .modal-header h3 { font-size: 1.25rem; }
        .modal-close { background: none; border: none; color: var(--color-silver); font-size: 1.5rem; cursor: pointer; }
        .modal-actions { display: flex; gap: var(--space-3); justify-content: flex-end; margin-top: var(--space-5); }

        .toast { position: fixed; bottom: 24px; right: 24px; background: #30363d; border: 1px solid #21262d; border-radius: 16px; padding: 16px 24px; display: flex; align-items: center; gap: 12px; color: #ffffff; font-size: 0.9375rem; z-index: 10000; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3); opacity: 0; transform: translateY(20px); transition: all 0.3s ease; }
        .toast.show { opacity: 1; transform: translateY(0); }
        .toast.success i { color: #3fb950; }
        .toast.error i { color: #f85149; }

        .empty-state { text-align: center; padding: 60px 24px; color: var(--color-silver); background: var(--color-navy); border: 1px solid var(--color-slate); border-radius: var(--radius-lg); }
        .empty-state i { font-size: 3rem; opacity: 0.5; margin-bottom: var(--space-4); }

        .pagination { display: flex; justify-content: center; align-items: center; gap: var(--space-2); padding: var(--space-5); }
        .page-btn { width: 36px; height: 36px; border: 1px solid var(--color-slate); background: transparent; border-radius: var(--radius-sm); color: var(--color-silver); cursor: pointer; transition: all var(--transition-fast); }
        .page-btn:hover, .page-btn.active { background: var(--color-gold); color: var(--color-midnight); border-color: var(--color-gold); }

        @@media (max-width: 1024px) { .sidebar { transform: translateX(-100%); } .sidebar.open { transform: translateX(0); } .main-content { margin-left: 0; } }
        @@media (max-width: 768px) { .review-header { flex-direction: column; } .review-meta { text-align: left; } }
    </style>
</head>
<body>
    <div class="page-transition" id="pageTransition"><div class="loader"></div></div>

    <div class="admin-layout">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo"><i class="fas fa-compass"></i></div>
                <div><h1>TRAVIL</h1><span>Admin Panel</span></div>
            </div>
            <nav class="nav-section">
                <div class="nav-section-title">Main</div>
                <a href="/admin/dashboard" class="nav-item" onclick="navigateTo('/admin/dashboard', event)"><i class="fas fa-th-large"></i><span>Dashboard</span></a>
                <a href="/admin/packages" class="nav-item" onclick="navigateTo('/admin/packages', event)"><i class="fas fa-suitcase"></i><span>Packages</span></a>
                <a href="/admin/bookings" class="nav-item" onclick="navigateTo('/admin/bookings', event)"><i class="fas fa-calendar-check"></i><span>Bookings</span></a>
            </nav>
            <nav class="nav-section">
                <div class="nav-section-title">Management</div>
                <a href="/admin/users" class="nav-item" onclick="navigateTo('/admin/users', event)"><i class="fas fa-users"></i><span>Users</span></a>
                <a href="/admin/reviews" class="nav-item active" onclick="navigateTo('/admin/reviews', event)"><i class="fas fa-star"></i><span>Reviews</span></a>
                <a href="/admin/prices" class="nav-item" onclick="navigateTo('/admin/prices', event)"><i class="fas fa-tags"></i><span>Discounts</span></a>
            </nav>
            <nav class="nav-section">
                <div class="nav-section-title">Settings</div>
                <a href="/admin/profile" class="nav-item" onclick="navigateTo('/admin/profile', event)"><i class="fas fa-user-cog"></i><span>Profile</span></a>
                <a href="/" class="nav-item"><i class="fas fa-globe"></i><span>View Site</span></a>
                <a href="#" class="nav-item" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="main-content">
            <div class="header">
                <div>
                    <h2><i class="fas fa-star" style="color: var(--color-gold); margin-right: 12px;"></i>Review Management</h2>
                    <p class="subtitle">Moderate and manage customer reviews</p>
                </div>
            </div>

            <div class="stats-row">
                <div class="stat-card"><div class="icon pending"><i class="fas fa-clock"></i></div><div class="value" id="pendingCount">--</div><div class="label">Pending Approval</div></div>
                <div class="stat-card"><div class="icon approved"><i class="fas fa-check-circle"></i></div><div class="value" id="approvedCount">--</div><div class="label">Approved</div></div>
                <div class="stat-card"><div class="icon rating"><i class="fas fa-star"></i></div><div class="value" id="avgRating">--</div><div class="label">Avg. Rating</div></div>
                <div class="stat-card"><div class="icon" style="color: var(--color-silver);"><i class="fas fa-comments"></i></div><div class="value" id="totalReviews">--</div><div class="label">Total Reviews</div></div>
            </div>

            <div class="filters">
                <div class="search-box"><i class="fas fa-search"></i><input type="text" id="searchInput" placeholder="Search reviews..." /></div>
                <select class="filter-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="pending">Pending</option>
                    <option value="approved">Approved</option>
                    <option value="rejected">Rejected</option>
                </select>
                <select class="filter-select" id="ratingFilter">
                    <option value="">All Ratings</option>
                    <option value="5">5 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="2">2 Stars</option>
                    <option value="1">1 Star</option>
                </select>
            </div>

            <div class="reviews-grid" id="reviewsGrid">
                <!-- Filled dynamically -->
            </div>

            <div class="pagination" id="pagination"></div>
        </main>
    </div>

    <!-- Action Confirmation Modal -->
    <div class="modal-overlay" id="actionModal">
        <div class="modal">
            <div class="modal-header">
                <h3 id="actionModalTitle">Confirm Action</h3>
                <button class="modal-close" onclick="closeActionModal()">&times;</button>
            </div>
            <p id="actionModalMessage" style="color: var(--color-silver); margin-bottom: var(--space-5);"></p>
            <input type="hidden" id="actionReviewId" />
            <input type="hidden" id="actionType" />
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="closeActionModal()">Cancel</button>
                <button class="btn" id="actionConfirmBtn" onclick="confirmAction()">Confirm</button>
            </div>
        </div>
    </div>

    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>

    <script>
        let currentPage = 1, pageSize = 5;
        let reviews = [
            { id: 1, userId: 1, userName: 'John Smith', userEmail: 'john@email.com', packageId: 1, packageName: 'Bali Paradise Escape', rating: 5, comment: 'Absolutely incredible experience! The resort was stunning, the staff were incredibly helpful, and every detail was perfectly planned. This was the trip of a lifetime and I would highly recommend TRAVIL to anyone looking for a premium travel experience.', status: 'pending', createdAt: '2024-12-28' },
            { id: 2, userId: 2, userName: 'Sarah Johnson', userEmail: 'sarah@email.com', packageId: 2, packageName: 'Paris Romantic Getaway', rating: 5, comment: 'Paris was magical! The hotel location was perfect, right near the Eiffel Tower. The guided tours were informative and fun. Can\'t wait to book our next trip!', status: 'approved', createdAt: '2024-12-25' },
            { id: 3, userId: 3, userName: 'Mike Wilson', userEmail: 'mike@email.com', packageId: 3, packageName: 'Kyoto Cultural Journey', rating: 4, comment: 'Great cultural experience in Kyoto. The temples were breathtaking and the traditional ryokan stay was unique. Only minor issue was some tight scheduling between activities.', status: 'approved', createdAt: '2024-12-22' },
            { id: 4, userId: 4, userName: 'Emily Brown', userEmail: 'emily@email.com', packageId: 4, packageName: 'Maldives Luxury Resort', rating: 5, comment: 'Paradise on Earth! The overwater villa was beyond our dreams. Crystal clear water, amazing snorkeling, and the sunset dinners were unforgettable. Worth every penny!', status: 'pending', createdAt: '2024-12-27' },
            { id: 5, userId: 5, userName: 'David Lee', userEmail: 'david@email.com', packageId: 5, packageName: 'Santorini Dream', rating: 4, comment: 'Beautiful island with stunning views. The cave hotel was a unique experience. Food was amazing. Would have liked more free time for exploration.', status: 'approved', createdAt: '2024-12-20' },
            { id: 6, userId: 6, userName: 'Lisa Chen', userEmail: 'lisa@email.com', packageId: 1, packageName: 'Bali Paradise Escape', rating: 3, comment: 'Good trip overall but had some issues with the transfer service. The resort itself was nice and the activities were well organized.', status: 'pending', createdAt: '2024-12-26' },
        ];

        function navigateTo(url, event) { if (event) event.preventDefault(); document.getElementById('pageTransition').classList.add('active'); setTimeout(() => { window.location.href = url; }, 400); }
        function logout(event) { event.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); navigateTo('/account/login'); }
        function showToast(message, type = 'success') { const toast = document.getElementById('toast'); document.getElementById('toastMessage').textContent = message; toast.className = `toast ${type}`; toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle'; toast.classList.add('show'); setTimeout(() => toast.classList.remove('show'), 3000); }

        function updateStats() {
            document.getElementById('pendingCount').textContent = reviews.filter(r => r.status === 'pending').length;
            document.getElementById('approvedCount').textContent = reviews.filter(r => r.status === 'approved').length;
            document.getElementById('totalReviews').textContent = reviews.length;
            const avgRating = reviews.length > 0 ? (reviews.reduce((sum, r) => sum + r.rating, 0) / reviews.length).toFixed(1) : '0';
            document.getElementById('avgRating').textContent = avgRating;
        }

        function renderStars(rating) {
            let stars = '';
            for (let i = 1; i <= 5; i++) {
                stars += `<i class="fas fa-star ${i <= rating ? '' : 'empty'}"></i>`;
            }
            return stars;
        }

        function formatDate(dateStr) {
            return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
        }

        function renderReviews() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const ratingFilter = document.getElementById('ratingFilter').value;

            let filtered = reviews.filter(review => {
                const matchesSearch = review.userName.toLowerCase().includes(searchTerm) ||
                                    review.packageName.toLowerCase().includes(searchTerm) ||
                                    review.comment.toLowerCase().includes(searchTerm);
                const matchesStatus = !statusFilter || review.status === statusFilter;
                const matchesRating = !ratingFilter || review.rating === parseInt(ratingFilter);
                return matchesSearch && matchesStatus && matchesRating;
            });

            // Sort by pending first, then by date
            filtered.sort((a, b) => {
                if (a.status === 'pending' && b.status !== 'pending') return -1;
                if (a.status !== 'pending' && b.status === 'pending') return 1;
                return new Date(b.createdAt) - new Date(a.createdAt);
            });

            const totalPages = Math.ceil(filtered.length / pageSize);
            const start = (currentPage - 1) * pageSize;
            const paginatedReviews = filtered.slice(start, start + pageSize);

            const grid = document.getElementById('reviewsGrid');

            if (paginatedReviews.length === 0) {
                grid.innerHTML = `<div class="empty-state"><i class="fas fa-star"></i><h3>No Reviews Found</h3><p>No reviews match your current filters</p></div>`;
                document.getElementById('pagination').innerHTML = '';
                return;
            }

            grid.innerHTML = paginatedReviews.map(review => `
                <div class="review-card ${review.status === 'pending' ? 'pending' : ''}">
                    <div class="review-header">
                        <div class="reviewer-info">
                            <div class="reviewer-avatar">${review.userName.split(' ').map(n => n[0]).join('')}</div>
                            <div>
                                <div class="reviewer-name">${review.userName}</div>
                                <div class="reviewer-email">${review.userEmail}</div>
                            </div>
                        </div>
                        <div class="review-meta">
                            <div class="review-date">${formatDate(review.createdAt)}</div>
                            <div class="review-rating">${renderStars(review.rating)}</div>
                        </div>
                    </div>
                    <div class="review-package">
                        <i class="fas fa-suitcase"></i>
                        <span>${review.packageName}</span>
                        <span class="badge badge-${review.status}" style="margin-left: auto;">${review.status}</span>
                    </div>
                    <div class="review-content">"${review.comment}"</div>
                    <div class="review-actions">
                        ${review.status === 'pending' ? `
                            <button class="btn btn-success" onclick="approveReview(${review.id})"><i class="fas fa-check"></i> Approve</button>
                            <button class="btn btn-danger" onclick="rejectReview(${review.id})"><i class="fas fa-times"></i> Reject</button>
                        ` : ''}
                        ${review.status === 'approved' ? `
                            <button class="btn btn-danger" onclick="rejectReview(${review.id})"><i class="fas fa-ban"></i> Revoke</button>
                        ` : ''}
                        ${review.status === 'rejected' ? `
                            <button class="btn btn-success" onclick="approveReview(${review.id})"><i class="fas fa-undo"></i> Restore</button>
                        ` : ''}
                        <button class="btn btn-secondary" onclick="deleteReview(${review.id})"><i class="fas fa-trash"></i> Delete</button>
                    </div>
                </div>
            `).join('');

            renderPagination(totalPages);
        }

        function renderPagination(totalPages) {
            const pagination = document.getElementById('pagination');
            if (totalPages <= 1) { pagination.innerHTML = ''; return; }
            let html = '';
            for (let i = 1; i <= totalPages; i++) {
                html += `<button class="page-btn ${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">${i}</button>`;
            }
            pagination.innerHTML = html;
        }

        function goToPage(page) { currentPage = page; renderReviews(); }

        function approveReview(id) {
            document.getElementById('actionReviewId').value = id;
            document.getElementById('actionType').value = 'approve';
            document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-check-circle" style="color: #3fb950; margin-right: 8px;"></i>Approve Review';
            document.getElementById('actionModalMessage').textContent = 'Are you sure you want to approve this review? It will be visible on the package page.';
            document.getElementById('actionConfirmBtn').className = 'btn btn-success';
            document.getElementById('actionConfirmBtn').innerHTML = '<i class="fas fa-check"></i> Approve';
            document.getElementById('actionModal').classList.add('active');
        }

        function rejectReview(id) {
            document.getElementById('actionReviewId').value = id;
            document.getElementById('actionType').value = 'reject';
            document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-times-circle" style="color: #f85149; margin-right: 8px;"></i>Reject Review';
            document.getElementById('actionModalMessage').textContent = 'Are you sure you want to reject this review? It will not be visible to customers.';
            document.getElementById('actionConfirmBtn').className = 'btn btn-danger';
            document.getElementById('actionConfirmBtn').innerHTML = '<i class="fas fa-times"></i> Reject';
            document.getElementById('actionModal').classList.add('active');
        }

        function deleteReview(id) {
            document.getElementById('actionReviewId').value = id;
            document.getElementById('actionType').value = 'delete';
            document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-trash" style="color: #f85149; margin-right: 8px;"></i>Delete Review';
            document.getElementById('actionModalMessage').textContent = 'Are you sure you want to permanently delete this review? This action cannot be undone.';
            document.getElementById('actionConfirmBtn').className = 'btn btn-danger';
            document.getElementById('actionConfirmBtn').innerHTML = '<i class="fas fa-trash"></i> Delete';
            document.getElementById('actionModal').classList.add('active');
        }

        function closeActionModal() { document.getElementById('actionModal').classList.remove('active'); }

        function confirmAction() {
            const reviewId = parseInt(document.getElementById('actionReviewId').value);
            const actionType = document.getElementById('actionType').value;

            if (actionType === 'delete') {
                reviews = reviews.filter(r => r.id !== reviewId);
                showToast('Review deleted successfully');
            } else {
                const index = reviews.findIndex(r => r.id === reviewId);
                if (index !== -1) {
                    reviews[index].status = actionType === 'approve' ? 'approved' : 'rejected';
                }
                showToast(`Review ${actionType === 'approve' ? 'approved' : 'rejected'} successfully`);
            }

            updateStats();
            renderReviews();
            closeActionModal();
        }

        document.getElementById('searchInput').addEventListener('input', () => { currentPage = 1; renderReviews(); });
        document.getElementById('statusFilter').addEventListener('change', () => { currentPage = 1; renderReviews(); });
        document.getElementById('ratingFilter').addEventListener('change', () => { currentPage = 1; renderReviews(); });

        document.addEventListener('DOMContentLoaded', function() {
            updateStats();
            renderReviews();
        });
    </script>
</body>
