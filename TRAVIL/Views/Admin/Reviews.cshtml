@{
    ViewData["Title"] = "Review Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reviews - TRAVIL Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-bg: #0a0a0f;
            --color-surface: #12121a;
            --color-surface-2: #1a1a24;
            --color-border: #2a2a3a;
            --color-gold: #d4a853;
            --color-gold-hover: #e4b863;
            --color-white: #ffffff;
            --color-silver: #a0a0b0;
            --color-success: #3fb950;
            --color-danger: #f85149;
            --color-warning: #d29922;
            --font-main: 'Plus Jakarta Sans', sans-serif;
            --sidebar-width: 260px;
            --radius-sm: 6px;
            --radius-md: 10px;
            --radius-lg: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-main);
            background: var(--color-bg);
            color: var(--color-white);
            min-height: 100vh;
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: var(--sidebar-width);
            background: var(--color-surface);
            border-right: 1px solid var(--color-border);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 100;
        }

        .sidebar-header {
            padding: 24px;
            border-bottom: 1px solid var(--color-border);
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logo {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--color-gold), #b8943f);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }

        .sidebar-header h1 {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--color-gold);
        }

        .sidebar-header span {
            font-size: 0.75rem;
            color: var(--color-silver);
        }

        .nav-section {
            padding: 16px;
        }

        .nav-section-title {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--color-silver);
            margin-bottom: 12px;
            padding-left: 12px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            border-radius: var(--radius-md);
            color: var(--color-silver);
            text-decoration: none;
            transition: all 0.2s;
            margin-bottom: 4px;
        }

            .nav-item:hover {
                background: var(--color-surface-2);
                color: var(--color-white);
            }

            .nav-item.active {
                background: rgba(212, 168, 83, 0.15);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: 32px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }

            .header h2 {
                font-size: 1.5rem;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 12px;
            }

        .subtitle {
            color: var(--color-silver);
            font-size: 0.875rem;
            margin-top: 4px;
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 32px;
        }

        .stat-card {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 16px;
        }

            .stat-card .icon {
                width: 48px;
                height: 48px;
                border-radius: var(--radius-md);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
            }

                .stat-card .icon.pending {
                    background: rgba(210, 153, 34, 0.15);
                    color: var(--color-warning);
                }

                .stat-card .icon.approved {
                    background: rgba(63, 185, 80, 0.15);
                    color: var(--color-success);
                }

                .stat-card .icon.rating {
                    background: rgba(212, 168, 83, 0.15);
                    color: var(--color-gold);
                }

                .stat-card .icon.total {
                    background: rgba(160, 160, 176, 0.15);
                    color: var(--color-silver);
                }

            .stat-card .value {
                font-size: 1.75rem;
                font-weight: 700;
            }

            .stat-card .label {
                font-size: 0.8125rem;
                color: var(--color-silver);
            }

        .filters {
            display: flex;
            gap: 16px;
            margin-bottom: 24px;
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 200px;
            position: relative;
        }

            .search-box input {
                width: 100%;
                padding: 12px 16px 12px 44px;
                background: var(--color-surface);
                border: 1px solid var(--color-border);
                border-radius: var(--radius-md);
                color: var(--color-white);
                font-size: 0.875rem;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: var(--color-gold);
                }

            .search-box i {
                position: absolute;
                left: 16px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-silver);
            }

        .filter-select {
            padding: 12px 16px;
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-size: 0.875rem;
            min-width: 150px;
            cursor: pointer;
        }

            .filter-select:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        .reviews-grid {
            display: grid;
            gap: 20px;
        }

        .review-card {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: 24px;
            transition: all 0.2s;
        }

            .review-card:hover {
                border-color: rgba(212, 168, 83, 0.3);
            }

            .review-card.pending {
                border-left: 3px solid var(--color-warning);
            }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 16px;
        }

        .reviewer-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .reviewer-avatar {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, var(--color-gold), #b8943f);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--color-bg);
        }

        .reviewer-name {
            font-weight: 600;
            margin-bottom: 2px;
        }

        .reviewer-email {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        .review-meta {
            text-align: right;
        }

        .review-date {
            font-size: 0.8125rem;
            color: var(--color-silver);
            margin-bottom: 4px;
        }

        .review-rating {
            display: flex;
            gap: 2px;
        }

            .review-rating i {
                color: var(--color-gold);
                font-size: 0.875rem;
            }

                .review-rating i.empty {
                    color: var(--color-border);
                }

        .review-package {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px;
            background: var(--color-surface-2);
            border-radius: var(--radius-md);
            margin-bottom: 16px;
            font-size: 0.875rem;
        }

            .review-package i {
                color: var(--color-gold);
            }

        .badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
            margin-left: auto;
        }

        .badge-pending {
            background: rgba(210, 153, 34, 0.15);
            color: var(--color-warning);
        }

        .badge-approved {
            background: rgba(63, 185, 80, 0.15);
            color: var(--color-success);
        }

        .badge-rejected {
            background: rgba(248, 81, 73, 0.15);
            color: var(--color-danger);
        }

        .review-content {
            color: var(--color-silver);
            line-height: 1.6;
            font-style: italic;
            margin-bottom: 16px;
            padding: 16px;
            background: var(--color-surface-2);
            border-radius: var(--radius-md);
            border-left: 3px solid var(--color-gold);
        }

        .review-actions {
            display: flex;
            gap: 12px;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 16px;
            border-radius: var(--radius-md);
            font-size: 0.8125rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
        }

        .btn-success {
            background: rgba(63, 185, 80, 0.15);
            color: var(--color-success);
        }

            .btn-success:hover {
                background: rgba(63, 185, 80, 0.25);
            }

        .btn-danger {
            background: rgba(248, 81, 73, 0.15);
            color: var(--color-danger);
        }

            .btn-danger:hover {
                background: rgba(248, 81, 73, 0.25);
            }

        .btn-secondary {
            background: var(--color-surface-2);
            color: var(--color-silver);
        }

            .btn-secondary:hover {
                background: var(--color-border);
                color: var(--color-white);
            }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
        }

            .empty-state i {
                font-size: 3rem;
                color: var(--color-silver);
                margin-bottom: 16px;
                opacity: 0.5;
            }

            .empty-state h3 {
                margin-bottom: 8px;
            }

            .empty-state p {
                color: var(--color-silver);
            }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 24px;
        }

        .page-btn {
            width: 36px;
            height: 36px;
            border-radius: var(--radius-md);
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            color: var(--color-silver);
            cursor: pointer;
            transition: all 0.2s;
        }

            .page-btn:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

            .page-btn.active {
                background: var(--color-gold);
                border-color: var(--color-gold);
                color: var(--color-bg);
            }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
        }

            .modal-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        .modal {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: 24px;
            width: 90%;
            max-width: 400px;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

            .modal-header h3 {
                font-size: 1.125rem;
                display: flex;
                align-items: center;
            }

        .modal-close {
            background: none;
            border: none;
            color: var(--color-silver);
            font-size: 1.5rem;
            cursor: pointer;
        }

        .modal-actions {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
        }

        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            padding: 16px 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s;
            z-index: 2000;
        }

            .toast.show {
                transform: translateY(0);
                opacity: 1;
            }

            .toast.success i {
                color: var(--color-success);
            }

            .toast.error i {
                color: var(--color-danger);
            }

        .loading {
            text-align: center;
            padding: 40px;
            color: var(--color-silver);
        }

        .spinner {
            width: 32px;
            height: 32px;
            border: 3px solid var(--color-border);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto 12px;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 1200px) {
            .stats-row {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
            }
        }

        @@media (max-width: 768px) {
            .stats-row {
                grid-template-columns: 1fr;
            }

            .filters {
                flex-direction: column;
            }

            .review-header {
                flex-direction: column;
                gap: 12px;
            }

            .review-meta {
                text-align: left;
            }
        }
    </style>
</head>
<body>
    <div class="admin-layout">
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo"><i class="fas fa-compass"></i></div>
                <div><h1>TRAVIL</h1><span>Admin Panel</span></div>
            </div>
            <nav class="nav-section">
                <div class="nav-section-title">Main</div>
                <a href="/admin/dashboard" class="nav-item"><i class="fas fa-th-large"></i><span>Dashboard</span></a>
                <a href="/admin/packages" class="nav-item"><i class="fas fa-suitcase"></i><span>Packages</span></a>
                <a href="/admin/bookings" class="nav-item"><i class="fas fa-calendar-check"></i><span>Bookings</span></a>
            </nav>
            <nav class="nav-section">
                <div class="nav-section-title">Management</div>
                <a href="/admin/users" class="nav-item"><i class="fas fa-users"></i><span>Users</span></a>
                <a href="/admin/reviews" class="nav-item active"><i class="fas fa-star"></i><span>Reviews</span></a>
                <a href="/admin/prices" class="nav-item"><i class="fas fa-tags"></i><span>Discounts</span></a>
            </nav>
            <nav class="nav-section">
                <div class="nav-section-title">Settings</div>
                <a href="/" class="nav-item"><i class="fas fa-globe"></i><span>View Site</span></a>
                <a href="#" class="nav-item" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="main-content">
            <div class="header">
                <div>
                    <h2><i class="fas fa-star" style="color: var(--color-gold);"></i>Review Management</h2>
                    <p class="subtitle">Moderate and manage customer reviews</p>
                </div>
            </div>

            <div class="stats-row">
                <div class="stat-card">
                    <div class="icon pending"><i class="fas fa-clock"></i></div>
                    <div><div class="value" id="pendingCount">0</div><div class="label">Pending Approval</div></div>
                </div>
                <div class="stat-card">
                    <div class="icon approved"><i class="fas fa-check-circle"></i></div>
                    <div><div class="value" id="approvedCount">0</div><div class="label">Approved</div></div>
                </div>
                <div class="stat-card">
                    <div class="icon rating"><i class="fas fa-star"></i></div>
                    <div><div class="value" id="avgRating">0</div><div class="label">Avg. Rating</div></div>
                </div>
                <div class="stat-card">
                    <div class="icon total"><i class="fas fa-comments"></i></div>
                    <div><div class="value" id="totalReviews">0</div><div class="label">Total Reviews</div></div>
                </div>
            </div>

            <div class="filters">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Search reviews..." />
                </div>
                <select class="filter-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="pending">Pending</option>
                    <option value="approved">Approved</option>
                </select>
                <select class="filter-select" id="ratingFilter">
                    <option value="">All Ratings</option>
                    <option value="5">5 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="2">2 Stars</option>
                    <option value="1">1 Star</option>
                </select>
            </div>

            <div class="reviews-grid" id="reviewsGrid">
                <div class="loading"><div class="spinner"></div><p>Loading reviews...</p></div>
            </div>

            <div class="pagination" id="pagination"></div>
        </main>
    </div>

    <div class="modal-overlay" id="actionModal">
        <div class="modal">
            <div class="modal-header">
                <h3 id="actionModalTitle">Confirm Action</h3>
                <button class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <p id="actionModalMessage" style="color: var(--color-silver); margin-bottom: 20px;"></p>
            <input type="hidden" id="actionReviewId" />
            <input type="hidden" id="actionType" />
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                <button class="btn" id="actionConfirmBtn" onclick="confirmAction()">Confirm</button>
            </div>
        </div>
    </div>

    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>

    <script>
        var allReviews = [];
        var filteredReviews = [];
        var currentPage = 1;
        var pageSize = 6;

        function logout(e) { e.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href = '/account/login'; }

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function renderStars(rating) {
            var stars = '';
            for (var i = 1; i <= 5; i++) {
                stars += '<i class="fas fa-star ' + (i <= rating ? '' : 'empty') + '"></i>';
            }
            return stars;
        }

        function formatDate(dateStr) {
            return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
        }

        async function loadReviews() {
            var token = localStorage.getItem('token');
            try {
                var response = await fetch('/api/review/pending', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                var pendingReviews = [];
                if (response.ok) {
                    var result = await response.json();
                    pendingReviews = (result.data || []).map(function(r) {
                        return {
                            id: r.reviewId,
                            userName: r.userName || 'Anonymous',
                            userEmail: r.userEmail || '',
                            packageName: r.packageName || 'Site Review',
                            rating: r.rating,
                            comment: r.comment,
                            createdAt: r.createdAt,
                            status: 'pending'
                        };
                    });
                }

                // Get approved reviews from packages
                var packagesResponse = await fetch('/api/packages', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                var approvedReviews = [];
                if (packagesResponse.ok) {
                    var packagesResult = await packagesResponse.json();
                    var packages = packagesResult.data || [];

                    for (var i = 0; i < packages.length; i++) {
                        var pkg = packages[i];
                        if (pkg.reviews && pkg.reviews.length > 0) {
                            for (var j = 0; j < pkg.reviews.length; j++) {
                                var r = pkg.reviews[j];
                                if (r.isApproved) {
                                    approvedReviews.push({
                                        id: r.reviewId,
                                        userName: (r.user?.firstName || 'User') + ' ' + (r.user?.lastName || ''),
                                        userEmail: r.user?.email || '',
                                        packageName: pkg.destination,
                                        rating: r.rating,
                                        comment: r.comment,
                                        createdAt: r.createdAt,
                                        status: 'approved'
                                    });
                                }
                            }
                        }
                    }
                }

                allReviews = pendingReviews.concat(approvedReviews);
                allReviews.sort(function(a, b) {
                    if (a.status === 'pending' && b.status !== 'pending') return -1;
                    if (a.status !== 'pending' && b.status === 'pending') return 1;
                    return new Date(b.createdAt) - new Date(a.createdAt);
                });

                filterReviews();
                updateStats();

            } catch (error) {
                console.error('Error loading reviews:', error);
                document.getElementById('reviewsGrid').innerHTML = '<div class="empty-state"><i class="fas fa-exclamation-triangle"></i><h3>Error Loading Reviews</h3><p>Please try again later</p></div>';
            }
        }

        function updateStats() {
            var pending = allReviews.filter(function(r) { return r.status === 'pending'; }).length;
            var approved = allReviews.filter(function(r) { return r.status === 'approved'; }).length;
            var total = allReviews.length;
            var avgRating = total > 0 ? (allReviews.reduce(function(sum, r) { return sum + r.rating; }, 0) / total).toFixed(1) : '0';

            document.getElementById('pendingCount').textContent = pending;
            document.getElementById('approvedCount').textContent = approved;
            document.getElementById('totalReviews').textContent = total;
            document.getElementById('avgRating').textContent = avgRating;
        }

        function filterReviews() {
            var searchTerm = document.getElementById('searchInput').value.toLowerCase();
            var statusFilter = document.getElementById('statusFilter').value;
            var ratingFilter = document.getElementById('ratingFilter').value;

            filteredReviews = allReviews.filter(function(r) {
                var matchesSearch = r.userName.toLowerCase().includes(searchTerm) ||
                                   r.packageName.toLowerCase().includes(searchTerm) ||
                                   r.comment.toLowerCase().includes(searchTerm);
                var matchesStatus = !statusFilter || r.status === statusFilter;
                var matchesRating = !ratingFilter || r.rating === parseInt(ratingFilter);
                return matchesSearch && matchesStatus && matchesRating;
            });

            currentPage = 1;
            renderReviews();
        }

        function renderReviews() {
            var grid = document.getElementById('reviewsGrid');
            var totalPages = Math.ceil(filteredReviews.length / pageSize);
            var start = (currentPage - 1) * pageSize;
            var pageReviews = filteredReviews.slice(start, start + pageSize);

            if (pageReviews.length === 0) {
                grid.innerHTML = '<div class="empty-state"><i class="fas fa-star"></i><h3>No Reviews Found</h3><p>No reviews match your current filters</p></div>';
                document.getElementById('pagination').innerHTML = '';
                return;
            }

            grid.innerHTML = pageReviews.map(function(r) {
                var initials = r.userName.split(' ').map(function(n) { return n[0]; }).join('').substring(0, 2);
                return '<div class="review-card ' + (r.status === 'pending' ? 'pending' : '') + '">' +
                    '<div class="review-header">' +
                        '<div class="reviewer-info">' +
                            '<div class="reviewer-avatar">' + initials + '</div>' +
                            '<div><div class="reviewer-name">' + r.userName + '</div><div class="reviewer-email">' + r.userEmail + '</div></div>' +
                        '</div>' +
                        '<div class="review-meta">' +
                            '<div class="review-date">' + formatDate(r.createdAt) + '</div>' +
                            '<div class="review-rating">' + renderStars(r.rating) + '</div>' +
                        '</div>' +
                    '</div>' +
                    '<div class="review-package"><i class="fas fa-suitcase"></i><span>' + r.packageName + '</span><span class="badge badge-' + r.status + '">' + r.status + '</span></div>' +
                    '<div class="review-content">"' + r.comment + '"</div>' +
                    '<div class="review-actions">' +
                        (r.status === 'pending' ? '<button class="btn btn-success" onclick="approveReview(' + r.id + ')"><i class="fas fa-check"></i> Approve</button>' : '') +
                        '<button class="btn btn-danger" onclick="deleteReview(' + r.id + ')"><i class="fas fa-trash"></i> Delete</button>' +
                    '</div>' +
                '</div>';
            }).join('');

            renderPagination(totalPages);
        }

        function renderPagination(totalPages) {
            var pagination = document.getElementById('pagination');
            if (totalPages <= 1) { pagination.innerHTML = ''; return; }
            var html = '';
            for (var i = 1; i <= totalPages; i++) {
                html += '<button class="page-btn ' + (i === currentPage ? 'active' : '') + '" onclick="goToPage(' + i + ')">' + i + '</button>';
            }
            pagination.innerHTML = html;
        }

        function goToPage(page) { currentPage = page; renderReviews(); }

        function approveReview(id) {
            document.getElementById('actionReviewId').value = id;
            document.getElementById('actionType').value = 'approve';
            document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-check-circle" style="color: var(--color-success); margin-right: 8px;"></i>Approve Review';
            document.getElementById('actionModalMessage').textContent = 'Are you sure you want to approve this review? It will be visible on the package page.';
            document.getElementById('actionConfirmBtn').className = 'btn btn-success';
            document.getElementById('actionConfirmBtn').innerHTML = '<i class="fas fa-check"></i> Approve';
            document.getElementById('actionModal').classList.add('active');
        }

        function deleteReview(id) {
            document.getElementById('actionReviewId').value = id;
            document.getElementById('actionType').value = 'delete';
            document.getElementById('actionModalTitle').innerHTML = '<i class="fas fa-trash" style="color: var(--color-danger); margin-right: 8px;"></i>Delete Review';
            document.getElementById('actionModalMessage').textContent = 'Are you sure you want to delete this review? This action cannot be undone.';
            document.getElementById('actionConfirmBtn').className = 'btn btn-danger';
            document.getElementById('actionConfirmBtn').innerHTML = '<i class="fas fa-trash"></i> Delete';
            document.getElementById('actionModal').classList.add('active');
        }

        function closeModal() { document.getElementById('actionModal').classList.remove('active'); }

        async function confirmAction() {
            var reviewId = parseInt(document.getElementById('actionReviewId').value);
            var actionType = document.getElementById('actionType').value;
            var token = localStorage.getItem('token');

            try {
                var url = actionType === 'approve' ? '/api/review/' + reviewId + '/approve' : '/api/review/' + reviewId;
                var method = actionType === 'approve' ? 'POST' : 'DELETE';

                var response = await fetch(url, {
                    method: method,
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (response.ok) {
                    showToast('Review ' + (actionType === 'approve' ? 'approved' : 'deleted') + ' successfully');
                    loadReviews();
                } else {
                    showToast('Action failed', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
            }

            closeModal();
        }

        document.getElementById('searchInput').addEventListener('input', filterReviews);
        document.getElementById('statusFilter').addEventListener('change', filterReviews);
        document.getElementById('ratingFilter').addEventListener('change', filterReviews);

        document.addEventListener('DOMContentLoaded', function() {
            var token = localStorage.getItem('token');
            if (!token) { window.location.href = '/account/login'; return; }
            loadReviews();
        });
    </script>
</body>
