@{
    ViewData["Title"] = "Booking Details";
    Layout = null;
    var bookingId = ViewData["BookingId"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Details - TRAVIL</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-success: #3fb950;
            --color-warning: #d29922;
            --color-error: #f85149;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            min-height: 100vh;
        }

        /* Header */
        .header {
            background: var(--color-navy);
            border-bottom: 1px solid var(--color-slate);
            padding: 16px 24px;
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
            color: var(--color-white);
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            letter-spacing: 0.1em;
        }

        .header-nav {
            display: flex;
            gap: 16px;
        }

        /* Container */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 24px;
        }

        /* Breadcrumb */
        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 24px;
            font-size: 0.875rem;
            color: var(--color-silver);
        }

            .breadcrumb a {
                color: var(--color-silver);
                text-decoration: none;
            }

                .breadcrumb a:hover {
                    color: var(--color-gold);
                }

        /* Status Banner */
        .status-banner {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 16px;
        }

        .status-info {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .status-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

            .status-icon.pending {
                background: rgba(210, 153, 34, 0.15);
                color: var(--color-warning);
            }

            .status-icon.confirmed {
                background: rgba(63, 185, 80, 0.15);
                color: var(--color-success);
            }

            .status-icon.cancelled {
                background: rgba(248, 81, 73, 0.15);
                color: var(--color-error);
            }

        .status-text h2 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .status-text p {
            color: var(--color-silver);
            font-size: 0.875rem;
        }

        .status-actions {
            display: flex;
            gap: 12px;
        }

        /* Grid */
        .booking-grid {
            display: grid;
            grid-template-columns: 1fr 400px;
            gap: 24px;
        }

        /* Cards */
        .card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: 16px;
            overflow: hidden;
            margin-bottom: 24px;
        }

        .card-header {
            padding: 20px 24px;
            border-bottom: 1px solid var(--color-slate);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .card-header h3 {
                font-size: 1rem;
                font-weight: 600;
            }

        .card-body {
            padding: 24px;
        }

        /* Package Preview */
        .package-preview {
            display: flex;
            gap: 16px;
        }

            .package-preview img {
                width: 120px;
                height: 90px;
                object-fit: cover;
                border-radius: 12px;
            }

        .package-info h4 {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .package-location {
            color: var(--color-gold);
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            gap: 6px;
            margin-bottom: 12px;
        }

        .package-meta {
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
        }

        .package-meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

            .package-meta-item i {
                color: var(--color-steel);
            }

        /* Details List */
        .details-list {
            display: grid;
            gap: 16px;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            padding-bottom: 16px;
            border-bottom: 1px solid var(--color-slate);
        }

            .detail-row:last-child {
                border-bottom: none;
                padding-bottom: 0;
            }

        .detail-label {
            color: var(--color-silver);
            font-size: 0.875rem;
        }

        .detail-value {
            font-weight: 500;
            text-align: right;
        }

        /* Price Summary */
        .price-summary {
            background: var(--color-slate);
            border-radius: 12px;
            padding: 20px;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;
            font-size: 0.9375rem;
        }

            .price-row:last-child {
                margin-bottom: 0;
            }

            .price-row.total {
                padding-top: 12px;
                border-top: 1px solid var(--color-steel);
                font-size: 1.125rem;
                font-weight: 600;
            }

                .price-row.total .value {
                    color: var(--color-gold);
                }

        /* Timeline */
        .timeline {
            position: relative;
            padding-left: 24px;
        }

            .timeline::before {
                content: '';
                position: absolute;
                left: 7px;
                top: 8px;
                bottom: 8px;
                width: 2px;
                background: var(--color-slate);
            }

        .timeline-item {
            position: relative;
            margin-bottom: 24px;
        }

            .timeline-item:last-child {
                margin-bottom: 0;
            }

            .timeline-item::before {
                content: '';
                position: absolute;
                left: -17px;
                top: 6px;
                width: 12px;
                height: 12px;
                background: var(--color-slate);
                border-radius: 50%;
                border: 2px solid var(--color-midnight);
            }

            .timeline-item.completed::before {
                background: var(--color-success);
            }

            .timeline-item.current::before {
                background: var(--color-gold);
            }

        .timeline-date {
            font-size: 0.75rem;
            color: var(--color-steel);
            margin-bottom: 4px;
        }

        .timeline-title {
            font-weight: 500;
            margin-bottom: 2px;
        }

        .timeline-description {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        /* Buttons */
        .btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            border-radius: 10px;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.15s;
            text-decoration: none;
            border: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(212, 168, 83, 0.4);
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-white);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .btn-danger {
            background: rgba(248, 81, 73, 0.15);
            color: var(--color-error);
            border: 1px solid rgba(248, 81, 73, 0.3);
        }

            .btn-danger:hover {
                background: rgba(248, 81, 73, 0.25);
            }

        .btn-sm {
            padding: 8px 16px;
            font-size: 0.8125rem;
        }

        /* Loading */
        .loading {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 80px 20px;
            color: var(--color-silver);
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin-bottom: 16px;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--color-slate);
            border: 1px solid var(--color-steel);
            border-radius: 12px;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            z-index: 1000;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s;
        }

            .toast.show {
                opacity: 1;
                transform: translateY(0);
            }

            .toast.success i {
                color: var(--color-success);
            }

            .toast.error i {
                color: var(--color-error);
            }

        /* Error State */
        .error-state {
            text-align: center;
            padding: 60px 20px;
        }

            .error-state i {
                font-size: 3rem;
                color: var(--color-error);
                margin-bottom: 16px;
            }

            .error-state h3 {
                font-size: 1.25rem;
                margin-bottom: 8px;
            }

            .error-state p {
                color: var(--color-silver);
                margin-bottom: 24px;
            }

        /* Responsive */
        @@media (max-width: 900px) {
            .booking-grid {
                grid-template-columns: 1fr;
            }

            .status-banner {
                flex-direction: column;
                align-items: flex-start;
            }

            .status-actions {
                width: 100%;
            }

                .status-actions .btn {
                    flex: 1;
                    justify-content: center;
                }
        }

        @@media (max-width: 600px) {
            .package-preview {
                flex-direction: column;
            }

                .package-preview img {
                    width: 100%;
                    height: 180px;
                }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo">
                <div class="logo-icon"><i class="fas fa-compass"></i></div>
                <span class="logo-text">TRAVIL</span>
            </a>
            <nav class="header-nav">
                <a href="/account/dashboard" class="btn btn-outline btn-sm"><i class="fas fa-user"></i> Dashboard</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="breadcrumb">
            <a href="/">Home</a>
            <i class="fas fa-chevron-right"></i>
            <a href="/account/dashboard">Dashboard</a>
            <i class="fas fa-chevron-right"></i>
            <span>Booking Details</span>
        </div>

        <!-- Content Container -->
        <div id="mainContent">
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading booking details...</p>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div id="toast" class="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Message</span>
    </div>

    <script>
        var bookingId = @(bookingId ?? 0);

        function formatDate(dateStr) {
            if (!dateStr) return 'N/A';
            var date = new Date(dateStr);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
        }

        function formatDateTime(dateStr) {
            if (!dateStr) return 'N/A';
            var date = new Date(dateStr);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' });
        }

        function calculateDuration(startDate, endDate) {
            if (!startDate || !endDate) return 0;
            var start = new Date(startDate);
            var end = new Date(endDate);
            return Math.ceil((end - start) / (1000 * 60 * 60 * 24));
        }

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function showError(message) {
            document.getElementById('mainContent').innerHTML = '<div class="error-state"><i class="fas fa-exclamation-circle"></i><h3>Error</h3><p>' + message + '</p><a href="/account/dashboard" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back to Dashboard</a></div>';
        }

        async function loadBookingDetails() {
            var token = localStorage.getItem('token');

            if (!token) {
                window.location.href = '/account/login';
                return;
            }

            if (!bookingId || bookingId === 0) {
                showError('Invalid booking ID');
                return;
            }

            try {
                var response = await fetch('/api/booking/' + bookingId, {
                    headers: {
                        'Authorization': 'Bearer ' + token,
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) {
                    var errorData = await response.json();
                    showError(errorData.message || 'Booking not found');
                    return;
                }

                var result = await response.json();
                var booking = result.data;

                if (!booking) {
                    showError('Booking not found');
                    return;
                }

                renderBookingDetails(booking);

            } catch (error) {
                console.error('Error loading booking:', error);
                showError('Failed to load booking details. Please try again.');
            }
        }

        function renderBookingDetails(booking) {
            var pkg = booking.package || {};
            var user = booking.user || {};
            var payment = booking.payment || {};
            var status = (booking.status || 'Pending').toLowerCase();
            var duration = calculateDuration(pkg.startDate, pkg.endDate);
            var imageUrl = pkg.imageUrl || 'https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=400&q=80';

            var statusIcon = status === 'confirmed' ? 'fa-check-circle' : status === 'cancelled' ? 'fa-times-circle' : 'fa-clock';
            var statusTitle = status === 'confirmed' ? 'Booking Confirmed!' : status === 'cancelled' ? 'Booking Cancelled' : 'Booking Pending';
            var statusDesc = status === 'confirmed' ? 'Your trip is confirmed. Check your email for details.' : status === 'cancelled' ? 'This booking has been cancelled.' : 'Waiting for payment to confirm your booking.';

            var html = '';

            // Status Banner
            html += '<div class="status-banner">';
            html += '<div class="status-info">';
            html += '<div class="status-icon ' + status + '"><i class="fas ' + statusIcon + '"></i></div>';
            html += '<div class="status-text">';
            html += '<h2>' + statusTitle + '</h2>';
            html += '<p>' + statusDesc + '</p>';
            html += '</div>';
            html += '</div>';
            html += '<div class="status-actions">';
            if (status === 'pending') {
                html += '<a href="/booking/payment/' + booking.bookingId + '" class="btn btn-primary"><i class="fas fa-credit-card"></i> Pay Now</a>';
            }
            html += '<button class="btn btn-outline btn-sm" onclick="window.print()"><i class="fas fa-print"></i> Print</button>';
            if (status !== 'cancelled') {
                html += '<button class="btn btn-danger btn-sm" onclick="cancelBooking()"><i class="fas fa-times"></i> Cancel</button>';
            }
            html += '</div>';
            html += '</div>';

            // Grid
            html += '<div class="booking-grid">';

            // Left Column
            html += '<div>';

            // Package Details Card
            html += '<div class="card">';
            html += '<div class="card-header"><h3>Package Details</h3><a href="/packages/' + (pkg.packageId || 1) + '" class="btn btn-outline btn-sm"><i class="fas fa-external-link-alt"></i> View Package</a></div>';
            html += '<div class="card-body">';
            html += '<div class="package-preview">';
            html += '<img src="' + imageUrl + '" alt="' + (pkg.destination || 'Package') + '" onerror="this.src=\'https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=400&q=80\'">';
            html += '<div class="package-info">';
            html += '<h4>' + (pkg.destination || 'Travel Package') + '</h4>';
            html += '<div class="package-location"><i class="fas fa-map-marker-alt"></i> ' + (pkg.destination || '') + ', ' + (pkg.country || '') + '</div>';
            html += '<div class="package-meta">';
            html += '<div class="package-meta-item"><i class="far fa-clock"></i> ' + duration + ' Days</div>';
            html += '<div class="package-meta-item"><i class="fas fa-users"></i> ' + (booking.numberOfGuests || 1) + ' Guests</div>';
            html += '<div class="package-meta-item"><i class="fas fa-bed"></i> ' + (booking.numberOfRooms || 1) + ' Rooms</div>';
            html += '</div>';
            html += '</div>';
            html += '</div>';
            html += '</div>';
            html += '</div>';

            // Trip Details Card
            html += '<div class="card">';
            html += '<div class="card-header"><h3>Trip Details</h3></div>';
            html += '<div class="card-body">';
            html += '<div class="details-list">';
            html += '<div class="detail-row"><span class="detail-label">Booking Reference</span><span class="detail-value">' + (booking.bookingReference || 'N/A') + '</span></div>';
            html += '<div class="detail-row"><span class="detail-label">Check-in Date</span><span class="detail-value">' + formatDate(pkg.startDate) + '</span></div>';
            html += '<div class="detail-row"><span class="detail-label">Check-out Date</span><span class="detail-value">' + formatDate(pkg.endDate) + '</span></div>';
            html += '<div class="detail-row"><span class="detail-label">Duration</span><span class="detail-value">' + duration + ' Days / ' + (duration - 1) + ' Nights</span></div>';
            html += '<div class="detail-row"><span class="detail-label">Guests</span><span class="detail-value">' + (booking.numberOfGuests || 1) + ' People</span></div>';
            html += '<div class="detail-row"><span class="detail-label">Rooms</span><span class="detail-value">' + (booking.numberOfRooms || 1) + ' Room(s)</span></div>';
            html += '</div>';
            html += '</div>';
            html += '</div>';

            // Booking Timeline Card
            html += '<div class="card">';
            html += '<div class="card-header"><h3>Booking Timeline</h3></div>';
            html += '<div class="card-body">';
            html += '<div class="timeline">';
            html += '<div class="timeline-item completed"><div class="timeline-date">' + formatDateTime(booking.bookingDate) + '</div><div class="timeline-title">Booking Created</div><div class="timeline-description">Your booking was submitted</div></div>';
            if (booking.confirmedDate) {
                html += '<div class="timeline-item completed"><div class="timeline-date">' + formatDateTime(booking.confirmedDate) + '</div><div class="timeline-title">Booking Confirmed</div><div class="timeline-description">Payment received and booking confirmed</div></div>';
            }
            if (booking.cancelledDate) {
                html += '<div class="timeline-item"><div class="timeline-date">' + formatDateTime(booking.cancelledDate) + '</div><div class="timeline-title">Booking Cancelled</div><div class="timeline-description">' + (booking.cancellationReason || 'Cancelled by user') + '</div></div>';
            }
            if (status === 'pending') {
                html += '<div class="timeline-item current"><div class="timeline-date">Pending</div><div class="timeline-title">Awaiting Payment</div><div class="timeline-description">Complete payment to confirm</div></div>';
            }
            html += '</div>';
            html += '</div>';
            html += '</div>';

            html += '</div>'; // End left column

            // Right Column
            html += '<div>';

            // Price Summary Card
            html += '<div class="card">';
            html += '<div class="card-header"><h3>Price Summary</h3></div>';
            html += '<div class="card-body">';
            html += '<div class="price-summary">';
            var pricePerRoom = booking.totalPrice / (booking.numberOfRooms || 1);
            html += '<div class="price-row"><span>Package Price</span><span>$' + Math.round(pricePerRoom).toLocaleString() + '</span></div>';
            html += '<div class="price-row"><span>Rooms</span><span>× ' + (booking.numberOfRooms || 1) + '</span></div>';
            html += '<div class="price-row total"><span>Total</span><span class="value">$' + Math.round(booking.totalPrice || 0).toLocaleString() + '</span></div>';
            html += '</div>';
            html += '</div>';
            html += '</div>';

            // Payment Status Card
            html += '<div class="card">';
            html += '<div class="card-header"><h3>Payment Status</h3></div>';
            html += '<div class="card-body">';
            html += '<div class="details-list">';
            var paymentStatus = payment.status || 'Pending';
            html += '<div class="detail-row"><span class="detail-label">Status</span><span class="detail-value" style="color: ' + (paymentStatus === 'Completed' ? 'var(--color-success)' : 'var(--color-warning)') + ';">' + paymentStatus + '</span></div>';
            if (payment.transactionId) {
                html += '<div class="detail-row"><span class="detail-label">Transaction ID</span><span class="detail-value">' + payment.transactionId + '</span></div>';
            }
            if (payment.paymentDate) {
                html += '<div class="detail-row"><span class="detail-label">Payment Date</span><span class="detail-value">' + formatDateTime(payment.paymentDate) + '</span></div>';
            }
            html += '</div>';
            if (status === 'pending') {
                html += '<a href="/booking/payment/' + booking.bookingId + '" class="btn btn-primary" style="width: 100%; justify-content: center; margin-top: 16px;"><i class="fas fa-credit-card"></i> Complete Payment</a>';
            }
            html += '</div>';
            html += '</div>';

            // Contact Card
            html += '<div class="card">';
            html += '<div class="card-header"><h3>Need Help?</h3></div>';
            html += '<div class="card-body">';
            html += '<p style="color: var(--color-silver); margin-bottom: 16px;">If you have any questions about your booking, feel free to contact us.</p>';
            html += '<a href="mailto:support@travil.com" class="btn btn-outline" style="width: 100%; justify-content: center;"><i class="fas fa-envelope"></i> Contact Support</a>';
            html += '</div>';
            html += '</div>';

            html += '</div>'; // End right column
            html += '</div>'; // End grid

            document.getElementById('mainContent').innerHTML = html;
        }

        async function cancelBooking() {
            if (!confirm('Are you sure you want to cancel this booking? This action cannot be undone.')) {
                return;
            }

            var token = localStorage.getItem('token');

            try {
                var response = await fetch('/api/booking/' + bookingId + '/cancel', {
                    method: 'POST',
                    headers: {
                        'Authorization': 'Bearer ' + token,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ reason: 'Cancelled by user' })
                });

                var result = await response.json();

                if (response.ok && result.success) {
                    showToast('Booking cancelled successfully');
                    setTimeout(function() { loadBookingDetails(); }, 1500);
                } else {
                    showToast(result.message || 'Failed to cancel booking', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadBookingDetails();
        });
    </script>
