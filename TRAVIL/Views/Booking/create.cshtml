@{
    ViewData["Title"] = "Book Package";
    Layout = null;
    var packageId = ViewData["PackageId"] ?? 1;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete Your Booking - TRAVIL</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-success: #3fb950;
            --color-error: #f85149;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            min-height: 100vh;
        }

        .header {
            background: var(--color-navy);
            border-bottom: 1px solid var(--color-slate);
            padding: 16px 24px;
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
            color: var(--color-white);
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            letter-spacing: 0.1em;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 24px;
        }

        .page-title {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 500;
            margin-bottom: 8px;
        }

        .page-subtitle {
            color: var(--color-silver);
            margin-bottom: 32px;
        }

        .booking-grid {
            display: grid;
            grid-template-columns: 1fr 400px;
            gap: 32px;
        }

        .card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
        }

        .section-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
        }

        .section-number {
            width: 32px;
            height: 32px;
            background: var(--color-gold);
            color: var(--color-midnight);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        .section-header h2 {
            font-size: 1.125rem;
            font-weight: 600;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
            margin-bottom: 16px;
        }

        .form-group {
            margin-bottom: 16px;
        }

            .form-group label {
                display: block;
                font-size: 0.875rem;
                color: var(--color-silver);
                margin-bottom: 8px;
            }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            background: var(--color-slate);
            border: 1px solid var(--color-steel);
            border-radius: 8px;
            color: var(--color-white);
            font-size: 0.9375rem;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }

        .guests-selector {
            display: flex;
            align-items: center;
            gap: 16px;
            background: var(--color-slate);
            border: 1px solid var(--color-steel);
            border-radius: 8px;
            padding: 8px 16px;
        }

        .guest-btn {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            border: 1px solid var(--color-steel);
            background: transparent;
            color: var(--color-white);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.15s;
        }

            .guest-btn:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .guest-count {
            font-size: 1.25rem;
            font-weight: 600;
            min-width: 40px;
            text-align: center;
        }

        .summary-card {
            position: sticky;
            top: 24px;
        }

        .summary-header h3 {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .package-preview {
            display: flex;
            gap: 16px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--color-slate);
            margin-bottom: 20px;
        }

            .package-preview img {
                width: 100px;
                height: 80px;
                object-fit: cover;
                border-radius: 8px;
            }

        .package-preview-info h4 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .package-preview-info p {
            font-size: 0.875rem;
            color: var(--color-gold);
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid var(--color-slate);
        }

            .price-row:last-of-type {
                border-bottom: none;
            }

            .price-row .label {
                color: var(--color-silver);
            }

            .price-row.total {
                font-size: 1.25rem;
                font-weight: 600;
                padding-top: 16px;
                margin-top: 8px;
                border-top: 1px solid var(--color-slate);
            }

                .price-row.total .value {
                    color: var(--color-gold);
                }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: 100%;
            padding: 16px 24px;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.15s;
            border: none;
            margin-top: 20px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

            .btn-primary:hover:not(:disabled) {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(212, 168, 83, 0.4);
            }

            .btn-primary:disabled {
                opacity: 0.7;
                cursor: not-allowed;
            }

        .secure-notice {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            margin-top: 16px;
            font-size: 0.8125rem;
            color: var(--color-success);
        }

        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--color-slate);
            border: 1px solid var(--color-steel);
            border-radius: 12px;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            z-index: 1000;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s;
        }

            .toast.show {
                opacity: 1;
                transform: translateY(0);
            }

            .toast.success i {
                color: var(--color-success);
            }

            .toast.error i {
                color: var(--color-error);
            }

        .page-transition {
            position: fixed;
            inset: 0;
            background: var(--color-midnight);
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all 0.4s;
        }

            .page-transition.active {
                opacity: 1;
                visibility: visible;
            }

        .loader {
            width: 48px;
            height: 48px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 900px) {
            .booking-grid {
                grid-template-columns: 1fr;
            }

            .summary-card {
                position: static;
            }
        }

        @@media (max-width: 600px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="page-transition" id="pageTransition"><div class="loader"></div></div>
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo">
                <div class="logo-icon"><i class="fas fa-compass"></i></div>
                <span class="logo-text">TRAVIL</span>
            </a>
        </div>
    </header>
    <div class="container">
        <h1 class="page-title">Complete Your Booking</h1>
        <p class="page-subtitle">You're just a few steps away from your dream vacation</p>
        <form id="bookingForm" class="booking-grid">
            <div>
                <div class="card">
                    <div class="section-header">
                        <div class="section-number">1</div>
                        <h2>Traveler Details</h2>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" id="firstName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input type="text" id="lastName" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="section-header">
                        <div class="section-number">2</div>
                        <h2>Trip Details</h2>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="travelDate">Travel Date</label>
                            <input type="date" id="travelDate" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Number of Guests</label>
                            <div class="guests-selector">
                                <button type="button" class="guest-btn" onclick="updateGuests(-1)"><i class="fas fa-minus"></i></button>
                                <span class="guest-count" id="guestCount">2</span>
                                <button type="button" class="guest-btn" onclick="updateGuests(1)"><i class="fas fa-plus"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="specialRequests">Special Requests (Optional)</label>
                        <textarea id="specialRequests" class="form-control" placeholder="Dietary requirements, accessibility needs..."></textarea>
                    </div>
                </div>
            </div>
            <div>
                <div class="card summary-card">
                    <div class="summary-header"><h3>Booking Summary</h3></div>
                    <div class="package-preview">
                        <img id="packageImage" src="https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=200&q=80" alt="Package">
                        <div class="package-preview-info">
                            <h4 id="packageTitle">Loading...</h4>
                            <p><i class="fas fa-map-marker-alt"></i> <span id="packageLocation">Loading...</span></p>
                        </div>
                    </div>
                    <div class="price-row">
                        <span class="label">$<span id="pricePerPerson">0</span> Ã— <span id="guestCountDisplay">2</span> guests</span>
                        <span class="value" id="subtotal">$0</span>
                    </div>
                    <div class="price-row"><span class="label">Service fee</span><span class="value">$150</span></div>
                    <div class="price-row"><span class="label">Taxes</span><span class="value" id="taxes">$0</span></div>
                    <div class="price-row total"><span class="label">Total</span><span class="value" id="totalPrice">$0</span></div>
                    <button type="submit" class="btn btn-primary" id="submitBtn"><i class="fas fa-lock"></i> Proceed to Payment</button>
                    <div class="secure-notice"><i class="fas fa-shield-alt"></i><span>Secure SSL encrypted payment</span></div>
                </div>
            </div>
        </form>
    </div>
    <div id="toast" class="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Message</span></div>
    <script>
        var guests = 2;
        var serviceFee = 150;
        var packageId = @(packageId);
        var packageData = null;

        async function loadPackage() {
            try {
                var response = await fetch('/api/packages/' + packageId);
                if (response.ok) {
                    var result = await response.json();
                    packageData = result.data || result;
                    document.getElementById('packageTitle').textContent = packageData.destination || 'Travel Package';
                    document.getElementById('packageLocation').textContent = (packageData.destination || '') + ', ' + (packageData.country || '');
                    var imageUrl = packageData.imageUrl || 'https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=200&q=80';
                    document.getElementById('packageImage').src = imageUrl;
                    document.getElementById('pricePerPerson').textContent = Math.round(packageData.discountedPrice || packageData.price || 0).toLocaleString();
                    updatePriceBreakdown();
                } else {
                    showToast('Failed to load package details', 'error');
                }
            } catch (error) {
                console.error('Error loading package:', error);
                showToast('Error loading package', 'error');
            }
        }

        function updateGuests(change) {
            guests = Math.max(1, Math.min(12, guests + change));
            document.getElementById('guestCount').textContent = guests;
            updatePriceBreakdown();
        }

        function updatePriceBreakdown() {
            if (!packageData) return;
            var price = packageData.discountedPrice || packageData.price || 0;
            var subtotal = price * guests;
            var taxes = Math.round(subtotal * 0.1);
            var total = subtotal + serviceFee + taxes;
            document.getElementById('guestCountDisplay').textContent = guests;
            document.getElementById('subtotal').textContent = '$' + subtotal.toLocaleString();
            document.getElementById('taxes').textContent = '$' + taxes.toLocaleString();
            document.getElementById('totalPrice').textContent = '$' + total.toLocaleString();
        }

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function navigateTo(url) {
            document.getElementById('pageTransition').classList.add('active');
            setTimeout(function() { window.location.href = url; }, 400);
        }

        document.getElementById('bookingForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to book', 'error');
                setTimeout(function() { navigateTo('/account/login'); }, 1500);
                return;
            }
            var btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creating Booking...';
            try {
                var response = await fetch('/api/booking', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        packageId: packageId,
                        numberOfRooms: 1,
                        numberOfGuests: guests
                    })
                });
                var result = await response.json();
                if (response.ok && result.success) {
                    showToast('Booking created! Redirecting to payment...');
                    var bookingId = result.data.bookingId;
                    setTimeout(function() { navigateTo('/booking/payment/' + bookingId); }, 1500);
                } else {
                    showToast(result.message || 'Failed to create booking', 'error');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-lock"></i> Proceed to Payment';
                }
            } catch (error) {
                console.error('Error creating booking:', error);
                showToast('An error occurred. Please try again.', 'error');
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-lock"></i> Proceed to Payment';
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            var token = localStorage.getItem('token');
            var userStr = localStorage.getItem('user');
            if (!token || !userStr) {
                showToast('Please login to book', 'error');
                setTimeout(function() { navigateTo('/account/login'); }, 1500);
                return;
            }
            try {
                var userData = JSON.parse(userStr);
                document.getElementById('firstName').value = userData.firstName || '';
                document.getElementById('lastName').value = userData.lastName || '';
                document.getElementById('email').value = userData.email || '';
                document.getElementById('phone').value = userData.phoneNumber || '';
            } catch (e) {}
            var tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            document.getElementById('travelDate').min = tomorrow.toISOString().split('T')[0];
            loadPackage();
        });

        window.addEventListener('pageshow', function() {
            document.getElementById('pageTransition').classList.remove('active');
        });
    </script>
</body>
</html>
