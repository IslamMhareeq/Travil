    <script>
        var categoryNames = ['Family', 'Honeymoon', 'Adventure', 'Cruise', 'Luxury', 'Budget', 'Cultural', 'Beach'];
        var defaultImages = [
            'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=800&q=80',
