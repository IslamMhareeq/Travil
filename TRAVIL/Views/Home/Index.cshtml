    <script>
        // Check auth and update nav
        function updateNav() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');
            var navAuth = document.getElementById('navAuth');

            if (token && user) {
                try {
                    var userData = JSON.parse(user);
                    var isAdmin = userData.role === 0 || userData.role === '0' || userData.role === 'Admin';
                    navAuth.innerHTML = '<a href="' + (isAdmin ? '/admin/dashboard' : '/account/dashboard') + '" class="btn btn-ghost"><i class="fas fa-user"></i> Dashboard</a>' +
                        '<a href="#" class="btn btn-outline" onclick="logout(event)">Logout</a>';
                } catch(e) {}
            }
        }

        function logout(event) {
            if (event) event.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            window.location.reload();
        }

        function calculateDuration(startDate, endDate) {
            if (!startDate || !endDate) return 7;
            var start = new Date(startDate);
            var end = new Date(endDate);
            var days = Math.ceil((end - start) / (1000 * 60 * 60 * 24));
            return days > 0 ? days : 1;
        }

        function getDefaultImage(index) {
            var images = [
                'https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=800&q=80',
                'https://images.unsplash.com/photo-1499856871958-5b9627545d1a?w=800&q=80',
                'https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=800&q=80',
                'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800&q=80',
                'https://images.unsplash.com/photo-1516483638261-f4dbaf036963?w=800&q=80',
                'https://images.unsplash.com/photo-1530789253388-582c481c54b0?w=800&q=80'
            ];
            return images[index % images.length];
        }

        // Load packages from API
        async function loadPackages() {
            var packagesGrid = document.getElementById('packagesGrid');
            var destinationsGrid = document.getElementById('destinationsGrid');

            try {
                var response = await fetch('/api/travelpackage');

                if (response.ok) {
                    var result = await response.json();
                    var packages = result.data || result || [];

                    console.log('Loaded packages:', packages);

                    if (packages.length > 0) {
                        // Render featured packages (up to 6)
                        var packagesHtml = '';
                        var featuredPackages = packages.slice(0, 6);

                        for (var i = 0; i < featuredPackages.length; i++) {
                            var pkg = featuredPackages[i];
                            var imageUrl = pkg.imageUrl || getDefaultImage(i);
                            var duration = calculateDuration(pkg.startDate, pkg.endDate);
                            var hasDiscount = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
                            var displayPrice = hasDiscount ? pkg.discountedPrice : pkg.price;

                            packagesHtml += '<div class="package-card">';
                            packagesHtml += '<div class="package-card-image">';
                            packagesHtml += '<img src="' + imageUrl + '" alt="' + (pkg.destination || 'Package') + '" onerror="this.src=\'' + getDefaultImage(i) + '\'">';
                            if (hasDiscount) {
                                packagesHtml += '<span class="package-card-badge">Sale</span>';
                            }
                            packagesHtml += '</div>';
                            packagesHtml += '<div class="package-card-content">';
                            packagesHtml += '<div class="package-card-location"><i class="fas fa-map-marker-alt"></i> ' + (pkg.country || 'Unknown') + '</div>';
                            packagesHtml += '<h3>' + (pkg.destination || 'Travel Package') + '</h3>';
                            packagesHtml += '<div class="package-card-meta">';
                            packagesHtml += '<span><i class="far fa-clock"></i> ' + duration + ' Days</span>';
                            packagesHtml += '<span><i class="fas fa-bed"></i> ' + (pkg.availableRooms || 0) + ' Rooms</span>';
                            packagesHtml += '</div>';
                            packagesHtml += '<div class="package-card-footer">';
                            packagesHtml += '<div class="package-card-price">';
                            if (hasDiscount) {
                                packagesHtml += '<span class="old-price">$' + Math.round(pkg.price) + '</span>';
                            }
                            packagesHtml += '$' + Math.round(displayPrice) + ' <span>/ person</span>';
                            packagesHtml += '</div>';
                            packagesHtml += '<a href="/packages/' + pkg.packageId + '" class="btn btn-primary btn-sm">View Details</a>';
                            packagesHtml += '</div>';
                            packagesHtml += '</div>';
                            packagesHtml += '</div>';
                        }

                        packagesGrid.innerHTML = packagesHtml;

                        // Render destinations (unique countries, up to 4)
                        var countries = {};
                        for (var j = 0; j < packages.length; j++) {
                            var p = packages[j];
                            if (p.country && !countries[p.country]) {
                                countries[p.country] = {
                                    country: p.country,
                                    destination: p.destination,
                                    imageUrl: p.imageUrl || getDefaultImage(j),
                                    minPrice: p.discountedPrice || p.price,
                                    count: 1
                                };
                            } else if (p.country && countries[p.country]) {
                                countries[p.country].count++;
                                var currentPrice = p.discountedPrice || p.price;
                                if (currentPrice < countries[p.country].minPrice) {
                                    countries[p.country].minPrice = currentPrice;
                                }
                            }
                        }

                        var destArray = Object.values(countries).slice(0, 4);
                        var destHtml = '';

                        for (var k = 0; k < destArray.length; k++) {
                            var dest = destArray[k];
                            destHtml += '<div class="destination-card" onclick="window.location.href=\'/packages\'">';
                            destHtml += '<img src="' + dest.imageUrl + '" alt="' + dest.country + '" onerror="this.src=\'' + getDefaultImage(k) + '\'">';
                            destHtml += '<span class="price">From $' + Math.round(dest.minPrice) + '</span>';
                            destHtml += '<div class="destination-card-content">';
                            destHtml += '<h3>' + dest.destination + ', ' + dest.country + '</h3>';
                            destHtml += '<p>' + dest.count + ' Package' + (dest.count > 1 ? 's' : '') + ' Available</p>';
                            destHtml += '</div>';
                            destHtml += '</div>';
                        }

                        if (destArray.length > 0) {
                            destinationsGrid.innerHTML = destHtml;
                        } else {
                            showDefaultDestinations();
                        }
                    } else {
                        showEmptyState();
                    }
                } else {
                    console.log('API error, status:', response.status);
                    showEmptyState();
                }
            } catch (error) {
                console.error('Error loading packages:', error);
                showEmptyState();
            }
        }

        function showDefaultDestinations() {
            var destinationsGrid = document.getElementById('destinationsGrid');
            destinationsGrid.innerHTML = '<div class="empty-state"><i class="fas fa-globe"></i><p>Destinations coming soon</p></div>';
        }

        function showEmptyState() {
            var packagesGrid = document.getElementById('packagesGrid');
            var destinationsGrid = document.getElementById('destinationsGrid');

            packagesGrid.innerHTML = '<div class="empty-state" style="grid-column: 1/-1;"><i class="fas fa-suitcase"></i><h3>No Packages Available</h3><p>Check back soon for amazing travel deals!</p></div>';
            showDefaultDestinations();
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateNav();
            loadPackages();
        });
    </script>
</body>
