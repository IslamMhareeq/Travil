            'Portugal': 'https://images.unsplash.com/photo-1555881400-74d7acaacd8b?w=800&q=80',
            'Mexico': 'https://images.unsplash.com/photo-1518638150340-f706e86654de?w=800&q=80'
        };

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function formatDate(dateString) {
            if (!dateString) return '';
            var date = new Date(dateString);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
        }

        function calculateDuration(startDate, endDate) {
            if (!startDate || !endDate) return 0;
            var start = new Date(startDate);
            var end = new Date(endDate);
            return Math.ceil(Math.abs(end - start) / (1000 * 60 * 60 * 24));
        }

        function getPackageImage(pkg, index) {
            if (pkg.images && pkg.images.length > 0) {
                var img = pkg.images[0];
                if (img.startsWith('http')) return img;
                return '/images/travel-packages/' + img;
            }
            return defaultImages[index % defaultImages.length];
        }

        function renderStars(rating) {
            var html = '';
            for (var i = 1; i <= 5; i++) {
                html += '<i class="' + (i <= rating ? 'fas' : 'far') + ' fa-star"></i>';
            }
            return html;
        }

        function updateNavigation() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');
            var navActions = document.getElementById('navActions');

            if (token && user) {
                try {
                    var userData = JSON.parse(user);
                    var isAdmin = userData.role === 0 || userData.role === '0' || userData.role === 'Admin';
                    var dashboardUrl = isAdmin ? '/admin/dashboard' : '/account/dashboard';
                    var initials = ((userData.firstName || 'U')[0] + (userData.lastName || '')[0]).toUpperCase();

                    navActions.innerHTML =
                        '<div class="user-menu">' +
                            '<div class="user-menu-btn">' +
                                '<div class="user-avatar">' + initials + '</div>' +
                                '<span style="color: var(--color-pearl); font-weight: 500;">' + userData.firstName + '</span>' +
                                '<i class="fas fa-chevron-down" style="color: var(--color-muted); font-size: 0.75rem;"></i>' +
                            '</div>' +
                            '<div class="user-menu-dropdown">' +
                                '<a href="' + dashboardUrl + '"><i class="fas fa-th-large"></i> Dashboard</a>' +
                                '<a href="/account/bookings"><i class="fas fa-calendar-check"></i> My Bookings</a>' +
                                '<a href="/account/wishlist"><i class="fas fa-heart"></i> Wishlist</a>' +
                                '<a href="/account/profile"><i class="fas fa-user"></i> Profile</a>' +
                                '<a href="#" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i> Logout</a>' +
                            '</div>' +
                        '</div>';
                } catch (e) { console.error('Error parsing user data:', e); }
            }
        }

        function logout(e) {
            e.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            window.location.reload();
        }

        async function loadStatistics() {
            try {
                var packagesResponse = await fetch('/api/packages');
                var packagesData = await packagesResponse.json();
                var packages = packagesData.data || packagesData || [];

                var countries = {};
                packages.forEach(function(p) { if (p.country) countries[p.country] = true; });

                var reviewsResponse = await fetch('/api/review/site');
                var reviewsData = await reviewsResponse.json();
                var avgRating = reviewsData.averageRating || 0;

                var usersCount = packages.length * 15;

                document.getElementById('statPackages').textContent = packages.length;
                document.getElementById('statDestinations').textContent = Object.keys(countries).length;
                document.getElementById('statCustomers').textContent = usersCount + '+';
                document.getElementById('statRating').textContent = avgRating > 0 ? avgRating.toFixed(1) : '4.8';
                document.getElementById('packageCountBadge').textContent = packages.length + ' Packages Available';

            } catch (error) {
                console.error('Error loading statistics:', error);
                document.getElementById('packageCountBadge').textContent = 'Explore Our Packages';
            }
        }

        async function loadDestinations() {
            var grid = document.getElementById('destinationsGrid');

            try {
                var response = await fetch('/api/packages');
                var data = await response.json();
                var packages = data.data || data || [];

                var countryData = {};
                packages.forEach(function(p) {
                    if (p.country) {
                        if (!countryData[p.country]) countryData[p.country] = { count: 0 };
                        countryData[p.country].count++;
                    }
                });

                var sortedCountries = Object.keys(countryData).sort(function(a, b) {
                    return countryData[b].count - countryData[a].count;
                }).slice(0, 5);

                if (sortedCountries.length === 0) {
                    grid.innerHTML = '<div class="empty-state"><i class="fas fa-globe"></i><p>No destinations available yet.</p></div>';
                    return;
                }

                var html = '';
                sortedCountries.forEach(function(country, index) {
                    var image = destinationImages[country] || defaultImages[index % defaultImages.length];
                    var count = countryData[country].count;

                    html += '<a href="/packages?country=' + encodeURIComponent(country) + '" class="destination-card">' +
                        '<img src="' + image + '" alt="' + country + '" loading="lazy" />' +
                        '<div class="destination-overlay">' +
                            '<div class="destination-name">' + country + '</div>' +
                            '<div class="destination-count">' + count + ' package' + (count !== 1 ? 's' : '') + '</div>' +
                        '</div>' +
                    '</a>';
                });

                grid.innerHTML = html;

            } catch (error) {
                console.error('Error loading destinations:', error);
                grid.innerHTML = '<div class="empty-state"><i class="fas fa-exclamation-triangle"></i><p>Failed to load destinations.</p></div>';
            }
        }

        async function loadFeaturedPackages() {
            var grid = document.getElementById('packagesGrid');

            try {
                var response = await fetch('/api/packages');
                var data = await response.json();
                var packages = data.data || data || [];
                var featured = packages.slice(0, 6);

                if (featured.length === 0) {
                    grid.innerHTML = '<div class="empty-state"><i class="fas fa-suitcase"></i><p>No packages available yet.</p></div>';
                    return;
                }

                var html = '';
                featured.forEach(function(pkg, index) {
                    var image = getPackageImage(pkg, index);
                    var hasDiscount = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
                    var displayPrice = hasDiscount ? pkg.discountedPrice : pkg.price;
                    var duration = calculateDuration(pkg.startDate, pkg.endDate);
                    var categoryName = categoryNames[pkg.packageType] || 'Travel';

                    html += '<div class="package-card">' +
                        '<div class="package-image">' +
                            '<img src="' + image + '" alt="' + (pkg.destination || 'Package') + '" loading="lazy" />' +
                            '<div class="package-badge' + (hasDiscount ? ' sale' : '') + '">' + (hasDiscount ? 'Sale' : categoryName) + '</div>' +
                            '<button class="package-wishlist" onclick="toggleWishlist(' + pkg.packageId + ', this, event)"><i class="far fa-heart"></i></button>' +
                        '</div>' +
                        '<div class="package-content">' +
                            '<div class="package-location"><i class="fas fa-map-marker-alt"></i> ' + (pkg.destination || 'Unknown') + ', ' + (pkg.country || '') + '</div>' +
                            '<div class="package-title">' + (pkg.destination || 'Travel Package') + ' ' + categoryName + ' Package</div>' +
                            '<div class="package-meta">' +
                                '<span><i class="far fa-calendar"></i> ' + formatDate(pkg.startDate) + ' - ' + formatDate(pkg.endDate) + '</span>' +
                                '<span><i class="far fa-clock"></i> ' + duration + ' days</span>' +
                            '</div>' +
                            '<div class="package-meta">' +
                                '<span><i class="fas fa-door-open"></i> ' + (pkg.availableRooms || 0) + ' rooms left</span>' +
                                (pkg.ageRestriction ? '<span><i class="fas fa-user"></i> ' + pkg.ageRestriction + '+</span>' : '') +
                            '</div>' +
                            '<div class="package-footer">' +
                                '<div class="package-price">' +
                                    (hasDiscount ? '<span class="original">$' + Math.round(pkg.price) + '</span>' : '') +
                                    '<span class="current">$' + Math.round(displayPrice) + '</span>' +
                                    '<span class="per">/person</span>' +
                                '</div>' +
                                '<div class="package-actions">' +
                                    '<a href="/packages/' + pkg.packageId + '" class="btn btn-outline btn-sm">Details</a>' +
                                    '<a href="/booking/create/' + pkg.packageId + '" class="btn btn-primary btn-sm">Book</a>' +
                                '</div>' +
                            '</div>' +
                        '</div>' +
                    '</div>';
                });

                grid.innerHTML = html;

            } catch (error) {
                console.error('Error loading packages:', error);
                grid.innerHTML = '<div class="empty-state"><i class="fas fa-exclamation-triangle"></i><p>Failed to load packages.</p></div>';
            }
        }

        async function loadTestimonials() {
            var grid = document.getElementById('testimonialsGrid');

            try {
                var response = await fetch('/api/review/site');
                var data = await response.json();
                var reviews = data.data || [];

                if (reviews.length === 0) {
                    grid.innerHTML = '<div class="empty-state" style="grid-column: 1/-1;">' +
                        '<i class="fas fa-comments"></i>' +
                        '<h3>No Reviews Yet</h3>' +
                        '<p>Be the first to share your experience!</p>' +
                    '</div>';
                    return;
                }

                var html = '';
                reviews.forEach(function(review) {
                    var userName = review.userName || 'Anonymous';
                    var initials = userName.split(' ').map(function(n) { return n[0]; }).join('').substring(0, 2).toUpperCase();

                    html += '<div class="testimonial-card">' +
                        '<div class="testimonial-rating">' + renderStars(review.rating || 5) + '</div>' +
                        '<p class="testimonial-text">"' + (review.comment || 'Great experience!') + '"</p>' +
                        '<div class="testimonial-author">' +
                            '<div class="testimonial-avatar">' + initials + '</div>' +
                            '<div>' +
                                '<div class="testimonial-name">' + userName + '</div>' +
                                '<div class="testimonial-trip">Verified Traveler</div>' +
                            '</div>' +
                        '</div>' +
                    '</div>';
                });

                grid.innerHTML = html;

            } catch (error) {
                console.error('Error loading testimonials:', error);
                grid.innerHTML = '<div class="empty-state" style="grid-column: 1/-1;"><i class="fas fa-exclamation-triangle"></i><p>Failed to load reviews.</p></div>';
            }
        }

        async function toggleWishlist(packageId, button, event) {
            event.preventDefault();
            event.stopPropagation();

            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to add to wishlist', 'error');
                setTimeout(function() { window.location.href = '/account/login'; }, 1500);
                return;
            }

            var icon = button.querySelector('i');
            var isActive = button.classList.contains('active');

            try {
                if (isActive) {
                    var response = await fetch('/api/wishlist/' + packageId, { method: 'DELETE', headers: { 'Authorization': 'Bearer ' + token } });
                    if (response.ok) {
                        button.classList.remove('active');
                        icon.classList.remove('fas');
                        icon.classList.add('far');
                        showToast('Removed from wishlist');
                    }
                } else {
                    var response = await fetch('/api/wishlist/' + packageId, { method: 'POST', headers: { 'Authorization': 'Bearer ' + token } });
                    if (response.ok) {
                        button.classList.add('active');
                        icon.classList.remove('far');
                        icon.classList.add('fas');
                        showToast('Added to wishlist!');
                    }
                }
            } catch (error) { showToast('Error updating wishlist', 'error'); }
        }

        function subscribeNewsletter(event) {
            event.preventDefault();
            showToast('Thank you for subscribing!');
            event.target.reset();
        }

        window.addEventListener('scroll', function() {
            var header = document.getElementById('header');
            if (window.scrollY > 50) header.classList.add('scrolled');
            else header.classList.remove('scrolled');
        });

        function checkPaymentStatus() {
            var urlParams = new URLSearchParams(window.location.search);
            var payment = urlParams.get('payment');
            var ref = urlParams.get('ref');

            if (payment === 'success') {
                showToast('Payment successful! Booking reference: ' + (ref || 'N/A'), 'success');
                window.history.replaceState({}, document.title, '/');
            } else if (payment === 'failed') {
                showToast('Payment failed. Please try again.', 'error');
                window.history.replaceState({}, document.title, '/');
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateNavigation();
            checkPaymentStatus();
            loadStatistics();
            loadDestinations();
            loadFeaturedPackages();
            loadTestimonials();
        });
