@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --color-midnight: #0a0a0f;
        --color-navy: #12121a;
        --color-slate: #1e1e2d;
        --color-steel: #6b7280;
        --color-silver: #9ca3af;
        --color-white: #ffffff;
        --color-gold: #d4a853;
        --color-gold-dark: #b8943f;
        --color-gold-muted: rgba(212, 168, 83, 0.15);
        --color-success: #10b981;
        --color-error: #ef4444;
        --font-display: 'Playfair Display', serif;
        --font-body: 'Inter', sans-serif;
        --radius-sm: 8px;
        --radius-md: 12px;
        --radius-lg: 16px;
        --radius-xl: 24px;
    }

    .cart-page {
        min-height: 100vh;
        background: linear-gradient(135deg, var(--color-midnight) 0%, var(--color-navy) 100%);
        padding: 48px 24px;
    }

    .cart-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        margin-bottom: 48px;
    }

        .page-header h1 {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 600;
            color: var(--color-white);
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 16px;
        }

            .page-header h1 i {
                color: var(--color-gold);
            }

        .page-header p {
            color: var(--color-silver);
            font-size: 1.125rem;
        }

    .cart-grid {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 32px;
        align-items: start;
    }

    .cart-items {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .cart-item {
        background: var(--color-navy);
        border: 1px solid var(--color-slate);
        border-radius: var(--radius-xl);
        padding: 20px;
        display: flex;
        gap: 20px;
        transition: all 0.2s;
    }

        .cart-item:hover {
            border-color: var(--color-gold-muted);
        }

    .item-image {
        width: 160px;
        height: 120px;
        border-radius: var(--radius-md);
        object-fit: cover;
        background: var(--color-slate);
        flex-shrink: 0;
    }

    .item-details {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .item-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 8px;
    }

    .item-destination {
        font-family: var(--font-display);
        font-size: 1.375rem;
        font-weight: 600;
        color: var(--color-white);
    }

    .item-country {
        display: flex;
        align-items: center;
        gap: 6px;
        color: var(--color-gold);
        font-size: 0.875rem;
        margin-bottom: 12px;
    }

    .item-meta {
        display: flex;
        gap: 20px;
        margin-bottom: 12px;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
        color: var(--color-silver);
        font-size: 0.875rem;
    }

        .meta-item i {
            color: var(--color-steel);
        }

    .item-dates {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--color-steel);
        font-size: 0.8125rem;
        margin-bottom: 12px;
    }

        .item-dates i {
            color: var(--color-gold);
        }

    .quantity-row {
        display: flex;
        align-items: center;
        gap: 24px;
        padding-top: 12px;
        border-top: 1px solid var(--color-slate);
    }

    .quantity-group {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .quantity-label {
        font-size: 0.6875rem;
        color: var(--color-steel);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .qty-btn {
        width: 32px;
        height: 32px;
        border-radius: var(--radius-sm);
        border: 1px solid var(--color-slate);
        background: var(--color-slate);
        color: var(--color-white);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

        .qty-btn:hover:not(:disabled) {
            border-color: var(--color-gold);
            color: var(--color-gold);
        }

        .qty-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .qty-value {
        min-width: 32px;
        text-align: center;
        font-weight: 500;
        color: var(--color-white);
    }

    .item-price-section {
        margin-left: auto;
        text-align: right;
    }

    .item-price {
        font-family: var(--font-display);
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-gold);
    }

    .item-per-unit {
        font-size: 0.75rem;
        color: var(--color-steel);
    }

    .btn-remove {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: var(--color-error);
        padding: 8px 14px;
        border-radius: var(--radius-sm);
        cursor: pointer;
        font-size: 0.8125rem;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s;
    }

        .btn-remove:hover {
            background: rgba(239, 68, 68, 0.2);
            border-color: var(--color-error);
        }

    /* Cart Summary */
    .cart-summary {
        background: var(--color-navy);
        border: 1px solid var(--color-slate);
        border-radius: var(--radius-xl);
        padding: 28px;
        position: sticky;
        top: 24px;
    }

    .summary-title {
        font-family: var(--font-display);
        font-size: 1.375rem;
        font-weight: 600;
        color: var(--color-white);
        margin-bottom: 24px;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        color: var(--color-silver);
        font-size: 0.9375rem;
    }

        .summary-row.total {
            border-top: 1px solid var(--color-slate);
            margin-top: 16px;
            padding-top: 16px;
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--color-white);
        }

            .summary-row.total span:last-child {
                color: var(--color-gold);
                font-size: 1.5rem;
            }

    .btn-checkout {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%);
        color: var(--color-midnight);
        border: none;
        border-radius: var(--radius-md);
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: 24px;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

        .btn-checkout:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(212, 168, 83, 0.3);
        }

        .btn-checkout:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

    .btn-clear {
        width: 100%;
        padding: 12px;
        background: transparent;
        border: 1px solid var(--color-slate);
        color: var(--color-silver);
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        cursor: pointer;
        margin-top: 12px;
        transition: all 0.2s;
    }

        .btn-clear:hover {
            border-color: var(--color-error);
            color: var(--color-error);
        }

    .secure-notice {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-top: 16px;
        padding-top: 16px;
        border-top: 1px solid var(--color-slate);
        color: var(--color-steel);
        font-size: 0.8125rem;
    }

        .secure-notice i {
            color: var(--color-success);
        }

    .continue-link {
        display: block;
        text-align: center;
        color: var(--color-silver);
        text-decoration: none;
        margin-top: 16px;
        font-size: 0.9375rem;
        transition: color 0.2s;
    }

        .continue-link:hover {
            color: var(--color-gold);
        }

    /* Empty Cart */
    .empty-cart {
        grid-column: 1 / -1;
        text-align: center;
        padding: 80px 24px;
        background: var(--color-navy);
        border: 1px solid var(--color-slate);
        border-radius: var(--radius-xl);
    }

        .empty-cart i {
            font-size: 4rem;
            color: var(--color-slate);
            margin-bottom: 24px;
        }

        .empty-cart h2 {
            font-family: var(--font-display);
            font-size: 1.75rem;
            color: var(--color-white);
            margin-bottom: 12px;
        }

        .empty-cart p {
            color: var(--color-silver);
            margin-bottom: 32px;
        }

    .btn-browse {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 32px;
        background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
        color: var(--color-midnight);
        text-decoration: none;
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.2s;
    }

        .btn-browse:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(212, 168, 83, 0.3);
        }

    /* Loading */
    .loading {
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 3px solid var(--color-slate);
        border-top-color: var(--color-gold);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 16px;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Toast */
    .toast {
        position: fixed;
        bottom: 24px;
        right: 24px;
        background: var(--color-navy);
        border: 1px solid var(--color-slate);
        border-radius: var(--radius-md);
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        transform: translateY(100px);
        opacity: 0;
        transition: all 0.3s;
        z-index: 2000;
    }

        .toast.show {
            transform: translateY(0);
            opacity: 1;
        }

        .toast.success {
            border-color: var(--color-success);
        }

            .toast.success i {
                color: var(--color-success);
            }

        .toast.error {
            border-color: var(--color-error);
        }

            .toast.error i {
                color: var(--color-error);
            }

    /* Responsive */
    @@media (max-width: 900px) {
        .cart-grid {
            grid-template-columns: 1fr;
        }

        .cart-summary {
            position: static;
        }
    }

    @@media (max-width: 600px) {
        .cart-item {
            flex-direction: column;
        }

        .item-image {
            width: 100%;
            height: 180px;
        }

        .item-header {
            flex-direction: column;
            gap: 12px;
        }

        .quantity-row {
            flex-wrap: wrap;
        }

        .item-price-section {
            margin-left: 0;
            text-align: left;
            margin-top: 12px;
        }

        .page-header h1 {
            font-size: 1.75rem;
        }
    }
</style>

<div class="cart-page">
    <div class="cart-container">
        <div class="page-header">
            <h1><i class="fas fa-shopping-cart"></i> Shopping Cart</h1>
            <p>Review your selected packages before checkout</p>
        </div>

        <div class="cart-grid" id="cartContent">
            <div class="loading">
                <div class="spinner"></div>
                <p style="color: var(--color-silver);">Loading your cart...</p>
            </div>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="toast" id="toast">
    <i class="fas fa-check-circle"></i>
    <span id="toastMessage">Message</span>
</div>

<script>
    let cartItems = [];

    function showToast(message, type) {
        var toast = document.getElementById('toast');
        document.getElementById('toastMessage').textContent = message;
        toast.querySelector('i').className = type === 'error' ? 'fas fa-exclamation-circle' : 'fas fa-check-circle';
        toast.className = 'toast ' + (type || 'success') + ' show';
        setTimeout(function() { toast.classList.remove('show'); }, 3000);
    }

    function getDefaultImage(index) {
        var images = [
            'https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=800',
            'https://images.unsplash.com/photo-1499856871958-5b9627545d1a?w=800',
            'https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=800',
            'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800'
        ];
        return images[(index || 0) % images.length];
    }

    function formatDate(dateStr) {
        if (!dateStr) return '';
        return new Date(dateStr).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
    }

    document.addEventListener('DOMContentLoaded', function() {
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/account/login?returnUrl=/cart';
            return;
        }
        loadCart();
    });

    async function loadCart() {
        try {
            const token = localStorage.getItem('token');
            const response = await fetch('/api/cart', {
                headers: { 'Authorization': 'Bearer ' + token }
            });

            if (response.status === 401) {
                window.location.href = '/account/login?returnUrl=/cart';
                return;
            }

            const result = await response.json();
            cartItems = result.data?.items || [];
            renderCart();
        } catch (error) {
            console.error('Error loading cart:', error);
            cartItems = [];
            renderCart();
        }
    }

    function renderCart() {
        const container = document.getElementById('cartContent');

        if (cartItems.length === 0) {
            container.innerHTML = `
                <div class="empty-cart">
                    <i class="fas fa-shopping-cart"></i>
                    <h2>Your Cart is Empty</h2>
                    <p>Looks like you haven't added any travel packages yet.</p>
                    <a href="/packages" class="btn-browse">
                        <i class="fas fa-compass"></i>
                        Browse Packages
                    </a>
                </div>
            `;
            return;
        }

        let itemsHtml = '';
        let subtotal = 0;

        cartItems.forEach(function(item, index) {
            const pkg = item.package || {};
            const imageUrl = pkg.imageUrl || getDefaultImage(index);
            const price = item.price || item.unitPrice || pkg.discountedPrice || pkg.price || 0;
            const rooms = item.quantity || item.numberOfRooms || 1;
            const guests = item.numberOfGuests || 1;
            const itemTotal = price * rooms;
            subtotal += itemTotal;

            const startDate = pkg.startDate ? formatDate(pkg.startDate) : '';
            const endDate = pkg.endDate ? formatDate(pkg.endDate) : '';

            itemsHtml += `
                <div class="cart-item" data-id="${item.cartItemId}">
                    <img src="${imageUrl}" alt="${pkg.destination || 'Package'}" class="item-image" onerror="this.src='${getDefaultImage(index)}'">
                    <div class="item-details">
                        <div class="item-header">
                            <div>
                                <div class="item-destination">${pkg.destination || 'Travel Package'}</div>
                                <div class="item-country"><i class="fas fa-map-marker-alt"></i> ${pkg.country || 'Unknown'}</div>
                            </div>
                            <button class="btn-remove" onclick="removeItem(${item.cartItemId})">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </div>
                        <div class="item-meta">
                            <span class="meta-item"><i class="fas fa-users"></i> ${guests} Guest${guests > 1 ? 's' : ''}</span>
                            <span class="meta-item"><i class="fas fa-door-open"></i> ${rooms} Room${rooms > 1 ? 's' : ''}</span>
                        </div>
                        ${startDate ? `<div class="item-dates"><i class="far fa-calendar"></i> ${startDate} - ${endDate}</div>` : ''}

                        <div class="quantity-row">
                            <div class="quantity-group">
                                <span class="quantity-label">Guests</span>
                                <div class="quantity-controls">
                                    <button class="qty-btn" onclick="updateQuantity(${item.cartItemId}, ${rooms}, ${guests - 1})" ${guests <= 1 ? 'disabled' : ''}>
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span class="qty-value">${guests}</span>
                                    <button class="qty-btn" onclick="updateQuantity(${item.cartItemId}, ${rooms}, ${guests + 1})" ${guests >= 10 ? 'disabled' : ''}>
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="quantity-group">
                                <span class="quantity-label">Rooms</span>
                                <div class="quantity-controls">
                                    <button class="qty-btn" onclick="updateQuantity(${item.cartItemId}, ${rooms - 1}, ${guests})" ${rooms <= 1 ? 'disabled' : ''}>
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span class="qty-value">${rooms}</span>
                                    <button class="qty-btn" onclick="updateQuantity(${item.cartItemId}, ${rooms + 1}, ${guests})" ${rooms >= (pkg.availableRooms || 10) ? 'disabled' : ''}>
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="item-price-section">
                                <div class="item-price">$${itemTotal.toLocaleString()}</div>
                                <div class="item-per-unit">$${price.toLocaleString()} × ${rooms} room${rooms > 1 ? 's' : ''}</div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        });

        const total = subtotal;

        container.innerHTML = `
            <div class="cart-items">
                ${itemsHtml}
            </div>
            <div class="cart-summary">
                <h2 class="summary-title">Order Summary</h2>
                <div class="summary-row">
                    <span>Items (${cartItems.length})</span>
                    <span>$${subtotal.toLocaleString()}</span>
                </div>
                <div class="summary-row">
                    <span>Taxes & Fees</span>
                    <span>Included</span>
                </div>
                <div class="summary-row total">
                    <span>Total</span>
                    <span>$${total.toLocaleString()}</span>
                </div>
                <button class="btn-checkout" onclick="proceedToCheckout()" ${cartItems.length === 0 ? 'disabled' : ''}>
                    <i class="fas fa-lock"></i>
                    Proceed to Checkout
                </button>
                <button class="btn-clear" onclick="clearCart()">
                    Clear Cart
                </button>
                <a href="/packages" class="continue-link">Continue Shopping</a>
                <div class="secure-notice">
                    <i class="fas fa-shield-alt"></i>
                    <span>Secure SSL encrypted checkout</span>
                </div>
            </div>
        `;
    }

    async function updateQuantity(cartItemId, newRooms, newGuests) {
        if (newRooms < 1) newRooms = 1;
        if (newGuests < 1) newGuests = 1;

        try {
            const token = localStorage.getItem('token');
            const response = await fetch('/api/cart/update/' + cartItemId, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'Bearer ' + token
                },
                body: JSON.stringify({
                    numberOfRooms: newRooms,
                    numberOfGuests: newGuests
                })
            });

            if (response.ok) {
                loadCart();
            } else {
                showToast('Failed to update cart', 'error');
            }
        } catch (error) {
            console.error('Error updating cart:', error);
            showToast('Error updating cart', 'error');
        }
    }

    async function removeItem(cartItemId) {
        if (!confirm('Remove this item from cart?')) return;

        try {
            const token = localStorage.getItem('token');
            const response = await fetch('/api/cart/remove/' + cartItemId, {
                method: 'DELETE',
                headers: { 'Authorization': 'Bearer ' + token }
            });

            if (response.ok) {
                showToast('Item removed', 'success');
                loadCart();
            } else {
                showToast('Failed to remove item', 'error');
            }
        } catch (error) {
            console.error('Error removing item:', error);
            showToast('Error removing item', 'error');
        }
    }

    async function clearCart() {
        if (!confirm('Clear all items from cart?')) return;

        try {
            const token = localStorage.getItem('token');
            const response = await fetch('/api/cart/clear', {
                method: 'DELETE',
                headers: { 'Authorization': 'Bearer ' + token }
            });

            if (response.ok) {
                showToast('Cart cleared', 'success');
                loadCart();
            } else {
                showToast('Failed to clear cart', 'error');
            }
        } catch (error) {
            console.error('Error clearing cart:', error);
            showToast('Error clearing cart', 'error');
        }
    }

    function proceedToCheckout() {
        if (cartItems.length === 0) {
            showToast('Your cart is empty', 'error');
            return;
        }

        // For single item, go directly to buy now
        if (cartItems.length === 1) {
            var item = cartItems[0];
            var guests = item.numberOfGuests || 1;
            var rooms = item.quantity || item.numberOfRooms || 1;
            window.location.href = '/booking/buynow/' + item.packageId + '?guests=' + guests + '&rooms=' + rooms;
        } else {
            // For multiple items, go to checkout page
            window.location.href = '/cart/checkout';
        }
    }
</script>
