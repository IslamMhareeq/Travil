@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --color-midnight: #0a0a0f;
        --color-navy: #12121a;
        --color-slate: #1e1e2d;
        --color-steel: #6b7280;
        --color-silver: #9ca3af;
        --color-white: #ffffff;
        --color-gold: #d4a853;
        --color-gold-muted: rgba(212, 168, 83, 0.15);
        --color-success: #10b981;
        --color-error: #ef4444;
        --font-display: 'Playfair Display', serif;
        --font-body: 'Plus Jakarta Sans', sans-serif;
        --radius-sm: 8px;
        --radius-md: 12px;
        --radius-lg: 16px;
        --radius-xl: 24px;
        --space-1: 4px;
        --space-2: 8px;
        --space-3: 12px;
        --space-4: 16px;
        --space-5: 24px;
        --space-6: 32px;
        --space-8: 48px;
        --transition-fast: 0.2s ease;
    }

    .cart-page {
        min-height: 100vh;
        background: linear-gradient(135deg, var(--color-midnight) 0%, var(--color-navy) 100%);
        padding: var(--space-8) var(--space-5);
    }

    .cart-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        margin-bottom: var(--space-8);
    }

        .page-header h1 {
            font-family: var(--font-display);
            font-size: 3rem;
            font-weight: 600;
            color: var(--color-white);
            margin-bottom: var(--space-3);
        }

        .page-header p {
            color: var(--color-silver);
            font-size: 1.125rem;
        }

    .cart-grid {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: var(--space-6);
    }

    .cart-items {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
    }

    .cart-item {
        background: var(--color-navy);
        border: 1px solid var(--color-slate);
        border-radius: var(--radius-xl);
        padding: var(--space-5);
        display: grid;
        grid-template-columns: 140px 1fr auto;
        gap: var(--space-5);
        transition: all var(--transition-fast);
    }

        .cart-item:hover {
            border-color: var(--color-gold-muted);
        }

    .item-image {
        width: 140px;
        height: 100px;
        border-radius: var(--radius-md);
        object-fit: cover;
        background: var(--color-slate);
    }

    .item-details {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .item-destination {
        font-family: var(--font-display);
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-white);
        margin-bottom: var(--space-1);
    }

    .item-country {
        color: var(--color-silver);
        font-size: 0.875rem;
        margin-bottom: var(--space-2);
    }

    .item-dates {
        display: flex;
        align-items: center;
        gap: var(--space-2);
        color: var(--color-steel);
        font-size: 0.8125rem;
    }

        .item-dates i {
            color: var(--color-gold);
        }

    .item-actions {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        justify-content: space-between;
    }

    .item-price {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-gold);
    }

    .item-per-room {
        font-size: 0.75rem;
        color: var(--color-steel);
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        margin-top: var(--space-3);
    }

    .qty-btn {
        width: 32px;
        height: 32px;
        border-radius: var(--radius-sm);
        border: 1px solid var(--color-slate);
        background: var(--color-slate);
        color: var(--color-white);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all var(--transition-fast);
    }

        .qty-btn:hover {
            border-color: var(--color-gold);
            color: var(--color-gold);
        }

    .qty-value {
        min-width: 40px;
        text-align: center;
        font-weight: 500;
        color: var(--color-white);
    }

    .remove-btn {
        background: none;
        border: none;
        color: var(--color-steel);
        cursor: pointer;
        padding: var(--space-2);
        transition: all var(--transition-fast);
    }

        .remove-btn:hover {
            color: var(--color-error);
        }

    /* Cart Summary */
    .cart-summary {
        background: var(--color-navy);
        border: 1px solid var(--color-slate);
        border-radius: var(--radius-xl);
        padding: var(--space-6);
        height: fit-content;
        position: sticky;
        top: var(--space-5);
    }

    .summary-title {
        font-family: var(--font-display);
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-white);
        margin-bottom: var(--space-5);
        display: flex;
        align-items: center;
        gap: var(--space-3);
    }

        .summary-title i {
            color: var(--color-gold);
        }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: var(--space-3) 0;
        color: var(--color-silver);
    }

        .summary-row.total {
            border-top: 1px solid var(--color-slate);
            margin-top: var(--space-4);
            padding-top: var(--space-4);
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--color-white);
        }

            .summary-row.total span:last-child {
                color: var(--color-gold);
                font-size: 1.5rem;
            }

    .btn-checkout {
        width: 100%;
        padding: var(--space-5);
        background: linear-gradient(135deg, var(--color-gold) 0%, #c49a47 100%);
        color: var(--color-midnight);
        border: none;
        border-radius: var(--radius-md);
        font-size: 1.125rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: var(--space-5);
        transition: all var(--transition-fast);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: var(--space-2);
    }

        .btn-checkout:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(212, 168, 83, 0.3);
        }

        .btn-checkout:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

    .btn-clear {
        width: 100%;
        padding: var(--space-3);
        background: transparent;
        color: var(--color-steel);
        border: 1px solid var(--color-slate);
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        cursor: pointer;
        margin-top: var(--space-3);
        transition: all var(--transition-fast);
    }

        .btn-clear:hover {
            border-color: var(--color-error);
            color: var(--color-error);
        }

    .secure-notice {
        display: flex;
        align-items: center;
        gap: var(--space-2);
        justify-content: center;
        margin-top: var(--space-4);
        color: var(--color-steel);
        font-size: 0.8125rem;
    }

        .secure-notice i {
            color: var(--color-success);
        }

    /* Empty Cart */
    .empty-cart {
        text-align: center;
        padding: var(--space-8);
        background: var(--color-navy);
        border: 1px solid var(--color-slate);
        border-radius: var(--radius-xl);
        grid-column: 1 / -1;
    }

        .empty-cart i {
            font-size: 4rem;
            color: var(--color-slate);
            margin-bottom: var(--space-5);
        }

        .empty-cart h2 {
            font-family: var(--font-display);
            font-size: 1.5rem;
            color: var(--color-white);
            margin-bottom: var(--space-3);
        }

        .empty-cart p {
            color: var(--color-silver);
            margin-bottom: var(--space-5);
        }

    .btn-browse {
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-4) var(--space-6);
        background: linear-gradient(135deg, var(--color-gold) 0%, #c49a47 100%);
        color: var(--color-midnight);
        text-decoration: none;
        border-radius: var(--radius-md);
        font-weight: 600;
        transition: all var(--transition-fast);
    }

        .btn-browse:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(212, 168, 83, 0.3);
        }

    /* Loading */
    .loading {
        text-align: center;
        padding: var(--space-8);
        grid-column: 1 / -1;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 3px solid var(--color-slate);
        border-top-color: var(--color-gold);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto var(--space-4);
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Responsive */
    @@media (max-width: 900px) {
        .cart-grid {
            grid-template-columns: 1fr;
        }

        .cart-summary {
            position: static;
        }

        .cart-item {
            grid-template-columns: 100px 1fr;
        }

        .item-actions {
            grid-column: 1 / -1;
            flex-direction: row;
            align-items: center;
            margin-top: var(--space-3);
        }
    }

    @@media (max-width: 600px) {
        .cart-item {
            grid-template-columns: 1fr;
        }

        .item-image {
            width: 100%;
            height: 150px;
        }

        .page-header h1 {
            font-size: 2rem;
        }
    }
</style>

<div class="cart-page">
    <div class="cart-container">
        <div class="page-header">
            <h1>Shopping Cart</h1>
            <p>Review your selected packages before checkout</p>
        </div>

        <div class="cart-grid" id="cartContent">
            <div class="loading">
                <div class="spinner"></div>
                <p style="color: var(--color-silver);">Loading your cart...</p>
            </div>
        </div>
    </div>
</div>

<script>
    let cartItems = [];

    document.addEventListener('DOMContentLoaded', function() {
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/account/login?returnUrl=/cart';
            return;
        }
        loadCart();
    });

    async function loadCart() {
        try {
            const token = localStorage.getItem('token');
            const response = await fetch('/api/cart', {
                headers: { 'Authorization': `Bearer ${token}` }
            });

            const result = await response.json();
            cartItems = result.data?.items || [];
            renderCart();
        } catch (error) {
            console.error('Error loading cart:', error);
            renderCart();
        }
    }

    function renderCart() {
        const container = document.getElementById('cartContent');

        if (cartItems.length === 0) {
            container.innerHTML = `
                <div class="empty-cart">
                    <i class="fas fa-shopping-cart"></i>
                    <h2>Your Cart is Empty</h2>
                    <p>Looks like you haven't added any travel packages yet.</p>
                    <a href="/packages" class="btn-browse">
                        <i class="fas fa-compass"></i>
                        Browse Packages
                    </a>
                </div>
            `;
            return;
        }

        let itemsHtml = '';
        let subtotal = 0;

        cartItems.forEach(item => {
            const pkg = item.package || {};
            const imageUrl = pkg.imageUrl || 'https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=400';
            const itemTotal = item.price * item.numberOfRooms;
            subtotal += itemTotal;

            const startDate = pkg.startDate ? new Date(pkg.startDate).toLocaleDateString() : '';
            const endDate = pkg.endDate ? new Date(pkg.endDate).toLocaleDateString() : '';

            itemsHtml += `
                <div class="cart-item" data-id="${item.cartItemId}">
                    <img src="${imageUrl}" alt="${pkg.destination || 'Package'}" class="item-image" onerror="this.src='https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=400'">
                    <div class="item-details">
                        <div class="item-destination">${pkg.destination || 'Package'}</div>
                        <div class="item-country">${pkg.country || ''}</div>
                        <div class="item-dates">
                            <i class="far fa-calendar"></i>
                            ${startDate} - ${endDate}
                        </div>
                    </div>
                    <div class="item-actions">
                        <div>
                            <div class="item-price">$${itemTotal.toLocaleString()}</div>
                            <div class="item-per-room">$${item.price.toLocaleString()} per room</div>
                        </div>
                        <div class="quantity-controls">
                            <button class="qty-btn" onclick="updateQuantity(${item.cartItemId}, ${item.numberOfRooms - 1}, ${item.numberOfGuests})">
                                <i class="fas fa-minus"></i>
                            </button>
                            <span class="qty-value">${item.numberOfRooms} room${item.numberOfRooms > 1 ? 's' : ''}</span>
                            <button class="qty-btn" onclick="updateQuantity(${item.cartItemId}, ${item.numberOfRooms + 1}, ${item.numberOfGuests})">
                                <i class="fas fa-plus"></i>
                            </button>
                            <button class="remove-btn" onclick="removeItem(${item.cartItemId})">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
        });

        const serviceFee = Math.round(subtotal * 0.05); // 5% service fee
        const taxes = Math.round(subtotal * 0.1); // 10% taxes
        const total = subtotal + serviceFee + taxes;

        container.innerHTML = `
            <div class="cart-items">
                ${itemsHtml}
            </div>
            <div class="cart-summary">
                <h2 class="summary-title">
                    <i class="fas fa-receipt"></i>
                    Order Summary
                </h2>
                <div class="summary-row">
                    <span>Subtotal (${cartItems.length} item${cartItems.length > 1 ? 's' : ''})</span>
                    <span>$${subtotal.toLocaleString()}</span>
                </div>
                <div class="summary-row">
                    <span>Service Fee</span>
                    <span>$${serviceFee.toLocaleString()}</span>
                </div>
                <div class="summary-row">
                    <span>Taxes</span>
                    <span>$${taxes.toLocaleString()}</span>
                </div>
                <div class="summary-row total">
                    <span>Total</span>
                    <span>$${total.toLocaleString()}</span>
                </div>
                <button class="btn-checkout" onclick="proceedToCheckout()">
                    <i class="fas fa-lock"></i>
                    Proceed to Checkout
                </button>
                <button class="btn-clear" onclick="clearCart()">
                    Clear Cart
                </button>
                <div class="secure-notice">
                    <i class="fas fa-shield-alt"></i>
                    <span>Secure SSL encrypted checkout</span>
                </div>
            </div>
        `;
    }

    async function updateQuantity(cartItemId, newRooms, guests) {
        if (newRooms < 1) {
            removeItem(cartItemId);
            return;
        }

        try {
            const token = localStorage.getItem('token');
            const response = await fetch(`/api/cart/update/${cartItemId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify({
                    numberOfRooms: newRooms,
                    numberOfGuests: guests
                })
            });

            if (response.ok) {
                loadCart();
            }
        } catch (error) {
            console.error('Error updating cart:', error);
        }
    }

    async function removeItem(cartItemId) {
        if (!confirm('Remove this item from cart?')) return;

        try {
            const token = localStorage.getItem('token');
            const response = await fetch(`/api/cart/remove/${cartItemId}`, {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            if (response.ok) {
                loadCart();
            }
        } catch (error) {
            console.error('Error removing item:', error);
        }
    }

    async function clearCart() {
        if (!confirm('Clear all items from cart?')) return;

        try {
            const token = localStorage.getItem('token');
            const response = await fetch('/api/cart/clear', {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            if (response.ok) {
                loadCart();
            }
        } catch (error) {
            console.error('Error clearing cart:', error);
        }
    }

    async function proceedToCheckout() {
        // Redirect to secure checkout page for processing all cart items
        if (cartItems.length === 0) return;

        // Navigate to checkout page which handles cart payment
        window.location.href = '/cart/checkout';
    }
</script>
