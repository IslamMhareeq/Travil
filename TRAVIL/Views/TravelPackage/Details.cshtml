@{
    ViewData["Title"] = "Package Details";
    Layout = null;
    var packageId = ViewData["PackageId"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Package Details - TRAVIL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-charcoal: #21262d;
            --color-slate: #30363d;
            --color-silver: #8b949e;
            --color-white: #f0f6fc;
            --color-gold: #d4a853;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-success: #3fb950;
            --color-error: #f85149;
            --font-display: 'Playfair Display', serif;
            --font-body: 'Inter', sans-serif;
            --radius-md: 8px;
            --radius-lg: 12px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --space-7: 48px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
        }

        /* Navbar */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: var(--space-4) var(--space-6);
            background: rgba(13, 17, 23, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--color-slate);
        }

            .navbar .container {
                max-width: 1400px;
                margin: 0 auto;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

        .nav-brand {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

            .nav-brand .logo {
                width: 42px;
                height: 42px;
                background: linear-gradient(135deg, var(--color-gold), #b8934a);
                border-radius: var(--radius-md);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
                color: var(--color-midnight);
            }

            .nav-brand span {
                font-family: var(--font-display);
                font-size: 1.5rem;
                font-weight: 600;
                color: var(--color-gold);
            }

        .nav-links {
            display: flex;
            gap: var(--space-6);
        }

            .nav-links a {
                color: var(--color-silver);
                text-decoration: none;
                font-size: 0.9375rem;
                font-weight: 500;
                transition: color 0.2s;
            }

                .nav-links a:hover {
                    color: var(--color-gold);
                }

        .nav-auth {
            display: flex;
            gap: var(--space-3);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-5);
            border-radius: var(--radius-md);
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            border: none;
            transition: all 0.2s;
            font-size: 0.9375rem;
        }

        .btn-ghost {
            background: transparent;
            color: var(--color-white);
        }

        .btn-primary {
            background: var(--color-gold);
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                background: #e4b863;
                transform: translateY(-2px);
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-white);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .btn-lg {
            padding: var(--space-4) var(--space-6);
            font-size: 1rem;
        }

        /* Hero */
        .package-hero {
            position: relative;
            height: 500px;
            margin-top: 74px;
            overflow: hidden;
        }

            .package-hero img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .package-hero::after {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(to top, var(--color-midnight), transparent 50%);
            }

        .package-hero-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: var(--space-7);
            z-index: 1;
        }

            .package-hero-content .container {
                max-width: 1400px;
                margin: 0 auto;
            }

        .package-badge {
            display: inline-block;
            padding: var(--space-2) var(--space-4);
            background: var(--color-gold);
            color: var(--color-midnight);
            font-size: 0.75rem;
            font-weight: 700;
            border-radius: 20px;
            margin-bottom: var(--space-3);
            text-transform: uppercase;
        }

        .package-title {
            font-family: var(--font-display);
            font-size: 3rem;
            font-weight: 500;
            margin-bottom: var(--space-3);
        }

        .package-location {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--color-gold);
            font-size: 1.125rem;
        }

        /* Main Content */
        .package-content {
            padding: var(--space-7) var(--space-6);
        }

            .package-content .container {
                max-width: 1400px;
                margin: 0 auto;
                display: grid;
                grid-template-columns: 1fr 400px;
                gap: var(--space-6);
            }

        /* Info Sections */
        .info-section {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            margin-bottom: var(--space-5);
        }

            .info-section h2 {
                font-size: 1.25rem;
                font-weight: 600;
                margin-bottom: var(--space-4);
                padding-bottom: var(--space-3);
                border-bottom: 1px solid var(--color-slate);
            }

            .info-section p {
                color: var(--color-silver);
                line-height: 1.8;
            }

        /* Stats */
        .package-stats {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--space-4);
        }

        .stat-box {
            text-align: center;
            padding: var(--space-4);
            background: var(--color-charcoal);
            border-radius: var(--radius-md);
        }

            .stat-box i {
                font-size: 1.5rem;
                color: var(--color-gold);
                margin-bottom: var(--space-2);
            }

            .stat-box .stat-value {
                display: block;
                font-size: 1.125rem;
                font-weight: 600;
                margin-bottom: var(--space-2);
            }

            .stat-box .stat-label {
                font-size: 0.8125rem;
                color: var(--color-silver);
            }

        /* Highlights */
        .highlights-list {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--space-3);
        }

        .highlight-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3);
            background: var(--color-charcoal);
            border-radius: var(--radius-md);
        }

            .highlight-item i {
                width: 32px;
                height: 32px;
                display: flex;
                align-items: center;
                justify-content: center;
                background: var(--color-gold-muted);
                border-radius: 50%;
                color: var(--color-gold);
                font-size: 0.875rem;
            }

            .highlight-item span {
                font-size: 0.9375rem;
                color: var(--color-silver);
            }

        /* Itinerary */
        .itinerary-list {
            display: flex;
            flex-direction: column;
            gap: var(--space-4);
        }

        .itinerary-day {
            display: flex;
            gap: var(--space-4);
        }

        .itinerary-marker {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .itinerary-dot {
            width: 12px;
            height: 12px;
            background: var(--color-gold);
            border-radius: 50%;
        }

        .itinerary-line {
            flex: 1;
            width: 2px;
            background: var(--color-slate);
        }

        .itinerary-content {
            flex: 1;
            padding-bottom: var(--space-4);
        }

            .itinerary-content h4 {
                font-size: 1rem;
                margin-bottom: var(--space-2);
                color: var(--color-gold);
            }

            .itinerary-content p {
                font-size: 0.9375rem;
                color: var(--color-silver);
            }

        /* Booking Card */
        .booking-card {
            position: sticky;
            top: 100px;
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
        }

        .booking-price {
            text-align: center;
            padding-bottom: var(--space-4);
            border-bottom: 1px solid var(--color-slate);
            margin-bottom: var(--space-4);
        }

            .booking-price .old-price {
                font-size: 1.25rem;
                color: var(--color-silver);
                text-decoration: line-through;
                margin-right: var(--space-2);
            }

            .booking-price .current-price {
                font-size: 2.5rem;
                font-weight: 700;
                color: var(--color-gold);
            }

            .booking-price .per-person {
                font-size: 0.9375rem;
                color: var(--color-silver);
            }

            .booking-price .discount-badge {
                display: inline-block;
                padding: var(--space-2) var(--space-3);
                background: var(--color-success);
                color: white;
                font-size: 0.75rem;
                font-weight: 600;
                border-radius: 20px;
                margin-top: var(--space-2);
            }

        .booking-details {
            margin-bottom: var(--space-4);
        }

        .booking-detail {
            display: flex;
            justify-content: space-between;
            padding: var(--space-3) 0;
            border-bottom: 1px solid var(--color-slate);
        }

            .booking-detail:last-child {
                border-bottom: none;
            }

            .booking-detail .label {
                color: var(--color-silver);
                display: flex;
                align-items: center;
                gap: var(--space-2);
            }

                .booking-detail .label i {
                    color: var(--color-gold);
                }

            .booking-detail .value {
                font-weight: 500;
            }

        .booking-actions {
            display: flex;
            flex-direction: column;
            gap: var(--space-3);
        }

        .availability-tag {
            text-align: center;
            padding: var(--space-3);
            background: rgba(63, 185, 80, 0.15);
            border: 1px solid var(--color-success);
            border-radius: var(--radius-md);
            color: var(--color-success);
            font-size: 0.875rem;
            font-weight: 500;
        }

            .availability-tag.limited {
                background: rgba(210, 153, 34, 0.15);
                border-color: #d29922;
                color: #d29922;
            }

            .availability-tag.sold-out {
                background: rgba(248, 81, 73, 0.15);
                border-color: var(--color-error);
                color: var(--color-error);
            }

        /* Loading */
        .loading {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 400px;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        .error-state {
            text-align: center;
            padding: var(--space-7);
        }

            .error-state i {
                font-size: 4rem;
                color: var(--color-error);
                margin-bottom: var(--space-4);
            }

            .error-state h2 {
                margin-bottom: var(--space-3);
            }

            .error-state p {
                color: var(--color-silver);
                margin-bottom: var(--space-5);
            }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--color-charcoal);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-4) var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            z-index: 10000;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }

            .toast.show {
                opacity: 1;
                transform: translateY(0);
            }

            .toast.success {
                border-color: var(--color-success);
            }

            .toast.error {
                border-color: var(--color-error);
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 1024px) {
            .package-content .container {
                grid-template-columns: 1fr;
            }

            .booking-card {
                position: static;
            }

            .package-stats {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .nav-links, .nav-auth {
                display: none;
            }

            .package-title {
                font-size: 2rem;
            }

            .package-hero {
                height: 350px;
            }

            .highlights-list {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="nav-brand">
                <div class="logo"><i class="fas fa-compass"></i></div>
                <span>TRAVIL</span>
            </a>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/packages">Packages</a>
                <a href="/#destinations">Destinations</a>
                <a href="/#about">About</a>
            </div>
            <div class="nav-auth" id="navAuth">
                <a href="/account/login" class="btn btn-ghost">Sign In</a>
                <a href="/account/register" class="btn btn-primary">Get Started</a>
            </div>
        </div>
    </nav>

    <div id="mainContent">
        <div class="loading">
            <div class="spinner"></div>
        </div>
    </div>

    <div id="toast" class="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Message</span>
    </div>

    <script>
        var packageId = @(packageId ?? 0);

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type + ' show';
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function updateNav() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');
            var navAuth = document.getElementById('navAuth');

            if (token && user) {
                try {
                    var userData = JSON.parse(user);
                    var isAdmin = userData.role === 0 || userData.role === '0' || userData.role === 'Admin';
                    navAuth.innerHTML = '<a href="' + (isAdmin ? '/admin/dashboard' : '/account/dashboard') + '" class="btn btn-ghost"><i class="fas fa-user"></i> Dashboard</a>' +
                        '<a href="#" class="btn btn-outline" onclick="logout(event)">Logout</a>';
                } catch(e) {}
            }
        }

        function logout(event) {
            if (event) event.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            window.location.href = '/';
        }

        function formatDate(dateStr) {
            if (!dateStr) return 'TBD';
            var date = new Date(dateStr);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
        }

        function calculateDuration(startDate, endDate) {
            if (!startDate || !endDate) return 7;
            var start = new Date(startDate);
            var end = new Date(endDate);
            var days = Math.ceil((end - start) / (1000 * 60 * 60 * 24));
            return days > 0 ? days : 1;
        }

        function getDefaultImage() {
            return 'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=1920&q=80';
        }

        async function loadPackage() {
            var mainContent = document.getElementById('mainContent');

            if (!packageId || packageId === 0) {
                showError('Invalid package ID');
                return;
            }

            try {
                var response = await fetch('/api/travelpackage/' + packageId);

                if (response.ok) {
                    var result = await response.json();
                    var pkg = result.data || result;

                    console.log('Loaded package:', pkg);

                    if (pkg && pkg.packageId) {
                        renderPackage(pkg, result.averageRating || 0);
                    } else {
                        showError('Package not found');
                    }
                } else if (response.status === 404) {
                    showError('Package not found');
                } else {
                    showError('Failed to load package');
                }
            } catch (error) {
                console.error('Error:', error);
                showError('Error loading package');
            }
        }

        function showError(message) {
            var mainContent = document.getElementById('mainContent');
            mainContent.innerHTML = '<div class="error-state" style="margin-top: 150px;">' +
                '<i class="fas fa-exclamation-circle"></i>' +
                '<h2>' + message + '</h2>' +
                '<p>The package you are looking for might have been removed or is no longer available.</p>' +
                '<a href="/packages" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back to Packages</a>' +
                '</div>';
        }

        function renderPackage(pkg, avgRating) {
            var imageUrl = pkg.imageUrl || getDefaultImage();
            var duration = calculateDuration(pkg.startDate, pkg.endDate);
            var hasDiscount = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
            var displayPrice = hasDiscount ? pkg.discountedPrice : pkg.price;
            var discountPercent = hasDiscount ? Math.round((1 - pkg.discountedPrice / pkg.price) * 100) : 0;

            var availabilityClass = '';
            var availabilityText = '';
            if (pkg.availableRooms <= 0) {
                availabilityClass = 'sold-out';
                availabilityText = 'Sold Out';
            } else if (pkg.availableRooms <= 3) {
                availabilityClass = 'limited';
                availabilityText = 'Only ' + pkg.availableRooms + ' rooms left!';
            } else {
                availabilityText = pkg.availableRooms + ' rooms available';
            }

            var html = '';

            // Hero Section
            html += '<section class="package-hero">';
            html += '<img src="' + imageUrl + '" alt="' + (pkg.destination || 'Package') + '" onerror="this.src=\'' + getDefaultImage() + '\'">';
            html += '<div class="package-hero-content"><div class="container">';
            if (hasDiscount) {
                html += '<span class="package-badge">Save ' + discountPercent + '%</span>';
            }
            html += '<h1 class="package-title">' + (pkg.destination || 'Travel Package') + '</h1>';
            html += '<div class="package-location"><i class="fas fa-map-marker-alt"></i> ' + (pkg.country || 'Unknown Location') + '</div>';
            html += '</div></div></section>';

            // Content Section
            html += '<section class="package-content"><div class="container">';

            // Left Column
            html += '<div>';

            // Overview
            html += '<div class="info-section">';
            html += '<h2><i class="fas fa-info-circle" style="color: var(--color-gold); margin-right: 8px;"></i>Overview</h2>';
            html += '<p>' + (pkg.description || 'Experience an unforgettable journey to ' + (pkg.destination || 'your dream destination') + '. This carefully curated package includes accommodation, guided tours, and authentic local experiences.') + '</p>';
            html += '</div>';

            // Stats
            html += '<div class="info-section">';
            html += '<h2><i class="fas fa-chart-bar" style="color: var(--color-gold); margin-right: 8px;"></i>Trip Details</h2>';
            html += '<div class="package-stats">';
            html += '<div class="stat-box"><i class="far fa-clock"></i><span class="stat-value">' + duration + ' Days</span><span class="stat-label">Duration</span></div>';
            html += '<div class="stat-box"><i class="fas fa-bed"></i><span class="stat-value">' + (pkg.availableRooms || 0) + '</span><span class="stat-label">Rooms Available</span></div>';
            html += '<div class="stat-box"><i class="fas fa-star"></i><span class="stat-value">' + (avgRating > 0 ? avgRating.toFixed(1) : 'New') + '</span><span class="stat-label">Rating</span></div>';
            html += '<div class="stat-box"><i class="fas fa-users"></i><span class="stat-value">' + (pkg.maxGuests || 2) + '</span><span class="stat-label">Max Guests</span></div>';
            html += '</div></div>';

            // Highlights
            html += '<div class="info-section">';
            html += '<h2><i class="fas fa-star" style="color: var(--color-gold); margin-right: 8px;"></i>Highlights</h2>';
            html += '<div class="highlights-list">';
            html += '<div class="highlight-item"><i class="fas fa-hotel"></i><span>Premium Accommodation</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-utensils"></i><span>Breakfast Included</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-map"></i><span>Guided Tours</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-shuttle-van"></i><span>Airport Transfer</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-camera"></i><span>Photo Opportunities</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-headset"></i><span>24/7 Support</span></div>';
            html += '</div></div>';

            // Itinerary
            if (pkg.itinerary) {
                html += '<div class="info-section">';
                html += '<h2><i class="fas fa-route" style="color: var(--color-gold); margin-right: 8px;"></i>Itinerary</h2>';
                html += '<div class="itinerary-list">';
                var itineraryLines = pkg.itinerary.split('\n');
                for (var i = 0; i < itineraryLines.length; i++) {
                    if (itineraryLines[i].trim()) {
                        html += '<div class="itinerary-day">';
                        html += '<div class="itinerary-marker"><div class="itinerary-dot"></div><div class="itinerary-line"></div></div>';
                        html += '<div class="itinerary-content"><h4>Day ' + (i + 1) + '</h4><p>' + itineraryLines[i] + '</p></div>';
                        html += '</div>';
                    }
                }
                html += '</div></div>';
            }

            html += '</div>'; // End left column

            // Right Column - Booking Card
            html += '<div>';
            html += '<div class="booking-card">';

            // Price
            html += '<div class="booking-price">';
            if (hasDiscount) {
                html += '<span class="old-price">$' + Math.round(pkg.price) + '</span>';
            }
            html += '<span class="current-price">$' + Math.round(displayPrice) + '</span>';
            html += '<span class="per-person"> / person</span>';
            if (hasDiscount) {
                html += '<div><span class="discount-badge">SAVE ' + discountPercent + '%</span></div>';
            }
            html += '</div>';

            // Booking Details
            html += '<div class="booking-details">';
            html += '<div class="booking-detail"><span class="label"><i class="far fa-calendar"></i> Start Date</span><span class="value">' + formatDate(pkg.startDate) + '</span></div>';
            html += '<div class="booking-detail"><span class="label"><i class="far fa-calendar-check"></i> End Date</span><span class="value">' + formatDate(pkg.endDate) + '</span></div>';
            html += '<div class="booking-detail"><span class="label"><i class="far fa-clock"></i> Duration</span><span class="value">' + duration + ' Days</span></div>';
            html += '<div class="booking-detail"><span class="label"><i class="fas fa-bed"></i> Rooms</span><span class="value">' + (pkg.availableRooms || 0) + ' Available</span></div>';
            html += '</div>';

            // Availability
            html += '<div class="availability-tag ' + availabilityClass + '"><i class="fas fa-' + (availabilityClass === 'sold-out' ? 'times-circle' : 'check-circle') + '"></i> ' + availabilityText + '</div>';

            // Actions
            html += '<div class="booking-actions" style="margin-top: var(--space-4);">';
            if (pkg.availableRooms > 0) {
                html += '<a href="/booking/create/' + pkg.packageId + '" class="btn btn-primary btn-lg" style="width: 100%; justify-content: center;"><i class="fas fa-calendar-check"></i> Book Now</a>';
            } else {
                html += '<button class="btn btn-outline btn-lg" style="width: 100%; justify-content: center;" disabled><i class="fas fa-bell"></i> Notify When Available</button>';
            }
            html += '<button class="btn btn-outline" style="width: 100%; justify-content: center;" onclick="addToWishlist(' + pkg.packageId + ')"><i class="far fa-heart"></i> Add to Wishlist</button>';
            html += '</div>';

            html += '</div>'; // End booking card
            html += '</div>'; // End right column

            html += '</div></section>'; // End content

            document.getElementById('mainContent').innerHTML = html;
        }

        async function addToWishlist(pkgId) {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to add to wishlist', 'error');
                setTimeout(function() { window.location.href = '/account/login'; }, 1500);
                return;
            }

            try {
                var response = await fetch('/api/wishlist/' + pkgId, {
                    method: 'POST',
                    headers: {
                        'Authorization': 'Bearer ' + token,
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    showToast('Added to wishlist!', 'success');
                } else {
                    var error = await response.json();
                    showToast(error.message || 'Failed to add to wishlist', 'error');
                }
            } catch (error) {
                showToast('Error adding to wishlist', 'error');
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateNav();
            loadPackage();
        });
    </script>
