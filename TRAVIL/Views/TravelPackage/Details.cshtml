@{
    ViewData["Title"] = "Package Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Package Details - TRAVIL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-bg: #0a0a0f;
            --color-navy: #0d1117;
            --color-charcoal: #161b22;
            --color-slate: #21262d;
            --color-border: #30363d;
            --color-gold: #d4a853;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-white: #ffffff;
            --color-silver: #8b949e;
            --color-success: #3fb950;
            --color-error: #f85149;
            --color-warning: #d29922;
            --font-main: 'Plus Jakarta Sans', sans-serif;
            --radius-sm: 6px;
            --radius-md: 10px;
            --radius-lg: 16px;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --space-7: 48px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-main);
            background: var(--color-bg);
            color: var(--color-white);
            line-height: 1.6;
        }

        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--space-5);
        }

        /* Header */
        .site-header {
            background: rgba(10, 10, 15, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--color-border);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: var(--space-4) var(--space-5);
            max-width: 1280px;
            margin: 0 auto;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--color-gold);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: var(--space-2);
        }

        .nav-links {
            display: flex;
            gap: var(--space-6);
        }

            .nav-links a {
                color: var(--color-silver);
                text-decoration: none;
                font-size: 0.9375rem;
                transition: color 0.2s;
            }

                .nav-links a:hover {
                    color: var(--color-gold);
                }

        .header-actions {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-4);
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--color-gold);
            color: var(--color-bg);
        }

            .btn-primary:hover {
                background: #e4b863;
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-border);
            color: var(--color-white);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .btn-success {
            background: var(--color-success);
            color: white;
        }

            .btn-success:hover {
                background: #4fc760;
            }

        .btn-lg {
            padding: var(--space-4) var(--space-5);
            font-size: 1rem;
        }

        .btn-block {
            width: 100%;
            justify-content: center;
        }

        /* Main Content */
        .main-content {
            padding-top: 80px;
        }

        /* Image Gallery */
        .gallery-section {
            background: var(--color-navy);
            padding: var(--space-5) 0;
        }

        .gallery-container {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: var(--space-4);
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--space-5);
        }

        .main-image {
            position: relative;
            border-radius: var(--radius-lg);
            overflow: hidden;
            height: 450px;
        }

            .main-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .image-badges {
            position: absolute;
            top: var(--space-4);
            left: var(--space-4);
            display: flex;
            flex-direction: column;
            gap: var(--space-2);
        }

        .badge {
            padding: var(--space-2) var(--space-4);
            border-radius: 20px;
            font-size: 0.8125rem;
            font-weight: 600;
        }

        .badge-sale {
            background: var(--color-success);
            color: white;
        }

        .badge-category {
            background: var(--color-gold);
            color: var(--color-bg);
        }

        .wishlist-btn {
            position: absolute;
            top: var(--space-4);
            right: var(--space-4);
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.6);
            border: none;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 1.25rem;
        }

            .wishlist-btn:hover {
                background: var(--color-error);
                transform: scale(1.1);
            }

            .wishlist-btn.active {
                background: var(--color-error);
            }

                .wishlist-btn.active i {
                    font-weight: 900;
                }

        .thumbnail-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--space-3);
        }

        .thumbnail {
            border-radius: var(--radius-md);
            overflow: hidden;
            height: 110px;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.2s;
        }

            .thumbnail:hover, .thumbnail.active {
                border-color: var(--color-gold);
            }

            .thumbnail img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Package Details Section */
        .details-section {
            padding: var(--space-6) 0 var(--space-7);
        }

        .details-grid {
            display: grid;
            grid-template-columns: 1fr 400px;
            gap: var(--space-6);
        }

        /* Info Cards */
        .info-card {
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            margin-bottom: var(--space-5);
        }

            .info-card h2 {
                font-size: 1.25rem;
                margin-bottom: var(--space-4);
                display: flex;
                align-items: center;
                gap: var(--space-3);
            }

                .info-card h2 i {
                    color: var(--color-gold);
                }

        .package-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: var(--space-3);
        }

        .package-location {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--color-gold);
            font-size: 1rem;
            margin-bottom: var(--space-4);
        }

        .package-description {
            color: var(--color-silver);
            font-size: 1rem;
            line-height: 1.8;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--space-4);
            margin-top: var(--space-4);
        }

        .stat-box {
            text-align: center;
            padding: var(--space-4);
            background: var(--color-navy);
            border-radius: var(--radius-md);
        }

            .stat-box i {
                font-size: 1.5rem;
                color: var(--color-gold);
                margin-bottom: var(--space-2);
            }

        .stat-value {
            display: block;
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: var(--space-1);
        }

        .stat-label {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        /* Highlights */
        .highlights-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--space-3);
        }

        .highlight-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3);
            background: var(--color-navy);
            border-radius: var(--radius-md);
        }

            .highlight-item i {
                width: 36px;
                height: 36px;
                display: flex;
                align-items: center;
                justify-content: center;
                background: var(--color-gold-muted);
                border-radius: 50%;
                color: var(--color-gold);
            }

            .highlight-item span {
                font-size: 0.9375rem;
                color: var(--color-silver);
            }

        /* Itinerary */
        .itinerary-item {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-4);
        }

        .itinerary-marker {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .itinerary-dot {
            width: 12px;
            height: 12px;
            background: var(--color-gold);
            border-radius: 50%;
        }

        .itinerary-line {
            flex: 1;
            width: 2px;
            background: var(--color-border);
            margin: var(--space-2) 0;
        }

        .itinerary-content h4 {
            color: var(--color-gold);
            margin-bottom: var(--space-2);
        }

        .itinerary-content p {
            color: var(--color-silver);
            font-size: 0.9375rem;
        }

        /* Booking Card */
        .booking-card {
            position: sticky;
            top: 100px;
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
        }

        .price-section {
            text-align: center;
            padding-bottom: var(--space-4);
            border-bottom: 1px solid var(--color-border);
            margin-bottom: var(--space-4);
        }

        .old-price {
            font-size: 1.25rem;
            color: var(--color-silver);
            text-decoration: line-through;
            margin-right: var(--space-2);
        }

        .current-price {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--color-gold);
        }

        .per-person {
            font-size: 0.9375rem;
            color: var(--color-silver);
        }

        .discount-badge {
            display: inline-block;
            padding: var(--space-2) var(--space-3);
            background: var(--color-success);
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: 20px;
            margin-top: var(--space-2);
        }

        .booking-details {
            margin-bottom: var(--space-4);
        }

        .booking-row {
            display: flex;
            justify-content: space-between;
            padding: var(--space-3) 0;
            border-bottom: 1px solid var(--color-border);
        }

            .booking-row:last-child {
                border-bottom: none;
            }

            .booking-row .label {
                color: var(--color-silver);
            }

            .booking-row .value {
                font-weight: 500;
            }

        .availability {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-3);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-4);
            font-size: 0.875rem;
        }

            .availability.available {
                background: rgba(63, 185, 80, 0.15);
                color: var(--color-success);
            }

            .availability.limited {
                background: rgba(210, 153, 34, 0.15);
                color: var(--color-warning);
            }

            .availability.sold-out {
                background: rgba(248, 81, 73, 0.15);
                color: var(--color-error);
            }

        .booking-actions {
            display: flex;
            flex-direction: column;
            gap: var(--space-3);
        }

        /* Reviews Section */
        .reviews-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--space-4);
        }

        .rating-summary {
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .rating-big {
            font-size: 3rem;
            font-weight: 700;
            color: var(--color-gold);
        }

        .rating-stars {
            color: var(--color-gold);
            font-size: 1.25rem;
        }

        .rating-count {
            color: var(--color-silver);
            font-size: 0.875rem;
        }

        .review-item {
            padding: var(--space-4);
            background: var(--color-navy);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-3);
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: var(--space-3);
        }

        .reviewer {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .reviewer-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--color-gold);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--color-bg);
        }

        .reviewer-name {
            font-weight: 500;
        }

        .reviewer-date {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        .review-rating {
            color: var(--color-gold);
        }

        .review-text {
            color: var(--color-silver);
            line-height: 1.6;
        }

        /* Review Form */
        .review-form {
            background: var(--color-navy);
            border-radius: var(--radius-md);
            padding: var(--space-4);
            margin-top: var(--space-4);
        }

            .review-form h4 {
                margin-bottom: var(--space-3);
            }

        .star-rating {
            display: flex;
            gap: var(--space-2);
            margin-bottom: var(--space-3);
        }

            .star-rating i {
                font-size: 1.5rem;
                color: var(--color-border);
                cursor: pointer;
                transition: color 0.2s;
            }

                .star-rating i:hover,
                .star-rating i.active {
                    color: var(--color-gold);
                }

        .form-control {
            width: 100%;
            padding: var(--space-3);
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-family: var(--font-main);
            resize: vertical;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--color-charcoal);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            padding: var(--space-4) var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s;
            z-index: 2000;
        }

            .toast.show {
                transform: translateY(0);
                opacity: 1;
            }

            .toast.success i {
                color: var(--color-success);
            }

            .toast.error i {
                color: var(--color-error);
            }

        /* Loading */
        .loading {
            text-align: center;
            padding: var(--space-7);
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid var(--color-border);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto var(--space-4);
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .gallery-container {
                grid-template-columns: 1fr;
            }

            .main-image {
                height: 350px;
            }

            .thumbnail-grid {
                grid-template-columns: repeat(4, 1fr);
            }

            .details-grid {
                grid-template-columns: 1fr;
            }

            .booking-card {
                position: static;
            }
        }

        @@media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .highlights-grid {
                grid-template-columns: 1fr;
            }

            .thumbnail-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>
    <header class="site-header">
        <div class="header-content">
            <a href="/" class="logo"><i class="fas fa-compass"></i> TRAVIL</a>
            <nav class="nav-links">
                <a href="/">Home</a>
                <a href="/packages">Packages</a>
                <a href="/#about">About</a>
                <a href="/#contact">Contact</a>
            </nav>
            <div class="header-actions" id="navAuth">
                <a href="/account/login" class="btn btn-outline">Sign In</a>
                <a href="/account/register" class="btn btn-primary">Get Started</a>
            </div>
        </div>
    </header>

    <main class="main-content" id="mainContent">
        <div class="loading"><div class="spinner"></div><p>Loading package...</p></div>
    </main>

    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage"></span></div>

    <script>
        var packageData = null;
        var reviews = [];
        var avgRating = 0;
        var selectedRating = 0;
        var categoryNames = ['Family', 'Honeymoon', 'Adventure', 'Cruise', 'Luxury', 'Budget', 'Cultural', 'Beach'];

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function updateNav() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');
            var nav = document.getElementById('navAuth');

            if (token && user) {
                try {
                    var userData = JSON.parse(user);
                    var isAdmin = userData.role === 0 || userData.role === '0' || userData.role === 'Admin';
                    var dashUrl = isAdmin ? '/admin/dashboard' : '/account/dashboard';
                    var name = userData.firstName || 'Account';
                    nav.innerHTML = '<a href="/cart" class="btn btn-outline"><i class="fas fa-shopping-cart"></i></a>' +
                                   '<a href="' + dashUrl + '" class="btn btn-primary"><i class="fas fa-user"></i> ' + name + '</a>';
                } catch (e) { }
            }
        }

        function getPackageId() {
            var path = window.location.pathname;
            var match = path.match(/\/packages\/(\d+)/) || path.match(/\/TravelPackage\/Details\/(\d+)/);
            if (match) return parseInt(match[1]);
            var params = new URLSearchParams(window.location.search);
            return parseInt(params.get('id')) || 1;
        }

        function getDefaultImages() {
            return [
                'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=800',
                'https://images.unsplash.com/photo-1502602898657-3e91760cbb34?w=800',
                'https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=800',
                'https://images.unsplash.com/photo-1514282401047-d79a71a590e8?w=800'
            ];
        }

        function calcDuration(start, end) {
            if (!start || !end) return 7;
            return Math.ceil((new Date(end) - new Date(start)) / (1000 * 60 * 60 * 24)) || 7;
        }

        function formatDate(dateStr) {
            if (!dateStr) return '';
            return new Date(dateStr).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
        }

        function renderStars(rating, interactive) {
            var html = '';
            for (var i = 1; i <= 5; i++) {
                if (interactive) {
                    html += '<i class="' + (i <= rating ? 'fas' : 'far') + ' fa-star ' + (i <= rating ? 'active' : '') + '" data-rating="' + i + '" onclick="setRating(' + i + ')"></i>';
                } else {
                    html += '<i class="' + (i <= rating ? 'fas' : 'far') + ' fa-star"></i>';
                }
            }
            return html;
        }

        function setRating(rating) {
            selectedRating = rating;
            var stars = document.querySelectorAll('.star-rating i');
            stars.forEach(function(star, index) {
                if (index < rating) {
                    star.classList.remove('far');
                    star.classList.add('fas', 'active');
                } else {
                    star.classList.remove('fas', 'active');
                    star.classList.add('far');
                }
            });
        }

        async function loadPackage() {
            var packageId = getPackageId();

            try {
                // Load package
                var response = await fetch('/api/packages/' + packageId);
                if (!response.ok) throw new Error('Package not found');

                var result = await response.json();
                packageData = result.data || result;

                // Load reviews
                try {
                    var reviewResponse = await fetch('/api/review/package/' + packageId);
                    if (reviewResponse.ok) {
                        var reviewResult = await reviewResponse.json();
                        reviews = reviewResult.reviews || reviewResult.data || [];
                        avgRating = reviewResult.averageRating || 0;
                    }
                } catch (e) { }

                renderPackage();

            } catch (error) {
                console.error('Error:', error);
                document.getElementById('mainContent').innerHTML =
                    '<div class="container" style="padding: 100px 0; text-align: center;"><i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: var(--color-silver); margin-bottom: 16px;"></i><h2>Package Not Found</h2><p style="color: var(--color-silver);">The package you\'re looking for doesn\'t exist.</p><a href="/packages" class="btn btn-primary" style="margin-top: 24px;">Browse Packages</a></div>';
            }
        }

        function renderPackage() {
            var pkg = packageData;
            var defaultImages = getDefaultImages();
            var images = pkg.images && pkg.images.length > 0 ? pkg.images.map(function(img) { return img.imageUrl || img.url || img; }) : [pkg.imageUrl || defaultImages[0]];

            // Ensure we have at least 4 images for the gallery
            while (images.length < 4) {
                images.push(defaultImages[images.length % defaultImages.length]);
            }

            var duration = calcDuration(pkg.startDate, pkg.endDate);
            var hasDiscount = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
            var displayPrice = hasDiscount ? pkg.discountedPrice : pkg.price;
            var discountPercent = hasDiscount ? Math.round((1 - pkg.discountedPrice / pkg.price) * 100) : 0;
            var categoryName = categoryNames[pkg.packageType] || 'Travel';
            var token = localStorage.getItem('token');

            var availabilityClass = 'available';
            var availabilityText = pkg.availableRooms + ' rooms available';
            var availabilityIcon = 'check-circle';
            if (pkg.availableRooms <= 0) {
                availabilityClass = 'sold-out';
                availabilityText = 'Sold Out';
                availabilityIcon = 'times-circle';
            } else if (pkg.availableRooms <= 3) {
                availabilityClass = 'limited';
                availabilityText = 'Only ' + pkg.availableRooms + ' rooms left!';
                availabilityIcon = 'exclamation-circle';
            }

            var html = '';

            // Gallery Section
            html += '<section class="gallery-section">';
            html += '<div class="gallery-container">';
            html += '<div class="main-image">';
            html += '<img id="mainImg" src="' + images[0] + '" alt="' + pkg.destination + '" onerror="this.src=\'' + defaultImages[0] + '\'">';
            html += '<div class="image-badges">';
            if (hasDiscount) {
                html += '<span class="badge badge-sale">' + discountPercent + '% OFF</span>';
            }
            html += '<span class="badge badge-category">' + categoryName + '</span>';
            html += '</div>';
            html += '<button class="wishlist-btn" id="wishlistBtn" onclick="toggleWishlist()"><i class="far fa-heart"></i></button>';
            html += '</div>';
            html += '<div class="thumbnail-grid">';
            for (var i = 0; i < 4; i++) {
                html += '<div class="thumbnail ' + (i === 0 ? 'active' : '') + '" onclick="changeImage(' + i + ', \'' + images[i] + '\')">';
                html += '<img src="' + images[i] + '" alt="Image ' + (i + 1) + '" onerror="this.src=\'' + defaultImages[i] + '\'">';
                html += '</div>';
            }
            html += '</div></div></section>';

            // Details Section
            html += '<section class="details-section"><div class="container"><div class="details-grid">';

            // Left Column
            html += '<div>';

            // Title Card
            html += '<div class="info-card">';
            html += '<h1 class="package-title">' + (pkg.destination || 'Travel Package') + '</h1>';
            html += '<div class="package-location"><i class="fas fa-map-marker-alt"></i> ' + (pkg.country || 'Unknown') + '</div>';
            html += '<p class="package-description">' + (pkg.description || 'Experience an unforgettable journey to ' + pkg.destination + '. This carefully curated package includes premium accommodation, guided tours, and authentic local experiences.') + '</p>';

            // Stats
            html += '<div class="stats-grid">';
            html += '<div class="stat-box"><i class="far fa-clock"></i><span class="stat-value">' + duration + ' Days</span><span class="stat-label">Duration</span></div>';
            html += '<div class="stat-box"><i class="fas fa-bed"></i><span class="stat-value">' + (pkg.availableRooms || 0) + '</span><span class="stat-label">Rooms</span></div>';
            html += '<div class="stat-box"><i class="fas fa-star"></i><span class="stat-value">' + (avgRating > 0 ? avgRating.toFixed(1) : 'New') + '</span><span class="stat-label">Rating</span></div>';
            html += '<div class="stat-box"><i class="fas fa-users"></i><span class="stat-value">' + (pkg.maxGuests || 2) + '</span><span class="stat-label">Max Guests</span></div>';
            html += '</div></div>';

            // Age Restriction (if any)
            if (pkg.minimumAge || pkg.maximumAge) {
                html += '<div class="info-card">';
                html += '<h2><i class="fas fa-user-check"></i> Age Requirements</h2>';
                if (pkg.minimumAge && pkg.maximumAge) {
                    html += '<p>This package is suitable for guests aged <strong>' + pkg.minimumAge + ' to ' + pkg.maximumAge + ' years</strong>.</p>';
                } else if (pkg.minimumAge) {
                    html += '<p>Minimum age requirement: <strong>' + pkg.minimumAge + '+ years</strong>.</p>';
                } else {
                    html += '<p>Maximum age limit: <strong>Up to ' + pkg.maximumAge + ' years</strong>.</p>';
                }
                html += '</div>';
            }

            // Highlights
            html += '<div class="info-card">';
            html += '<h2><i class="fas fa-star"></i> Highlights</h2>';
            html += '<div class="highlights-grid">';
            html += '<div class="highlight-item"><i class="fas fa-hotel"></i><span>Premium Accommodation</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-utensils"></i><span>Breakfast Included</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-map"></i><span>Guided Tours</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-shuttle-van"></i><span>Airport Transfer</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-camera"></i><span>Photo Opportunities</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-headset"></i><span>24/7 Support</span></div>';
            html += '</div></div>';

            // Itinerary
            if (pkg.itinerary) {
                html += '<div class="info-card">';
                html += '<h2><i class="fas fa-route"></i> Itinerary</h2>';
                var lines = pkg.itinerary.split('\n').filter(function(l) { return l.trim(); });
                for (var j = 0; j < lines.length; j++) {
                    html += '<div class="itinerary-item">';
                    html += '<div class="itinerary-marker"><div class="itinerary-dot"></div>' + (j < lines.length - 1 ? '<div class="itinerary-line"></div>' : '') + '</div>';
                    html += '<div class="itinerary-content"><h4>Day ' + (j + 1) + '</h4><p>' + lines[j] + '</p></div>';
                    html += '</div>';
                }
                html += '</div>';
            }

            // Reviews
            html += '<div class="info-card">';
            html += '<div class="reviews-header">';
            html += '<h2><i class="fas fa-comments"></i> Reviews</h2>';
            html += '<div class="rating-summary">';
            html += '<span class="rating-big">' + (avgRating > 0 ? avgRating.toFixed(1) : '-') + '</span>';
            html += '<div><div class="rating-stars">' + renderStars(Math.round(avgRating), false) + '</div>';
            html += '<div class="rating-count">' + reviews.length + ' reviews</div></div>';
            html += '</div></div>';

            if (reviews.length > 0) {
                for (var k = 0; k < Math.min(reviews.length, 5); k++) {
                    var r = reviews[k];
                    var reviewerName = (r.user ? (r.user.firstName || '') + ' ' + (r.user.lastName || '') : r.userName || 'Anonymous').trim() || 'Anonymous';
                    html += '<div class="review-item">';
                    html += '<div class="review-header">';
                    html += '<div class="reviewer"><div class="reviewer-avatar">' + reviewerName.charAt(0).toUpperCase() + '</div>';
                    html += '<div><div class="reviewer-name">' + reviewerName + '</div>';
                    html += '<div class="reviewer-date">' + formatDate(r.createdAt) + '</div></div></div>';
                    html += '<div class="review-rating">' + renderStars(r.rating, false) + '</div></div>';
                    html += '<p class="review-text">' + (r.comment || 'Great experience!') + '</p>';
                    html += '</div>';
                }
            } else {
                html += '<p style="color: var(--color-silver);">No reviews yet. Be the first to review!</p>';
            }

            // Review Form
            if (token) {
                html += '<div class="review-form">';
                html += '<h4>Write a Review</h4>';
                html += '<div class="star-rating" id="starRating">' + renderStars(0, true) + '</div>';
                html += '<textarea class="form-control" id="reviewComment" rows="3" placeholder="Share your experience..."></textarea>';
                html += '<button class="btn btn-primary" style="margin-top: 12px;" onclick="submitReview()"><i class="fas fa-paper-plane"></i> Submit Review</button>';
                html += '</div>';
            } else {
                html += '<div class="review-form" style="text-align: center;">';
                html += '<p style="color: var(--color-silver); margin-bottom: 12px;"><a href="/account/login" style="color: var(--color-gold);">Sign in</a> to write a review</p>';
                html += '</div>';
            }
            html += '</div>';

            html += '</div>'; // End left column

            // Right Column - Booking Card
            html += '<div>';
            html += '<div class="booking-card">';

            // Price
            html += '<div class="price-section">';
            if (hasDiscount) {
                html += '<span class="old-price">$' + Math.round(pkg.price) + '</span>';
            }
            html += '<span class="current-price">$' + Math.round(displayPrice) + '</span>';
            html += '<span class="per-person"> /person</span>';
            if (hasDiscount) {
                html += '<br><span class="discount-badge">Save $' + Math.round(pkg.price - pkg.discountedPrice) + '</span>';
            }
            html += '</div>';

            // Booking Details
            html += '<div class="booking-details">';
            html += '<div class="booking-row"><span class="label">Travel Dates</span><span class="value">' + formatDate(pkg.startDate) + ' - ' + formatDate(pkg.endDate) + '</span></div>';
            html += '<div class="booking-row"><span class="label">Duration</span><span class="value">' + duration + ' Days</span></div>';
            html += '<div class="booking-row"><span class="label">Category</span><span class="value">' + categoryName + '</span></div>';
            html += '</div>';

            // Availability
            html += '<div class="availability ' + availabilityClass + '"><i class="fas fa-' + availabilityIcon + '"></i> ' + availabilityText + '</div>';

            // Actions
            html += '<div class="booking-actions">';
            if (pkg.availableRooms > 0) {
                html += '<a href="/booking/create/' + pkg.packageId + '" class="btn btn-primary btn-lg btn-block"><i class="fas fa-calendar-check"></i> Book Now</a>';
                html += '<a href="/booking/buynow/' + pkg.packageId + '" class="btn btn-success btn-lg btn-block"><i class="fas fa-bolt"></i> Buy Now</a>';
                html += '<button class="btn btn-outline btn-block" onclick="addToCart(' + pkg.packageId + ')"><i class="fas fa-shopping-cart"></i> Add to Cart</button>';
            } else {
                html += '<button class="btn btn-outline btn-lg btn-block" onclick="joinWaitlist(' + pkg.packageId + ')"><i class="fas fa-bell"></i> Join Waiting List</button>';
            }
            html += '<button class="btn btn-outline btn-block" onclick="toggleWishlist()"><i class="far fa-heart"></i> Add to Wishlist</button>';
            html += '</div>';

            html += '</div></div>'; // End booking card and right column

            html += '</div></div></section>'; // End details grid and section

            document.getElementById('mainContent').innerHTML = html;
        }

        function changeImage(index, src) {
            document.getElementById('mainImg').src = src;
            var thumbnails = document.querySelectorAll('.thumbnail');
            thumbnails.forEach(function(thumb, i) {
                thumb.classList.toggle('active', i === index);
            });
        }

        async function toggleWishlist() {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to add to wishlist', 'error');
                setTimeout(function() { window.location.href = '/account/login'; }, 1500);
                return;
            }

            var btn = document.getElementById('wishlistBtn');
            var icon = btn.querySelector('i');

            try {
                var response = await fetch('/api/wishlist/' + packageData.packageId, {
                    method: 'POST',
                    headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' }
                });

                if (response.ok) {
                    btn.classList.add('active');
                    icon.classList.remove('far');
                    icon.classList.add('fas');
                    showToast('Added to wishlist!');
                } else {
                    // Try to remove
                    var removeResponse = await fetch('/api/wishlist/' + packageData.packageId, {
                        method: 'DELETE',
                        headers: { 'Authorization': 'Bearer ' + token }
                    });
                    if (removeResponse.ok) {
                        btn.classList.remove('active');
                        icon.classList.remove('fas');
                        icon.classList.add('far');
                        showToast('Removed from wishlist');
                    }
                }
            } catch (error) {
                showToast('Error updating wishlist', 'error');
            }
        }

        async function addToCart(packageId) {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to add to cart', 'error');
                setTimeout(function() { window.location.href = '/account/login'; }, 1500);
                return;
            }

            try {
                var response = await fetch('/api/cart/add', {
                    method: 'POST',
                    headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' },
                    body: JSON.stringify({ packageId: packageId, quantity: 1 })
                });

                if (response.ok) {
                    showToast('Added to cart!');
                } else {
                    var error = await response.json();
                    showToast(error.message || 'Failed to add to cart', 'error');
                }
            } catch (error) {
                showToast('Error adding to cart', 'error');
            }
        }

        async function joinWaitlist(packageId) {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to join waitlist', 'error');
                setTimeout(function() { window.location.href = '/account/login'; }, 1500);
                return;
            }

            try {
                var response = await fetch('/api/waitlist/' + packageId, {
                    method: 'POST',
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (response.ok) {
                    showToast('Added to waiting list! We\'ll notify you when a room is available.');
                } else {
                    var error = await response.json();
                    showToast(error.message || 'Failed to join waitlist', 'error');
                }
            } catch (error) {
                showToast('Error joining waitlist', 'error');
            }
        }

        async function submitReview() {
            if (selectedRating === 0) {
                showToast('Please select a rating', 'error');
                return;
            }

            var comment = document.getElementById('reviewComment').value.trim();
            if (!comment) {
                showToast('Please write a comment', 'error');
                return;
            }

            var token = localStorage.getItem('token');

            try {
                var response = await fetch('/api/review/package', {
                    method: 'POST',
                    headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' },
                    body: JSON.stringify({ packageId: packageData.packageId, rating: selectedRating, comment: comment })
                });

                if (response.ok) {
                    showToast('Review submitted! It will appear after approval.');
                    document.getElementById('reviewComment').value = '';
                    setRating(0);
                } else {
                    var error = await response.json();
                    showToast(error.message || 'Failed to submit review', 'error');
                }
            } catch (error) {
                showToast('Error submitting review', 'error');
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateNav();
            loadPackage();
        });
    </script>
</body>
</html>
