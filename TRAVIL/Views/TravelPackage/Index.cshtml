@{
    ViewData["Title"] = "Travel Packages";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore Packages - TRAVIL</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=DM+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-primary: #1a1a2e;
            --color-accent: #e94560;
            --color-gold: #c9a962;
            --color-success: #00b894;
            --font-display: 'Playfair Display', serif;
            --font-body: 'DM Sans', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: #f8f9fa;
            min-height: 100vh;
        }

        /* Navbar */
        .navbar {
            background: var(--color-primary);
            padding: 16px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-brand {
            display: flex;
            align-items: center;
            gap: 12px;
            color: white;
            text-decoration: none;
        }

            .nav-brand .logo {
                width: 40px;
                height: 40px;
                background: var(--color-accent);
                border-radius: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .nav-brand span {
                font-family: var(--font-display);
                font-size: 22px;
                font-weight: 600;
            }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 32px;
        }

            .nav-links a {
                color: rgba(255,255,255,0.8);
                text-decoration: none;
                font-size: 14px;
                transition: color 0.3s;
            }

                .nav-links a:hover {
                    color: white;
                }

        .nav-auth {
            display: flex;
            gap: 12px;
        }

        .btn {
            padding: 10px 24px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-outline-light {
            background: transparent;
            border: 1px solid rgba(255,255,255,0.3);
            color: white;
        }

            .btn-outline-light:hover {
                background: rgba(255,255,255,0.1);
            }

        .btn-accent {
            background: var(--color-accent);
            color: white;
        }

            .btn-accent:hover {
                background: #d63850;
            }

        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, var(--color-primary) 0%, #16213e 100%);
            padding: 60px 0;
            color: white;
        }

        .hero-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 24px;
        }

        .hero h1 {
            font-family: var(--font-display);
            font-size: 48px;
            margin-bottom: 16px;
        }

        .hero p {
            font-size: 18px;
            opacity: 0.8;
            margin-bottom: 32px;
        }

        /* Search Box */
        .search-container {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            margin-top: -40px;
            position: relative;
            z-index: 10;
            max-width: 1400px;
            margin-left: auto;
            margin-right: auto;
        }

        .search-row {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr auto;
            gap: 16px;
            align-items: end;
        }

        .search-group label {
            display: block;
            font-size: 12px;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 8px;
            text-transform: uppercase;
        }

        .search-group input,
        .search-group select {
            width: 100%;
            padding: 14px 16px;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            font-size: 14px;
            background: #f8f9fa;
        }

            .search-group input:focus,
            .search-group select:focus {
                outline: none;
                border-color: var(--color-accent);
            }

        .btn-search {
            padding: 14px 32px;
            background: var(--color-accent);
            color: white;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-search:hover {
                background: #d63850;
            }

        /* Filters */
        .filters-section {
            max-width: 1400px;
            margin: 24px auto;
            padding: 0 24px;
        }

        .filters-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 16px;
        }

        .filter-pills {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .filter-pill {
            padding: 8px 16px;
            border: 1px solid #e0e0e0;
            border-radius: 20px;
            font-size: 13px;
            cursor: pointer;
            transition: all 0.3s;
            background: white;
        }

            .filter-pill:hover,
            .filter-pill.active {
                background: var(--color-primary);
                color: white;
                border-color: var(--color-primary);
            }

        .sort-select {
            padding: 10px 16px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
            background: white;
        }

        /* Package Count */
        .packages-header {
            max-width: 1400px;
            margin: 32px auto 24px;
            padding: 0 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .packages-header h2 {
                font-family: var(--font-display);
                font-size: 24px;
            }

        .packages-count {
            color: #6c757d;
        }

        /* Package Grid */
        .packages-grid {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 24px 60px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 24px;
        }

        .package-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: all 0.3s;
        }

            .package-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 40px rgba(0,0,0,0.15);
            }

        .package-image {
            height: 200px;
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .package-badge {
            position: absolute;
            top: 16px;
            left: 16px;
            padding: 6px 12px;
            background: var(--color-accent);
            color: white;
            font-size: 12px;
            font-weight: 600;
            border-radius: 20px;
        }

            .package-badge.sale {
                background: var(--color-success);
            }

        .package-favorite {
            position: absolute;
            top: 16px;
            right: 16px;
            width: 36px;
            height: 36px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
        }

            .package-favorite:hover {
                background: var(--color-accent);
                color: white;
            }

        .package-content {
            padding: 20px;
        }

        .package-location {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #6c757d;
            font-size: 13px;
            margin-bottom: 8px;
        }

        .package-title {
            font-family: var(--font-display);
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 12px;
            color: var(--color-primary);
        }

        .package-meta {
            display: flex;
            gap: 16px;
            margin-bottom: 16px;
            font-size: 13px;
            color: #6c757d;
        }

            .package-meta span {
                display: flex;
                align-items: center;
                gap: 4px;
            }

        .package-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 16px;
            border-top: 1px solid #eee;
        }

        .package-price {
            display: flex;
            flex-direction: column;
        }

            .package-price .original {
                text-decoration: line-through;
                color: #6c757d;
                font-size: 14px;
            }

            .package-price .current {
                font-size: 24px;
                font-weight: 700;
                color: var(--color-accent);
            }

            .package-price .per {
                font-size: 13px;
                color: #6c757d;
            }

        .btn-book {
            padding: 12px 24px;
            background: var(--color-primary);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
        }

            .btn-book:hover {
                background: var(--color-accent);
            }

        .package-rating {
            display: flex;
            align-items: center;
            gap: 4px;
            color: var(--color-gold);
            font-size: 14px;
        }

        /* Loading */
        .loading {
            display: flex;
            justify-content: center;
            padding: 60px;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--color-accent);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* No Results */
        .no-results {
            text-align: center;
            padding: 60px;
            color: #6c757d;
        }

            .no-results i {
                font-size: 60px;
                margin-bottom: 20px;
                opacity: 0.3;
            }

            .no-results h3 {
                font-size: 24px;
                margin-bottom: 12px;
                color: var(--color-primary);
            }

        /* Footer */
        .footer {
            background: var(--color-primary);
            color: white;
            padding: 40px 0;
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 24px;
            text-align: center;
        }

        @@media (max-width: 768px) {
            .search-row {
                grid-template-columns: 1fr;
            }

            .nav-links {
                display: none;
            }

            .hero h1 {
                font-size: 32px;
            }

            .packages-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-brand">
                <div class="logo"><i class="fas fa-paper-plane"></i></div>
                <span>TRAVIL</span>
            </a>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/packages">Packages</a>
                <a href="#about">About</a>
                <a href="#contact">Contact</a>
            </div>
            <div class="nav-auth" id="navAuth">
                <a href="/account/login" class="btn btn-outline-light">Login</a>
                <a href="/account/register" class="btn btn-accent">Sign Up</a>
            </div>
        </div>
    </nav>

    <!-- Hero -->
    <section class="hero">
        <div class="hero-content">
            <h1>Explore Our Travel Packages</h1>
            <p>Discover <span id="totalCount">--</span> amazing destinations waiting for you</p>
        </div>
    </section>

    <!-- Search -->
    <div class="search-container">
        <div class="search-row">
            <div class="search-group">
                <label>Search Destination</label>
                <input type="text" id="searchInput" placeholder="Where do you want to go?">
            </div>
            <div class="search-group">
                <label>Country</label>
                <select id="countryFilter">
                    <option value="">All Countries</option>
                </select>
            </div>
            <div class="search-group">
                <label>Category</label>
                <select id="categoryFilter">
                    <option value="">All Categories</option>
                    <option value="0">Family</option>
                    <option value="1">Honeymoon</option>
                    <option value="2">Adventure</option>
                    <option value="3">Cruise</option>
                    <option value="4">Luxury</option>
                    <option value="5">Budget</option>
                    <option value="6">Cultural</option>
                    <option value="7">Beach</option>
                    <option value="8">Mountain</option>
                </select>
            </div>
            <div class="search-group">
                <label>Price Range</label>
                <select id="priceFilter">
                    <option value="">Any Price</option>
                    <option value="0-1000">Under $1,000</option>
                    <option value="1000-2500">$1,000 - $2,500</option>
                    <option value="2500-5000">$2,500 - $5,000</option>
                    <option value="5000-100000">$5,000+</option>
                </select>
            </div>
            <button class="btn-search" onclick="searchPackages()">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <div class="filters-row">
            <div class="filter-pills">
                <span class="filter-pill active" onclick="filterByType(null)">All</span>
                <span class="filter-pill" onclick="filterByType('sale')">🔥 On Sale</span>
                <span class="filter-pill" onclick="filterByType(0)">👨‍👩‍👧‍👦 Family</span>
                <span class="filter-pill" onclick="filterByType(1)">💑 Honeymoon</span>
                <span class="filter-pill" onclick="filterByType(2)">🏔️ Adventure</span>
                <span class="filter-pill" onclick="filterByType(3)">🚢 Cruise</span>
                <span class="filter-pill" onclick="filterByType(4)">💎 Luxury</span>
                <span class="filter-pill" onclick="filterByType(5)">💰 Budget</span>
            </div>
            <select class="sort-select" id="sortSelect" onchange="sortPackages()">
                <option value="">Sort By</option>
                <option value="price_asc">Price: Low to High</option>
                <option value="price_desc">Price: High to Low</option>
                <option value="popularity">Most Popular</option>
                <option value="rating">Highest Rated</option>
                <option value="date_asc">Date: Soonest</option>
            </select>
        </div>
    </div>

    <!-- Packages Header -->
    <div class="packages-header">
        <h2>Available Packages</h2>
        <span class="packages-count" id="packagesCount">Loading...</span>
    </div>

    <!-- Packages Grid -->
    <div id="packagesGrid" class="packages-grid">
        <div class="loading" style="grid-column: 1 / -1;">
            <div class="spinner"></div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 TRAVIL. All rights reserved.</p>
        </div>
    </footer>

    <script>
        let allPackages = [];
        const packageTypes = ['Family', 'Honeymoon', 'Adventure', 'Cruise', 'Luxury', 'Budget', 'Cultural', 'Beach', 'Mountain'];

        document.addEventListener('DOMContentLoaded', async function() {
            checkAuth();
            await loadPackages();
            await loadCountries();
        });

        function checkAuth() {
            const token = localStorage.getItem('token');
            const user = localStorage.getItem('user');

            if (token && user) {
                const userData = JSON.parse(user);
                document.getElementById('navAuth').innerHTML = `
                    <a href="/booking/my-bookings" class="btn btn-outline-light">My Bookings</a>
                    <a href="/account/dashboard" class="btn btn-accent">${userData.firstName}</a>
                `;
            }
        }

        async function loadPackages() {
            try {
                const response = await fetch('/api/travelpackage');
                if (response.ok) {
                    const result = await response.json();
                    allPackages = result.data;
                    document.getElementById('totalCount').textContent = allPackages.length;
                    renderPackages(allPackages);
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('packagesGrid').innerHTML = `
                    <div class="no-results" style="grid-column: 1 / -1;">
                        <i class="fas fa-exclamation-circle"></i>
                        <h3>Error Loading Packages</h3>
                        <p>Please try again later</p>
                    </div>
                `;
            }
        }

        async function loadCountries() {
            try {
                const response = await fetch('/api/travelpackage/countries');
                if (response.ok) {
                    const result = await response.json();
                    const select = document.getElementById('countryFilter');
                    result.data.forEach(country => {
                        const option = document.createElement('option');
                        option.value = country;
                        option.textContent = country;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading countries:', error);
            }
        }

        function renderPackages(packages) {
            const grid = document.getElementById('packagesGrid');
            document.getElementById('packagesCount').textContent = `${packages.length} packages found`;

            if (packages.length === 0) {
                grid.innerHTML = `
                    <div class="no-results" style="grid-column: 1 / -1;">
                        <i class="fas fa-search"></i>
                        <h3>No Packages Found</h3>
                        <p>Try adjusting your search filters</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = packages.map(pkg => {
                const isOnSale = pkg.discountedPrice && pkg.discountStartDate && pkg.discountEndDate;
                const now = new Date();
                const saleActive = isOnSale && new Date(pkg.discountStartDate) <= now && new Date(pkg.discountEndDate) >= now;
                const displayPrice = saleActive ? pkg.discountedPrice : pkg.price;
                const startDate = new Date(pkg.startDate);
                const endDate = new Date(pkg.endDate);
                const duration = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));

                return `
                    <div class="package-card">
                        <div class="package-image" style="background-image: url('${pkg.imageUrl || 'https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=800'}')">
                            <span class="package-badge ${saleActive ? 'sale' : ''}">${saleActive ? '🔥 On Sale' : packageTypes[pkg.packageType]}</span>
                            <div class="package-favorite"><i class="far fa-heart"></i></div>
                        </div>
                        <div class="package-content">
                            <div class="package-location">
                                <i class="fas fa-map-marker-alt"></i>
                                ${pkg.country}
                            </div>
                            <h3 class="package-title">${pkg.destination}</h3>
                            <div class="package-meta">
                                <span><i class="far fa-calendar"></i> ${startDate.toLocaleDateString()}</span>
                                <span><i class="far fa-clock"></i> ${duration} days</span>
                                <span><i class="fas fa-bed"></i> ${pkg.availableRooms} rooms</span>
                            </div>
                            <div class="package-footer">
                                <div class="package-price">
                                    ${saleActive ? `<span class="original">$${pkg.price.toLocaleString()}</span>` : ''}
                                    <span class="current">$${displayPrice.toLocaleString()}</span>
                                    <span class="per">per person</span>
                                </div>
                                <a href="/packages/${pkg.packageId}" class="btn-book">View Details</a>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function searchPackages() {
            const search = document.getElementById('searchInput').value.toLowerCase();
            const country = document.getElementById('countryFilter').value;
            const category = document.getElementById('categoryFilter').value;
            const priceRange = document.getElementById('priceFilter').value;

            let filtered = allPackages.filter(pkg => {
                let matches = true;

                if (search) {
                    matches = matches && (
                        pkg.destination.toLowerCase().includes(search) ||
                        pkg.country.toLowerCase().includes(search) ||
                        pkg.description.toLowerCase().includes(search)
                    );
                }

                if (country) {
                    matches = matches && pkg.country === country;
                }

                if (category !== '') {
                    matches = matches && pkg.packageType === parseInt(category);
                }

                if (priceRange) {
                    const [min, max] = priceRange.split('-').map(Number);
                    const price = pkg.discountedPrice || pkg.price;
                    matches = matches && price >= min && price <= max;
                }

                return matches;
            });

            renderPackages(filtered);
        }

        function filterByType(type) {
            document.querySelectorAll('.filter-pill').forEach(p => p.classList.remove('active'));
            event.target.classList.add('active');

            if (type === null) {
                renderPackages(allPackages);
            } else if (type === 'sale') {
                const now = new Date();
                const salePackages = allPackages.filter(pkg =>
                    pkg.discountedPrice &&
                    new Date(pkg.discountStartDate) <= now &&
                    new Date(pkg.discountEndDate) >= now
                );
                renderPackages(salePackages);
            } else {
                const filtered = allPackages.filter(pkg => pkg.packageType === type);
                renderPackages(filtered);
            }
        }

        function sortPackages() {
            const sortBy = document.getElementById('sortSelect').value;
            let sorted = [...allPackages];

            switch (sortBy) {
                case 'price_asc':
                    sorted.sort((a, b) => (a.discountedPrice || a.price) - (b.discountedPrice || b.price));
                    break;
                case 'price_desc':
                    sorted.sort((a, b) => (b.discountedPrice || b.price) - (a.discountedPrice || a.price));
                    break;
                case 'date_asc':
                    sorted.sort((a, b) => new Date(a.startDate) - new Date(b.startDate));
                    break;
                case 'popularity':
                    // Sort by bookings count if available
                    break;
            }

            renderPackages(sorted);
        }
    </script>
</body>
</html>
