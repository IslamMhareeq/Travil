@{
    ViewData["Title"] = "Travel Packages";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Packages - TRAVIL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-charcoal: #21262d;
            --color-slate: #30363d;
            --color-silver: #8b949e;
            --color-white: #f0f6fc;
            --color-gold: #d4a853;
            --color-gold-muted: rgba(212, 168, 83, 0.3);
            --color-success: #3fb950;
            --color-error: #f85149;
            --font-display: 'Playfair Display', serif;
            --font-body: 'Inter', sans-serif;
            --radius-md: 8px;
            --radius-lg: 12px;
            --radius-full: 9999px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --space-7: 48px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: var(--space-4) var(--space-6);
            background: rgba(13, 17, 23, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--color-slate);
        }

            .navbar .container {
                max-width: 1400px;
                margin: 0 auto;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

        .nav-brand {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

            .nav-brand .logo {
                width: 42px;
                height: 42px;
                background: linear-gradient(135deg, var(--color-gold), #b8934a);
                border-radius: var(--radius-md);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
                color: var(--color-midnight);
            }

            .nav-brand span {
                font-family: var(--font-display);
                font-size: 1.5rem;
                font-weight: 600;
                color: var(--color-gold);
            }

        .nav-links {
            display: flex;
            gap: var(--space-6);
        }

            .nav-links a {
                color: var(--color-silver);
                text-decoration: none;
                font-size: 0.9375rem;
                font-weight: 500;
            }

                .nav-links a:hover, .nav-links a.active {
                    color: var(--color-gold);
                }

        .nav-auth {
            display: flex;
            gap: var(--space-3);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-5);
            border-radius: var(--radius-md);
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            border: none;
            transition: all 0.2s;
            font-size: 0.9375rem;
        }

        .btn-ghost {
            background: transparent;
            color: var(--color-white);
        }

        .btn-primary {
            background: var(--color-gold);
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                background: #e4b863;
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-white);
        }

        .btn-sm {
            padding: var(--space-2) var(--space-4);
            font-size: 0.875rem;
        }

        .page-header {
            padding: 140px var(--space-6) var(--space-7);
            background: var(--color-navy);
            border-bottom: 1px solid var(--color-slate);
        }

            .page-header .container {
                max-width: 1400px;
                margin: 0 auto;
            }

            .page-header h1 {
                font-family: var(--font-display);
                font-size: 3rem;
                font-weight: 500;
                margin-bottom: var(--space-3);
            }

            .page-header p {
                font-size: 1.125rem;
                color: var(--color-silver);
                max-width: 600px;
            }

        .filters-section {
            padding: var(--space-5) var(--space-6);
            background: var(--color-midnight);
            border-bottom: 1px solid var(--color-slate);
            position: sticky;
            top: 74px;
            z-index: 100;
        }

            .filters-section .container {
                max-width: 1400px;
                margin: 0 auto;
                display: flex;
                gap: var(--space-4);
                flex-wrap: wrap;
            }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: var(--space-2);
        }

            .filter-group label {
                font-size: 0.75rem;
                font-weight: 600;
                color: var(--color-silver);
                text-transform: uppercase;
            }

        .filter-control {
            padding: var(--space-3) var(--space-4);
            background: var(--color-charcoal);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            color: var(--color-white);
            min-width: 180px;
        }

            .filter-control:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        .packages-section {
            padding: var(--space-7) var(--space-6);
        }

            .packages-section .container {
                max-width: 1400px;
                margin: 0 auto;
            }

        .packages-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: var(--space-5);
        }

        .package-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
            transition: all 0.3s;
        }

            .package-card:hover {
                transform: translateY(-8px);
                border-color: var(--color-gold-muted);
                box-shadow: 0 20px 60px rgba(0,0,0,0.4);
            }

        .package-image {
            position: relative;
            height: 220px;
            overflow: hidden;
        }

            .package-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s;
            }

        .package-card:hover .package-image img {
            transform: scale(1.1);
        }

        .package-badge {
            position: absolute;
            top: var(--space-4);
            left: var(--space-4);
            padding: var(--space-2) var(--space-4);
            background: var(--color-gold);
            color: var(--color-midnight);
            font-size: 0.75rem;
            font-weight: 700;
            border-radius: var(--radius-full);
        }

        .package-wishlist {
            position: absolute;
            top: var(--space-4);
            right: var(--space-4);
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0,0,0,0.5);
            border: none;
            border-radius: 50%;
            color: var(--color-white);
            cursor: pointer;
        }

            .package-wishlist:hover, .package-wishlist.active {
                background: var(--color-error);
            }

        .package-content {
            padding: var(--space-5);
        }

        .package-location {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            font-size: 0.8125rem;
            color: var(--color-gold);
            margin-bottom: var(--space-2);
        }

        .package-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: var(--space-3);
        }

            .package-title a {
                color: inherit;
                text-decoration: none;
            }

                .package-title a:hover {
                    color: var(--color-gold);
                }

        .package-meta {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-4);
        }

        .package-meta-item {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            font-size: 0.875rem;
            color: var(--color-silver);
        }

            .package-meta-item i {
                color: var(--color-gold);
            }

        .package-description {
            font-size: 0.9375rem;
            color: var(--color-silver);
            margin-bottom: var(--space-4);
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .package-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: var(--space-4);
            border-top: 1px solid var(--color-slate);
        }

        .package-price-label {
            font-size: 0.75rem;
            color: var(--color-silver);
        }

        .package-price-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--color-gold);
        }

            .package-price-value span {
                font-size: 0.875rem;
                font-weight: 400;
                color: var(--color-silver);
            }

            .package-price-value .old-price {
                text-decoration: line-through;
                color: var(--color-silver);
                font-size: 1rem;
                margin-right: var(--space-2);
            }

        .loading {
            display: flex;
            justify-content: center;
            padding: var(--space-7);
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        .empty-state {
            text-align: center;
            padding: var(--space-7);
            color: var(--color-silver);
            grid-column: 1 / -1;
        }

            .empty-state i {
                font-size: 4rem;
                margin-bottom: var(--space-4);
                opacity: 0.5;
            }

        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--color-charcoal);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-4) var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            z-index: 10000;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s;
        }

            .toast.show {
                opacity: 1;
                transform: translateY(0);
            }

            .toast.success {
                border-color: var(--color-success);
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 768px) {
            .nav-links, .nav-auth {
                display: none;
            }

            .packages-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="/" class="nav-brand"><div class="logo"><i class="fas fa-compass"></i></div><span>TRAVIL</span></a>
            <div class="nav-links"><a href="/">Home</a><a href="/packages" class="active">Packages</a><a href="/#destinations">Destinations</a></div>
            <div class="nav-auth" id="navAuth"><a href="/account/login" class="btn btn-ghost">Sign In</a><a href="/account/register" class="btn btn-primary">Get Started</a></div>
        </div>
    </nav>

    <section class="page-header">
        <div class="container">
            <h1>Travel Packages</h1>
            <p>Discover handcrafted journeys to the world's most incredible destinations.</p>
        </div>
    </section>

    <section class="filters-section">
        <div class="container">
            <div class="filter-group"><label>Search</label><input type="text" class="filter-control" id="searchInput" placeholder="Search..." oninput="filterPackages()"></div>
            <div class="filter-group"><label>Country</label><select class="filter-control" id="countryFilter" onchange="filterPackages()"><option value="">All</option></select></div>
            <div class="filter-group"><label>Price</label><select class="filter-control" id="priceFilter" onchange="filterPackages()"><option value="">All</option><option value="0-1000">Under $1,000</option><option value="1000-2000">$1,000-$2,000</option><option value="2000-99999">$2,000+</option></select></div>
            <div class="filter-group"><label>Sort</label><select class="filter-control" id="sortFilter" onchange="filterPackages()"><option value="default">Default</option><option value="price-low">Price: Low</option><option value="price-high">Price: High</option></select></div>
        </div>
    </section>

    <section class="packages-section"><div class="container"><div class="packages-grid" id="packagesGrid"><div class="loading"><div class="spinner"></div></div></div></div></section>
    <div id="toast" class="toast"><i class="fas fa-check-circle"></i><span id="toastMessage"></span></div>

    <script>
        var allPackages = [], filteredPackages = [];
        function showToast(m,t){var toast=document.getElementById('toast');document.getElementById('toastMessage').textContent=m;toast.className='toast '+(t||'success')+' show';setTimeout(function(){toast.classList.remove('show');},3000);}
        function updateNav(){var token=localStorage.getItem('token'),user=localStorage.getItem('user'),nav=document.getElementById('navAuth');if(token&&user){try{var u=JSON.parse(user);var isAdmin=u.role===0||u.role==='0'||u.role==='Admin';nav.innerHTML='<a href="'+(isAdmin?'/admin/dashboard':'/account/dashboard')+'" class="btn btn-ghost"><i class="fas fa-user"></i> Dashboard</a><a href="#" class="btn btn-outline" onclick="logout(event)">Logout</a>';}catch(e){}}}
        function logout(e){if(e)e.preventDefault();localStorage.removeItem('token');localStorage.removeItem('user');location.href='/';}
        function calcDuration(s,e){if(!s||!e)return 7;return Math.max(1,Math.ceil((new Date(e)-new Date(s))/(1000*60*60*24)));}
        function getImg(i){var imgs=['https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=800&q=80','https://images.unsplash.com/photo-1499856871958-5b9627545d1a?w=800&q=80','https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=800&q=80','https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800&q=80'];return imgs[i%imgs.length];}
        async function loadPackages(){var grid=document.getElementById('packagesGrid');try{var r=await fetch('/api/travelpackage');if(r.ok){var res=await r.json();allPackages=res.data||res||[];filteredPackages=allPackages.slice();populateCountries();renderPackages();}else{showEmpty();}}catch(e){showEmpty();}}
        function populateCountries(){var sel=document.getElementById('countryFilter'),countries=[];for(var i=0;i<allPackages.length;i++){var c=allPackages[i].country;if(c&&countries.indexOf(c)<0)countries.push(c);}countries.sort();for(var j=0;j<countries.length;j++){var o=document.createElement('option');o.value=countries[j];o.textContent=countries[j];sel.appendChild(o);}}
        function filterPackages(){var search=document.getElementById('searchInput').value.toLowerCase(),country=document.getElementById('countryFilter').value,price=document.getElementById('priceFilter').value,sort=document.getElementById('sortFilter').value;filteredPackages=[];for(var i=0;i<allPackages.length;i++){var p=allPackages[i],ms=!search||(p.destination&&p.destination.toLowerCase().indexOf(search)>=0)||(p.country&&p.country.toLowerCase().indexOf(search)>=0),mc=!country||p.country===country,mp=true;if(price){var r=price.split('-'),pr=p.discountedPrice||p.price||0;mp=pr>=parseInt(r[0])&&pr<=parseInt(r[1]);}if(ms&&mc&&mp)filteredPackages.push(p);}if(sort==='price-low')filteredPackages.sort(function(a,b){return(a.discountedPrice||a.price)-(b.discountedPrice||b.price);});else if(sort==='price-high')filteredPackages.sort(function(a,b){return(b.discountedPrice||b.price)-(a.discountedPrice||a.price);});renderPackages();}
        function renderPackages(){var grid=document.getElementById('packagesGrid');if(filteredPackages.length===0){grid.innerHTML='<div class="empty-state"><i class="fas fa-search"></i><h3>No Packages Found</h3></div>';return;}var html='';for(var i=0;i<filteredPackages.length;i++){var p=filteredPackages[i],img=p.imageUrl||getImg(i),dur=calcDuration(p.startDate,p.endDate),disc=p.discountedPrice&&p.discountedPrice<p.price,price=disc?p.discountedPrice:p.price;html+='<div class="package-card"><div class="package-image"><img src="'+img+'" alt="'+p.destination+'" onerror="this.src=\''+getImg(i)+'\'">';if(disc)html+='<span class="package-badge">Sale</span>';html+='<button class="package-wishlist" onclick="toggleWish(event,'+p.packageId+')"><i class="far fa-heart"></i></button></div><div class="package-content"><div class="package-location"><i class="fas fa-map-marker-alt"></i> '+(p.country||'')+'</div><h3 class="package-title"><a href="/packages/'+p.packageId+'">'+(p.destination||'Package')+'</a></h3><div class="package-meta"><div class="package-meta-item"><i class="far fa-clock"></i> '+dur+' Days</div><div class="package-meta-item"><i class="fas fa-bed"></i> '+(p.availableRooms||0)+' Rooms</div></div><div class="package-footer"><div><span class="package-price-label">From</span><div class="package-price-value">';if(disc)html+='<span class="old-price">$'+Math.round(p.price)+'</span>';html+='$'+Math.round(price)+' <span>/person</span></div></div><a href="/packages/'+p.packageId+'" class="btn btn-primary btn-sm">View</a></div></div></div>';}grid.innerHTML=html;}
        function showEmpty(){document.getElementById('packagesGrid').innerHTML='<div class="empty-state"><i class="fas fa-suitcase"></i><h3>No Packages</h3></div>';}
        async function toggleWish(e,id){e.preventDefault();e.stopPropagation();var t=localStorage.getItem('token');if(!t){showToast('Please login','error');return;}try{var r=await fetch('/api/wishlist/'+id,{method:'POST',headers:{'Authorization':'Bearer '+t}});if(r.ok){e.currentTarget.classList.add('active');showToast('Added to wishlist!');}else{showToast('Already in wishlist','error');}}catch(err){showToast('Error','error');}}
        document.addEventListener('DOMContentLoaded',function(){updateNav();loadPackages();});
    </script>
</body>
</html>
