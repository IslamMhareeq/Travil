@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account - TRAVIL</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=DM+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/auth.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <!-- Left Visual Panel -->
    <div class="visual-panel fixed-panel">
        <div class="visual-bg visual-bg-register"></div>
        <div class="visual-content">
            <div class="brand-logo">
                <div class="icon">
                    <i class="fas fa-paper-plane"></i>
                </div>
                <span>TRAVIL</span>
            </div>

            <div class="visual-features">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-globe"></i>
                    </div>
                    <div class="feature-content">
                        <h3>Worldwide Destinations</h3>
                        <p>Explore 500+ handpicked destinations across all continents</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="feature-content">
                        <h3>Secure Booking</h3>
                        <p>Your data is protected with enterprise-grade security</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <div class="feature-content">
                        <h3>24/7 Support</h3>
                        <p>Our travel experts are always here to help you</p>
                    </div>
                </div>
            </div>

            <div class="visual-testimonial">
                <p class="testimonial-text">"TRAVIL made our honeymoon absolutely perfect. The attention to detail and personalized service exceeded all expectations."</p>
                <div class="testimonial-author">
                    <div class="author-avatar">JM</div>
                    <div class="author-info">
                        <span class="author-name">Jessica & Michael</span>
                        <span class="author-role">Verified Travelers</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Form Panel -->
    <div class="form-panel with-fixed-visual">
        <div class="decoration decoration-1"></div>
        <div class="decoration decoration-2"></div>

        <div class="form-container wide">
            <div class="mobile-brand">
                <div class="icon">
                    <i class="fas fa-paper-plane"></i>
                </div>
                <span>TRAVIL</span>
            </div>

            <div class="form-header">
                <h1>Create Your Account</h1>
                <p>Join thousands exploring the world with us</p>
            </div>

            <div class="form-progress">
                <div class="progress-step active"></div>
                <div class="progress-step active"></div>
                <div class="progress-step"></div>
            </div>

            <div id="errorAlert" class="alert alert-danger d-none" role="alert">
                <i class="fas fa-exclamation-circle"></i>
                <span id="errorMessage"></span>
            </div>

            <div id="successAlert" class="alert alert-success d-none" role="alert">
                <i class="fas fa-check-circle"></i>
                <span id="successMessage"></span>
            </div>

            <form id="registerForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <div class="input-wrapper">
                            <input type="text" class="form-control no-icon" id="firstName" name="firstName" placeholder="John" required>
                        </div>
                        <div class="invalid-feedback" id="firstNameError"></div>
                    </div>

                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <div class="input-wrapper">
                            <input type="text" class="form-control no-icon" id="lastName" name="lastName" placeholder="Doe" required>
                        </div>
                        <div class="invalid-feedback" id="lastNameError"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-wrapper">
                        <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
                        <i class="fas fa-envelope input-icon"></i>
                    </div>
                    <div class="invalid-feedback" id="emailError"></div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-wrapper">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Create a strong password" required style="padding-right: 50px;">
                        <i class="fas fa-lock input-icon"></i>
                        <button type="button" class="toggle-password" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <div class="password-strength" id="passwordStrength">
                        <div class="strength-bar"></div>
                        <div class="strength-bar"></div>
                        <div class="strength-bar"></div>
                        <div class="strength-bar"></div>
                    </div>
                    <div class="strength-text" id="strengthText"></div>
                    <div class="invalid-feedback" id="passwordError"></div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <div class="input-wrapper">
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required style="padding-right: 50px;">
                        <i class="fas fa-lock input-icon"></i>
                        <button type="button" class="toggle-password" id="toggleConfirmPassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback" id="confirmPasswordError"></div>
                </div>

                <label class="checkbox-wrapper" style="margin-bottom: 28px;">
                    <input type="checkbox" id="agreeTerms" name="agreeTerms" required>
                    <span class="checkbox-custom"><i class="fas fa-check"></i></span>
                    <span class="checkbox-label">
                        I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
                    </span>
                </label>
                <div class="invalid-feedback" id="agreeTermsError" style="margin-top: -20px; margin-bottom: 24px;"></div>

                <button type="submit" class="btn-submit" id="submitBtn">
                    <span id="registerBtn">
                        Create Account
                        <i class="fas fa-arrow-right"></i>
                    </span>
                    <span id="registerLoader" class="d-none">
                        <span class="spinner-border"></span>
                        Creating account...
                    </span>
                </button>
            </form>

            <div class="divider">
                <span>or sign up with</span>
            </div>

            <div class="social-buttons">
                <button type="button" class="social-btn" title="Sign up with Google">
                    <i class="fab fa-google"></i>
                </button>
                <button type="button" class="social-btn" title="Sign up with Facebook">
                    <i class="fab fa-facebook-f"></i>
                </button>
                <button type="button" class="social-btn" title="Sign up with Apple">
                    <i class="fab fa-apple"></i>
                </button>
            </div>

            <div class="login-link">
                Already have an account? <a href="/account/login">Sign in</a>
            </div>

            <div class="form-footer static">
                © 2025 TRAVIL. All rights reserved.
            </div>
        </div>
    </div>

    <script src="~/js/register.js" asp-append-version="true"></script>
</body>
</html>
