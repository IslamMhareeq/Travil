@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - TRAVIL</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=DM+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/auth.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <!-- Left Visual Panel -->
    <div class="visual-panel">
        <div class="visual-bg visual-bg-login"></div>
        <div class="visual-content">
            <div class="brand-logo">
                <div class="icon">
                    <i class="fas fa-paper-plane"></i>
                </div>
                <span>TRAVIL</span>
            </div>

            <div class="visual-quote">
                <blockquote>"The world is a book, and those who do not travel read only one page."</blockquote>
                <cite>— Saint Augustine</cite>
            </div>

            <div class="visual-stats">
                <div class="stat-item">
                    <div class="stat-number">500+</div>
                    <div class="stat-label">Destinations</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">50K+</div>
                    <div class="stat-label">Happy Travelers</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">98%</div>
                    <div class="stat-label">Satisfaction</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Form Panel -->
    <div class="form-panel">
        <div class="decoration decoration-1"></div>
        <div class="decoration decoration-2"></div>

        <div class="form-container">
            <div class="mobile-brand">
                <div class="icon">
                    <i class="fas fa-paper-plane"></i>
                </div>
                <span>TRAVIL</span>
            </div>

            <div class="form-header">
                <h1>Welcome Back</h1>
                <p>Sign in to continue your journey</p>
            </div>

            <div id="errorAlert" class="alert alert-danger d-none" role="alert">
                <i class="fas fa-exclamation-circle"></i>
                <span id="errorMessage"></span>
            </div>

            <div id="successAlert" class="alert alert-success d-none" role="alert">
                <i class="fas fa-check-circle"></i>
                <span id="successMessage"></span>
            </div>

            <form id="loginForm">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-wrapper">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                        <i class="fas fa-envelope input-icon"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-wrapper">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required style="padding-right: 50px;">
                        <i class="fas fa-lock input-icon"></i>
                        <button type="button" class="toggle-password" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-options">
                    <label class="checkbox-wrapper">
                        <input type="checkbox" id="rememberMe" name="rememberMe">
                        <span class="checkbox-custom"><i class="fas fa-check"></i></span>
                        <span class="checkbox-label">Remember me</span>
                    </label>
                    <a href="#" class="forgot-link">Forgot password?</a>
                </div>

                <button type="submit" class="btn-submit" id="submitBtn">
                    <span id="loginBtn">
                        Sign In
                        <i class="fas fa-arrow-right"></i>
                    </span>
                    <span id="loginLoader" class="d-none">
                        <span class="spinner-border"></span>
                        Signing in...
                    </span>
                </button>
            </form>

            <div class="divider">
                <span>or continue with</span>
            </div>

            <div class="social-buttons">
                <button type="button" class="social-btn" title="Sign in with Google">
                    <i class="fab fa-google"></i>
                </button>
                <button type="button" class="social-btn" title="Sign in with Facebook">
                    <i class="fab fa-facebook-f"></i>
                </button>
                <button type="button" class="social-btn" title="Sign in with Apple">
                    <i class="fab fa-apple"></i>
                </button>
            </div>

            <div class="register-link">
                Don't have an account? <a href="/account/register">Create one</a>
            </div>
        </div>

        <div class="form-footer">
            © 2025 TRAVIL. All rights reserved.
        </div>
    </div>

    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>
